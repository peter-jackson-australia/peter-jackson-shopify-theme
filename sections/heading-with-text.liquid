{% comment %}
  Heading with Text
{% endcomment %}

{{ 'section-heading-with-text.css' | asset_url | stylesheet_tag }}

<div
  class="heading-with-text heading-with-text--{{ section.settings.alignment }}"
  {% if section.settings.anchor_id %}
    id="{{ section.settings.anchor_id | downcase | replace: ' ', '-' }}-segment"
  {% endif %}
  style="
    {% if section.settings.show_top_border %}border-top: 1px solid var(--neutral-50);{% endif %}
    {% if section.settings.show_bottom_border %}border-bottom: 1px solid var(--neutral-50);{% endif %}
  "
>
  <div class="heading-with-text__container">
    <div class="heading-with-text__heading-group">
      {% if section.settings.leading_text %}
        <p class="heading-with-text__leading body--uppercase {% if section.settings.leading_text_animation != 'none' %}{{ section.settings.leading_text_animation }}{% endif %}">
          {{ section.settings.leading_text }}
        </p>
      {% endif %}

      {% if section.settings.heading %}
        <h2 class="heading-with-text__heading {% if section.settings.heading_style == 'decorative' %}heading--decorative{% else %}heading--2xl{% endif %} {% if section.settings.heading_animation != 'none' %} {{ section.settings.heading_animation }}{% endif %}">
          {{ section.settings.heading }}
        </h2>
      {% endif %}
    </div>

    {% if section.settings.content != blank %}
      <div class="heading-with-text__content body metafield-rich_text_field {% if section.settings.content_animation != 'none' %}{{ section.settings.content_animation }}{% endif %}">
        {{ section.settings.content }}
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Heading with Text",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "anchor_id",
      "label": "Anchor ID (lowercase with hyphens)",
      "info": "Example: history or about-us"
    },
    {
      "type": "checkbox",
      "id": "show_top_border",
      "label": "Show top border",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_bottom_border",
      "label": "Show bottom border",
      "default": false
    },
    {
      "type": "text",
      "id": "leading_text",
      "label": "Leading Text",
      "default": "Introduction"
    },
    {
      "type": "select",
      "id": "leading_text_animation",
      "label": "Leading Text Animation",
      "options": [
        {
          "value": "none",
          "label": "None"
        },
        {
          "value": "animate-word-slide-up-scroll",
          "label": "Slide Up Words"
        },
        {
          "value": "animate-word-rotate-scroll",
          "label": "Rotate In Words"
        },
        {
          "value": "animate-paragraph-slide-up-scroll",
          "label": "Slide Up"
        }
      ],
      "default": "none"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Section Heading"
    },
    {
      "type": "select",
      "id": "heading_style",
      "label": "Heading Style",
      "options": [
        {
          "value": "normal",
          "label": "Normal"
        },
        {
          "value": "decorative",
          "label": "Decorative"
        }
      ],
      "default": "normal"
    },
    {
      "type": "select",
      "id": "heading_animation",
      "label": "Heading Animation",
      "options": [
        {
          "value": "none",
          "label": "None"
        },
        {
          "value": "animate-word-slide-up-scroll",
          "label": "Slide Up Words"
        },
        {
          "value": "animate-word-rotate-scroll",
          "label": "Rotate In Words"
        },
        {
          "value": "animate-paragraph-slide-up-scroll",
          "label": "Slide Up"
        }
      ],
      "default": "none"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default": "<p>Add your content here. This area uses the rich text editor so you can format text, add links, and more.</p>"
    },
    {
      "type": "select",
      "id": "content_animation",
      "label": "Content Animation",
      "options": [
        {
          "value": "none",
          "label": "None"
        },
        {
          "value": "animate-word-slide-up-scroll",
          "label": "Slide Up Words"
        },
        {
          "value": "animate-word-rotate-scroll",
          "label": "Rotate In Words"
        },
        {
          "value": "animate-paragraph-slide-up-scroll",
          "label": "Slide Up"
        },
        {
          "value": "animate-word-opacity-scroll",
          "label": "Fade In Words"
        }
      ],
      "default": "none"
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Text Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    }
  ],
  "presets": [
    {
      "name": "Heading with Text",
      "category": "Text"
    }
  ],
  "enabled_on": {
    "templates": ["index", "page", "article", "blog"]
  }
}
{% endschema %}
