{% comment %}
  Heading with Text
{% endcomment %}

<style>
  .heading-with-text {
    padding: var(--space-2xl) var(--space-m);
    padding-bottom: calc(var(--space-2xl) - var(--space-m));
    display: flex;
    flex-direction: column;
    gap: var(--space-m);
    {% if section.settings.show_top_border %}border-top: 1px solid var(--neutral-200);{% endif %}
    {% if section.settings.show_bottom_border %}border-bottom: 1px solid var(--neutral-200);{% endif %}
  }

  .heading-with-text--left {
    text-align: left;
  }

  .heading-with-text--center {
    text-align: center;
  }

  .heading-with-text--right {
    text-align: right;
  }

  .heading-with-text__heading-group {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .heading-with-text__heading-group > p,
  .heading-with-text__heading-group > h2,
  .heading-with-text__content {
    max-width: 80ch;
    margin: 0 auto;
  }
</style>

<div
  class="heading-with-text heading-with-text--{{ section.settings.alignment }}"
  {% if section.settings.anchor_id != blank %}
    id="{{ section.settings.anchor_id | downcase | replace: ' ', '-' }}-segment"
  {% endif %}
>
  <div class="heading-with-text__heading-group">
    {% if section.settings.leading_text != blank %}
      <p class="heading-with-text__leading body--uppercase">{{ section.settings.leading_text }}</p>
    {% endif %}

    {% if section.settings.heading != blank %}
      <h2 class="heading-with-text__heading {% if section.settings.heading_style == 'decorative' %}heading--decorative{% else %}heading--2xl{% endif %}">
        {{ section.settings.heading }}
      </h2>
    {% endif %}
  </div>

  {% if section.settings.content != blank %}
    <div class="heading-with-text__content body metafield-rich_text_field">
      {{ section.settings.content }}
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Heading with Text",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "anchor_id",
      "label": "Anchor ID (lowercase with hyphens)",
      "info": "Example: history or about-us"
    },
    {
      "type": "checkbox",
      "id": "show_top_border",
      "label": "Show top border",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_bottom_border",
      "label": "Show bottom border",
      "default": false
    },
    {
      "type": "text",
      "id": "leading_text",
      "label": "Leading Text",
      "default": "Introduction"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Section Heading"
    },
    {
      "type": "select",
      "id": "heading_style",
      "label": "Heading Style",
      "options": [
        {
          "value": "normal",
          "label": "Normal"
        },
        {
          "value": "decorative",
          "label": "Decorative"
        }
      ],
      "default": "normal"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default": "<p>Add your content here. This area uses the rich text editor so you can format text, add links, and more.</p>"
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Text Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    }
  ],
  "presets": [
    {
      "name": "Heading with Text",
      "category": "Text"
    }
  ],
  "enabled_on": {
    "templates": ["index", "page", "article", "blog"]
  }
}
{% endschema %}
