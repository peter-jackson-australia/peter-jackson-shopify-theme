{% stylesheet %}
  .hero {
    position: relative;
    width: 100%;
    height: calc(100dvh - 80px);
    overflow: hidden;
  }

  .hero__background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  .hero__content {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    z-index: 2;
    padding: 0 var(--space-l) var(--space-l) var(--space-l);
    display: grid;
    gap: var(--space-s);
    color: var(--white);
    background: linear-gradient(to top, rgba(0, 0, 0, 0.5), transparent);
  }

  .hero__content--left {
    text-align: left;
    justify-items: start;
  }

  .hero__content--center {
    text-align: center;
    justify-items: center;
  }

  .hero__content--right {
    text-align: right;
    justify-items: end;
  }

  .hero__description {
    max-width: 80ch;
  }

{% endstylesheet %}

{% if section.settings.desktop_image or section.settings.mobile_image %}
  <section id="hero-primary" class="hero" aria-label="{{ section.settings.heading | escape }}">
    {% if section.settings.desktop_image %}
      {{
        section.settings.desktop_image
        | image_url: width: 2000
        | image_tag:
          class: 'hero__background hero__background--desktop',
          loading: 'eager',
          alt: section.settings.desktop_image.alt
      }}
    {% endif %}

    {% if section.settings.mobile_image %}
      {{
        section.settings.mobile_image
        | image_url: width: 1080
        | image_tag:
          class: 'hero__background hero__background--mobile',
          loading: 'eager',
          alt: section.settings.mobile_image.alt
      }}
    {% endif %}
    <div class="hero__content hero__content--{{ section.settings.content_alignment | default: 'center' }}">
      <h1 class="heading--3xl">{{ section.settings.heading }}</h1>

      <div class="heading--xl">
        {{ section.settings.description }}
      </div>

      {% if section.settings.button_link and section.settings.button_label %}
        <a
          href="{{ section.settings.button_link }}"
          class="button button--white"
          aria-label="{{ section.settings.button_label | escape }}"
        >
          {{ section.settings.button_label }}
        </a>
      {% endif %}
    </div>
  </section>
{% endif %}

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop Background Image"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to Our Store"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Discover our latest collection</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "select",
      "id": "content_alignment",
      "label": "Content Alignment",
      "default": "center",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}
