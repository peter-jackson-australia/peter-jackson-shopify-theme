<style>
  .hero {
    position: relative;
    height: calc(100dvh - var(--space-xl));
    overflow: hidden;
  }

  .hero__background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  .hero__overlay {
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: 2;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.6), transparent);
  }

  .hero__content {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    z-index: 3;
    padding: 0 var(--space-m) var(--space-2xl) var(--space-m);
    display: grid;
    gap: var(--space-s);
    color: var(--white);
  }

  .hero__content--left {
    text-align: left;
    justify-items: start;
  }

  .hero__content--center {
    text-align: center;
    justify-items: center;
  }

  .hero__content--right {
    text-align: right;
    justify-items: end;
  }

  .hero__description {
    max-width: 80ch;
  }

  @media screen and (max-width: 768px) {
    .hero__content {
      padding-bottom: var(--space-xl);
      text-align: left;
      justify-items: start;
    }
  }
</style>

{% if section.settings.desktop_image or section.settings.mobile_image %}
  <div id="hero-primary" class="hero" aria-label="{{ section.settings.heading | escape }}">
    {% if section.settings.desktop_image %}
      {{
        section.settings.desktop_image
        | image_url: width: 2000
        | image_tag:
          class: 'hero__background hero__background--desktop',
          alt: section.settings.desktop_image.alt,
          preload: true
      }}
    {% endif %}

    {% if section.settings.mobile_image %}
      {{
        section.settings.mobile_image
        | image_url: width: 768
        | image_tag:
          class: 'hero__background hero__background--mobile',
          alt: section.settings.mobile_image.alt,
          preload: true
      }}
    {% endif %}
    <div class="hero__overlay"></div>
    <div class="hero__content hero__content--{{ section.settings.content_alignment | default: 'center' }}">
      <h1 class="heading--3xl">{{ section.settings.heading }}</h1>

      <div class="heading--l">
        {{ section.settings.description }}
      </div>

      {% if section.settings.button_link and section.settings.button_label %}
        <a
          href="{{ section.settings.button_link }}"
          class="button button--white"
          aria-label="{{ section.settings.button_label | escape }}"
        >
          {{ section.settings.button_label }}
        </a>
      {% endif %}
    </div>
  </div>
{% endif %}

{% schema %}
{
  "name": "Hero Section",
  "tag": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop Background Image"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to Our Store"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description",
      "default": "Discover our latest collection"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "select",
      "id": "content_alignment",
      "label": "Content Alignment",
      "default": "center",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ],
  "disabled_on": {
    "templates": ["product", "404", "collection", "gift_card", "list-collections", "password", "policy", "search"],
    "groups": ["header", "footer"]
  }
}
{% endschema %}
