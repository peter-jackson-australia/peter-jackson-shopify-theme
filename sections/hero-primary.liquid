{% if section.settings.desktop_image or section.settings.mobile_image %}
  <section id="hero-primary" class="hero" aria-label="{{ section.settings.heading | escape }}">
    {% if section.settings.desktop_image %}
      {{
        section.settings.desktop_image
        | image_url: width: 2400
        | image_tag:
          class: 'hero__background hero__background--desktop',
          loading: 'eager',
          sizes: '100vw',
          alt: section.settings.desktop_image.alt
        | escape
      }}
    {% endif %}

    {% if section.settings.mobile_image %}
      {{
        section.settings.mobile_image
        | image_url: width: 750
        | image_tag:
          class: 'hero__background hero__background--mobile',
          loading: 'eager',
          sizes: '100vw',
          alt: section.settings.mobile_image.alt
        | escape
      }}
    {% elsif section.settings.desktop_image %}
      {{
        section.settings.desktop_image
        | image_url: width: 750
        | image_tag:
          class: 'hero__background hero__background--mobile',
          loading: 'eager',
          sizes: '100vw',
          alt: section.settings.desktop_image.alt
        | escape
      }}
    {% endif %}

    <div class="hero__content hero__content--{{ section.settings.content_alignment | default: 'center' }}">
      <h1 class="hero__heading">{{ section.settings.heading }}</h1>

      <div class="hero__description">
        {{ section.settings.description }}
      </div>

      {% if section.settings.button_link and section.settings.button_label %}
        <a
          href="{{ section.settings.button_link }}"
          class="hero__button"
          aria-label="{{ section.settings.button_label | escape }}"
        >
          {{ section.settings.button_label }}
        </a>
      {% endif %}
    </div>
  </section>
{% endif %}

{% stylesheet %}
  .hero {
    position: relative;
    width: 100%;
    height: 100dvh;
    overflow: hidden;
  }

  .hero__background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  .hero__content {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    z-index: 2;
    padding: 2rem;
    display: grid;
    gap: 1rem;
    color: white;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
    background: linear-gradient(to top, rgba(0, 0, 0, 0.6), transparent);
  }

  .hero__content--left {
    text-align: left;
    justify-items: start;
  }

  .hero__content--center {
    text-align: center;
    justify-items: center;
  }

  .hero__content--right {
    text-align: right;
    justify-items: end;
  }

  .hero__heading {
    margin: 0;
    font-size: clamp(2rem, 5vw, 4rem);
  }

  .hero__description {
    max-width: 65ch;
    font-size: clamp(1rem, 3vw, 1.25rem);
  }

  .hero__button {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background-color: white;
    color: black;
    text-decoration: none;
    border-radius: 4px;
    transition: background-color 0.3s, color 0.3s;
  }

  .hero__button:hover {
    background-color: #f0f0f0;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop Background Image"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to Our Store"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Discover our latest collection</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "select",
      "id": "content_alignment",
      "label": "Content Alignment",
      "default": "center",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}
