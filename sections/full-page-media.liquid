{{ 'section-full-page-media.css' | asset_url | stylesheet_tag }}

{% assign section_id = section.id %}
{% assign media_type = section.settings.media_type %}
{% assign desktop_image = section.settings.desktop_image %}
{% assign mobile_image = section.settings.mobile_image %}
{% assign video = section.settings.video %}
{% assign video_poster = section.settings.video_poster %}
{% assign link = section.settings.link %}
{% assign link_text = section.settings.link_text | default: 'Learn more' %}
{% assign alt_text = section.settings.alt_text | default: 'Full page media' %}
{% assign alt_text_escaped = alt_text | escape %}
{% assign video_poster_url = video_poster | image_url %}
{% assign alt_value = alt_text | default: desktop_image.alt %}

<div
  id="full-page-media-{{ section_id }}"
  class="full-page-media"
  aria-label="{{ alt_text_escaped }}"
>
  {% if media_type == 'image' %}
    {% if desktop_image %}
      {% if link %}
        <a
          href="{{ link }}"
          class="full-page-media__link"
          aria-label="{{ link_text }}"
        ></a>
      {% endif %}

      <picture>
        {% if mobile_image %}
          <source
            media="(max-width: 768px)"
            srcset="
              {{ mobile_image | image_url: width: 400 }} 1x,
              {{ mobile_image | image_url: width: 800 }} 2x
            "
          >
        {% endif %}

        {{
          desktop_image
          | image_url: width: 3000
          | image_tag:
            class: 'full-page-media__image',
            alt: alt_value,
            loading: 'lazy',
            decoding: 'async',
            widths: '400, 600, 800, 1000, 1200, 1400, 1600, 1800, 2000, 2400, 3000',
            sizes: '(max-width: 400px) 400px, (max-width: 600px) 600px, (max-width: 800px) 800px, (max-width: 1000px) 1000px, (max-width: 1200px) 1200px, (max-width: 1400px) 1400px, (max-width: 1600px) 1600px, (max-width: 1800px) 1800px, (max-width: 2000px) 2000px, (max-width: 2400px) 2400px, 100vw'
        }}
      </picture>
    {% endif %}
  {% elsif media_type == 'video' and video %}
    {% if link %}
      <a
        href="{{ link }}"
        class="full-page-media__link"
        aria-label="{{ link_text }}"
      ></a>
    {% endif %}
    <div class="full-page-media__video">
      {{
        video
        | video_tag:
          autoplay: true,
          loop: true,
          muted: true,
          controls: false,
          playsinline: true,
          poster: video_poster_url
      }}
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Full Page Media",
  "tag": "section",
  "settings": [
    {
      "type": "select",
      "id": "media_type",
      "label": "Media Type",
      "options": [
        {
          "value": "image",
          "label": "Image"
        },
        {
          "value": "video",
          "label": "Video"
        }
      ],
      "default": "image"
    },
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop Image",
      "info": "Used when Media Type is set to Image"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile Image (optional)",
      "info": "If not provided, Desktop Image will be used on mobile devices"
    },
    {
      "type": "video",
      "id": "video",
      "label": "Video",
      "info": "Used when Media Type is set to Video. MP4 format recommended."
    },
    {
      "type": "image_picker",
      "id": "video_poster",
      "label": "Video Poster Image",
      "info": "Shown while video loads. Used when Media Type is set to Video"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link",
      "info": "Add a link to make the media clickable"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link accessibility text",
      "default": "Learn more",
      "info": "Text for screen readers"
    },
    {
      "type": "text",
      "id": "alt_text",
      "label": "Accessibility text",
      "info": "Describe the content for screen readers",
      "default": "Full page media"
    }
  ],
  "presets": [
    {
      "name": "Full Page Media",
      "category": "Media",
      "settings": {
        "media_type": "image"
      }
    }
  ],
  "enabled_on": {
    "templates": ["index", "page", "article", "blog"]
  }
}
{% endschema %}
