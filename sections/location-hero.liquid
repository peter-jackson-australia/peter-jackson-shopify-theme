{{ 'section-location-hero.css' | asset_url | stylesheet_tag }}

{% assign location = page.metafields.custom.location_reference.value %}
{% assign default_image = section.settings.default_image %}

{% if location %}
  {% assign location_state = location.location_state %}
  {% assign location_image = location.location_image %}
  {% assign location_name = location.location_name %}
  {% assign google_maps_link = location.google_maps_link %}
  {% assign street_address = location.street_address %}
  {% assign email_address = location.email_address %}
  {% assign phone_number = location.phone_number %}
  {% assign opening_hours = location.opening_hours %}

  <div class="location-hero" data-state="{{ location_state }}">
    <div class="location-hero__image">
      {% if location_image %}
        <img
          src="{{ location_image | image_url: width: 1400, height: 1400 }}"
          alt="{{ location_name }}"
          width="600"
          height="600"
        >
      {% else %}
        <img
          src="{{ default_image | image_url: width: 1400, height: 1400 }}"
          alt="{{ location_name }}"
          width="600"
          height="600"
        >
      {% endif %}
    </div>

    <div class="location-hero__content">
      <div class="location-hero__header">
        <div class="location-hero__status-dot" id="location-status-dot"></div>
        <h1 class="location-hero__title heading--2xl">{{ location_name }}</h1>
      </div>

      <div class="location-hero__address body">
        <a href="{{ google_maps_link }}" target="_blank">{{ street_address }}</a>
      </div>

      <div class="location-hero__email body">
        <a href="mailto:{{ email_address }}">{{ email_address }}</a>
      </div>

      <div class="location-hero__phone body">
        <a href="tel:{{ phone_number }}">{{ phone_number }}</a>
      </div>

      <div class="location-hero__hours">
        <div class="location-hero__hours-title body--bold">Opening Hours:</div>
        <pre class="location-hero__hours-display body" id="opening-hours-display">{{ opening_hours }}</pre>
      </div>

      {% if location_description %}
        <div class="location-hero__description body">{{ location_description }}</div>
      {% endif %}

      <a href="mailto:{{ email_address }}" class="location-hero__button body">Contact Us</a>
    </div>
  </div>

  <script
    src="{{ "section-location-hero.js" | asset_url }}"
    defer
  ></script>
{% endif %}

{% schema %}
{
  "name": "Location Hero",
  "tag": "section",
  "enabled_on": {
    "templates": ["page"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "default_image",
      "label": "Default Location Image",
      "info": "Used when no image is set in the location metaobject"
    }
  ]
}
{% endschema %}
