{{ 'section-location-hero.css' | asset_url | stylesheet_tag }}

{% if page.metafields.custom.location_reference.value %}
  <div class="location-hero" data-state="{{ page.metafields.custom.location_reference.value.location_state }}">
    <div class="location-hero__image">
      {% if page.metafields.custom.location_reference.value.location_image %}
        <img
          src="{{ page.metafields.custom.location_reference.value.location_image | image_url: width: 1400, height: 1400 }}"
          alt="{{ page.metafields.custom.location_reference.value.location_name }}"
          width="600"
          height="600"
        >
      {% else %}
        <img
          src="{{ section.settings.default_image | image_url: width: 1400, height: 1400 }}"
          alt="{{ page.metafields.custom.location_reference.value.location_name }}"
          width="600"
          height="600"
        >
      {% endif %}
    </div>

    <div class="location-hero__content">
      <div class="location-hero__header">
        <div class="location-hero__status-dot" id="location-status-dot"></div>
        <h1 class="location-hero__title heading--2xl">{{ page.metafields.custom.location_reference.value.location_name }}</h1>
      </div>

      <div class="location-hero__address body">
        <a href="{{ page.metafields.custom.location_reference.value.google_maps_link }}" target="_blank">{{ page.metafields.custom.location_reference.value.street_address }}</a>
      </div>

      <div class="location-hero__email body">
        <a href="mailto:{{ page.metafields.custom.location_reference.value.email_address }}">{{ page.metafields.custom.location_reference.value.email_address }}</a>
      </div>

      <div class="location-hero__phone body">
        <a href="tel:{{ page.metafields.custom.location_reference.value.phone_number }}">{{ page.metafields.custom.location_reference.value.phone_number }}</a>
      </div>

      <div class="location-hero__hours">
        <div class="location-hero__hours-title body--bold">Opening Hours:</div>
        <pre class="location-hero__hours-display body" id="opening-hours-display">{{ page.metafields.custom.location_reference.value.opening_hours }}</pre>
      </div>

      {% if page.metafields.custom.location_reference.value.location_description %}
        <div class="location-hero__description body">{{ page.metafields.custom.location_reference.value.location_description }}</div>
      {% endif %}

      <a href="mailto:{{ page.metafields.custom.location_reference.value.email_address }}" class="location-hero__button body">Contact Us</a>
    </div>
  </div>

  <script
    src="{{ "section-location-hero.js" | asset_url }}"
    defer
  ></script>
{% endif %}

{% schema %}
{
  "name": "Location Hero",
  "tag": "section",
  "enabled_on": {
    "templates": ["page"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "default_image",
      "label": "Default Location Image",
      "info": "Used when no image is set in the location metaobject"
    }
  ]
}
{% endschema %}
