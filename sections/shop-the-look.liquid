{% comment %}
  Shop The Look Section
{% endcomment %}

{% liquid
  assign active_products = 0
  for item in product.metafields.custom.shop_the_look.value
    assign active_products = forloop.index
  endfor
%}
{% assign shop_the_look_count = active_products %}

{% if shop_the_look_count > 0 and product.images.size > 1 %}
  <div class="shop-the-look" id="section-{{ section.id }}">
    {{ 'section-shop-the-look.css' | asset_url | stylesheet_tag }}

    {% if shop_the_look_count > 1 %}
      <div class="shop-the-look__modal-container">
        <div class="shop-the-look__modal">
          <div class="shop-the-look__modal-slider splide">
            <div class="shop-the-look__modal-splide-track splide__track">
              <ul class="shop-the-look__modal-splide-list splide__list">
                {% for product in product.metafields.custom.shop_the_look.value %}
                  <li class="splide__slide">
                    <div
                      class="buyable-product-wrapper"
                      data-featured-image-id="{{ product.featured_image.id }}"
                      data-product-id="{{ product.id }}"
                      data-variants="{{ product.variants | json | escape}}"
                      ;
                      data-variant-inventory-quantities="[{% for variant in product.variants %}{{ variant.inventory_quantity | escape }}{% unless forloop.last %},{% endunless %}{% endfor %}]"
                      ;
                      data-product-title="{{ product.title | json | escape }}"
                      ;
                      data-show-low-stock-warning="{{ section.settings.show_low_stock_warning | json | escape }}"
                      ;
                    >
                      {% liquid
                        assign in_wishlist = false

                        if customer != null
                          for wishlist_product in customer.metafields.custom.wishlist.value
                            if wishlist_product.id == product.id
                              assign in_wishlist = true
                              break
                            endif
                          endfor
                        endif

                        render 'shop-the-look-modal-item', product: product, hasPrev: forloop.first != true, hasNext: forloop.last != true, in_wishlist: in_wishlist, heading: section.settings.heading
                      %}
                    </div>
                  </li>
                {% endfor %}
              </ul>
            </div>
          </div>
        </div>
      </div>
    {% endif %}

    <div class="shop-the-look__slider-container">
      <h2 class="heading--xl shop-the-look__heading">{{ section.settings.heading }}</h2>
      {% if shop_the_look_count > 1 %}
        <div class="shop-the-look__slider-wrapper">
          <div class="shop-the-look__slider splide">
            <div class="splide__track">
              <ul class="splide__list">
                {% for item in product.metafields.custom.shop_the_look.value %}
                  <li class="splide__slide shop-the-look__slide" data-product-id="{{ item.id }}">
                    <div class="shop-the-look__product-image-wrapper">
                      <a class="shop-the-look__product-link">
                        {% if item.featured_image != blank %}
                          <img
                            src="{{ item.featured_image | image_url: width: '600px' }}"
                            alt="{{ item.featured_image.alt | escape }}"
                            loading="lazy"
                            width="{{ item.featured_image.width }}"
                            height="{{ item.featured_image.width }}"
                            class="shop-the-look__product-image"
                          >
                        {% else %}
                          {{ 'product-1' | placeholder_svg_tag: 'shop-the-look__product-image placeholder' }}
                        {% endif %}

                        <h3 class="body--bold shop-the-look__product-title">{{ item.title }}</h3>

                        <p class="small shop-the-look__product-price">
                          {% if item.compare_at_price > item.price %}
                            <span class="shop-the-look__product-price--sale">
                              {{- item.price | money_with_currency -}}
                            </span>
                            <span class="shop-the-look__product-price--compare">
                              Was {{ item.compare_at_price | money_with_currency -}}
                            </span>
                          {% else %}
                            {{ item.price | money_with_currency }}
                          {% endif %}
                        </p>
                      </a>
                    </div>
                  </li>
                {% endfor %}
              </ul>
            </div>
            <div class="splide__arrows">
              <button class="splide__arrow splide__arrow--prev">{% render '_icon-arrow-see-less' %}</button>
              <button class="splide__arrow splide__arrow--next">{% render '_icon-arrow-see-more' %}</button>
            </div>
          </div>
        </div>
      {% else %}
        <div class="shop-the-look__single-product">
          {% assign single_product = product.metafields.custom.shop_the_look.value | first %}

          {% if single_product %}
            <a class="shop-the-look__product-link">
              <div class="shop-the-look__product-image-wrapper">
                {% if single_product.featured_image != blank %}
                  <img
                    src="{{ single_product.featured_image | image_url: width: '600px' }}"
                    alt="{{ single_product.featured_image.alt | escape }}"
                    loading="lazy"
                    width="{{ single_product.featured_image.width }}"
                    height="{{ single_product.featured_image.height }}"
                    class="shop-the-look__product-image"
                  >
                {% else %}
                  {{ 'product-1' | placeholder_svg_tag: 'shop-the-look__product-image placeholder' }}
                {% endif %}
              </div>

              <h3 class="body--bold shop-the-look__product-title">{{ single_product.title }}</h3>

              <p class="small shop-the-look__product-price">
                {% if product.compare_at_price > product.price %}
                  <span class="shop-the-look__product-price--sale">
                    {{- single_product.price | money_with_currency -}}
                  </span>
                  <span class="shop-the-look__product-price--compare">
                    {{- product.compare_at_price | money_with_currency -}}
                  </span>
                {% else %}
                  {{ single_product.price | money_with_currency }}
                {% endif %}
              </p>
            </a>
          {% endif %}
        </div>
      {% endif %}
    </div>

    <div class="shop-the-look__image-container">
      {% assign image_width = 1024 %}
      {% assign image_height = image_width | divided_by: product.images[1].aspect_ratio | ceil %}
      <img
        src="{{ product.images[1].src | image_url: width: image_width }}"
        srcset="
          {{ product.images[1].src | image_url: width: 600 }} 600w,
          {{ product.images[1].src | image_url: width: 800 }} 800w,
          {{ product.images[1].src | image_url: width: 1024 }} 1024w,
          {{ product.images[1].src | image_url: width: 1440 }} 1440w
        "
        sizes="(max-width: 768px) 100vw, 50vw"
        width="{{ image_width }}"
        height="{{ image_height }}"
        alt="{{ product.images[1].alt | default: product.title }}"
        loading="lazy"
        class="shop-the-look__image"
      >
    </div>
  </div>

  {% if shop_the_look_count > 1 %}
    <script
      src="{{ "section-shop-the-look.js" | asset_url }}"
      data-section-id="{{ section.id }}"
      data-products="{{ product.metafields.custom.shop_the_look.value | json | escape }}"
      defer
    ></script>
  {% endif %}
{% endif %}

{% schema %}
{
  "name": "Shop the Look",
  "limit": 1,
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Shop the Look"
    }
  ],
  "presets": [
    {
      "name": "Shop the Look",
      "category": "Product"
    }
  ],
  "enabled_on": {
    "templates": ["product"]
  }
}
{% endschema %}
