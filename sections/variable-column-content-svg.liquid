{{ 'section-variable-column-content-svg.css' | asset_url | stylesheet_tag }}

{% assign section_id = section.id %}
{% assign show_top_border = section.settings.show_top_border %}
{% assign show_bottom_border = section.settings.show_bottom_border %}
{% assign column_count = section.settings.column_count %}
{% assign anchor_id = section.settings.anchor_id %}

<div
  class="variable-column-content-svg"
  id="shopify-section-{{ section_id }}"
  style="
    {% if show_top_border %}border-top: 1px solid var(--neutral-50);{% endif %}
    {% if show_bottom_border %}border-bottom: 1px solid var(--neutral-50);{% endif %}
  "
>
  {% if column_count != blank %}
    {% assign column_count = column_count | plus: 0 %}
    <div
      class="variable-column-content-svg__grid"
      style="grid-template-columns: repeat({{ column_count }}, 1fr);"
      {% if anchor_id != blank %}
        id="{{ anchor_id | downcase | replace: ' ', '-' }}-segment"
      {% endif %}
    >
      {%- for block in section.blocks limit: column_count -%}
        {% assign block_image = block.settings.image %}
        {% assign block_image_link = block.settings.image_link %}
        {% assign block_top_text = block.settings.top_text %}
        {% assign block_svg_icon = block.settings.svg_icon %}
        {% assign block_bottom_text = block.settings.bottom_text %}
        {% assign block_content_alignment = block.settings.content_alignment %}

        {% if block.type == 'column_item' %}
            <div class="variable-column-content-svg__column" {{ block.shopify_attributes }}>
              {% if block_image_link != blank %}
                <a href="{{ block_image_link }}" class="variable-column-content-svg__column-link">
              {% endif %}
              
                {% if block_image != blank %}
                  {{
                    block_image
                    | image_url: width: 1440
                    | image_tag:
                      class: 'variable-column-content-svg__image',
                      sizes: '(max-width: 767px) 100vw, 1440px',
                      loading: 'lazy',
                      decoding: 'async',
                      alt: block_image.alt
                  }}
                {% endif %}
          
                <div class="variable-column-content-svg__content variable-column-content-svg__content--{{ block_content_alignment }}">
                  {% if block_top_text != blank %}
                    <div class="variable-column-content-svg__top-text heading--l">
                      {{ block_top_text }}
                    </div>
                  {% endif %}
          
                  {% if block_svg_icon != blank %}
                    {{
                      block_svg_icon
                      | image_url: width: block_svg_icon.wdith
                      | image_tag:
                        class: 'variable-column-content-svg__icon',
                        loading: 'lazy',
                        decoding: 'async',
                        alt: block_svg_icon.alt
                    }}
                  {% endif %}
          
                  {% if block_bottom_text != blank %}
                    <div class="variable-column-content-svg__bottom-text heading--l">
                      {{ block_bottom_text }}
                      <span>{% render '_icon-arrow-submit-light' %}</span>
                    </div>
                  {% endif %}
                </div>
              
              {% if block_image_link != blank %}
                </a>
              {% endif %}
            </div>
          {% endif %}
      {%- endfor -%}
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Variable Content SVG",
  "tag": "section",
  "class": "variable-column-content-svg-section",
  "settings": [
    {
      "type": "text",
      "id": "anchor_id",
      "label": "Anchor ID (lowercase with hyphens)",
      "info": "Example: history or about-us"
    },
    {
      "type": "checkbox",
      "id": "show_top_border",
      "label": "Show top border",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_bottom_border",
      "label": "Show bottom border",
      "default": false
    },
    {
      "type": "select",
      "id": "column_count",
      "label": "Number of Columns",
      "options": [
        {
          "value": "2",
          "label": "2 Columns"
        },
        {
          "value": "3",
          "label": "3 Columns"
        },
        {
          "value": "4",
          "label": "4 Columns"
        }
      ],
      "default": "2"
    }
  ],
  "blocks": [
    {
      "name": "Column Item",
      "type": "column_item",
      "limit": 4,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Background Image"
        },
        {
          "type": "url",
          "id": "image_link",
          "label": "Image Link",
          "info": "Add a link to make the background image clickable"
        },
        {
          "type": "text",
          "id": "top_text",
          "label": "Top Text"
        },
        {
          "type": "image_picker",
          "id": "svg_icon",
          "label": "SVG Icon"
        },
        {
          "type": "text",
          "id": "bottom_text",
          "label": "Bottom Text"
        },
        {
          "type": "select",
          "id": "content_alignment",
          "label": "Content Alignment",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "center"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Variable Column Content SVG",
      "blocks": [
        {
          "type": "column_item"
        },
        {
          "type": "column_item"
        }
      ],
      "category": "Image"
    }
  ],
  "enabled_on": {
    "templates": ["index", "page", "article", "blog"]
  }
}
{% endschema %}