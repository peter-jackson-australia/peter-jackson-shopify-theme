{% comment %}
  Blog Hero Section
{% endcomment %}

<style>
  .blog-hero {
    display: flex;
    flex-direction: column;
    width: 100%;
    padding-top: var(--space-2xl);
    padding-bottom: var(--space-2xl);
    {% if section.settings.show_top_border %}border-top: 1px solid var(--neutral-200);{% endif %}
    {% if section.settings.show_bottom_border %}border-bottom: 1px solid var(--neutral-200);{% endif %}
  }

  .blog-hero__image {
    width: 100%;
    position: relative;
    overflow: hidden;
  }

  .blog-hero__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .blog-hero__image-content {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 3;
    padding: var(--space-m);
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    color: var(--white);
  }

  .blog-hero__image-header {
    flex: 1;
    padding-right: var(--space-l);
  }

  .blog-hero__image-description-container {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .blog-hero__image-title {
    color: var(--white);
  }

  .blog-hero__image-description {
    color: var(--white);
    max-width: 100%;
    text-align: right;
  }

  .blog-hero__image-link {
    display: inline-flex;
    align-items: center;
    text-decoration: none;
    color: var(--white);
    gap: var(--space-xs);
    margin-left: auto;
  }

  .blog-hero__content {
    display: flex;
    padding: var(--space-2xl) var(--space-m);
    gap: var(--space-xl);
  }

  .blog-hero__header {
    display: flex;
    align-items: center;
    flex: 1;
  }

  .blog-hero__title {
    padding-right: var(--space-m);
    color: var(--neutral-950);
    white-space: nowrap;
  }

  .blog-hero__divider {
    height: 50px;
    width: 1px;
    background-color: var(--neutral-200);
  }

  .blog-hero__subtitle {
    padding-left: var(--space-m);
    color: var(--neutral-950);
    margin-top: -7px;
  }

  .blog-hero__description {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: end;
    gap: var(--space-m);
  }

  .blog-hero__text {
    color: var(--neutral-600);
    max-width: 80ch;
    text-align: right;
  }

  .blog-hero__link {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    color: var(--neutral-950);
    text-decoration: none;
  }

  .blog-hero__posts {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-2xs);
  }

  .blog-hero__post {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
    overflow: hidden;
  }

  .blog-hero__post-image {
    display: block;
    width: 100%;
    aspect-ratio: 1/1;
    overflow: hidden;
    margin-bottom: var(--space-xs);
    min-height: 550px;
  }

  .blog-hero__post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .blog-hero__post-content {
    padding-left: var(--space-m);
  }

  .blog-hero__post-category {
    color: var(--neutral-600);
    text-transform: uppercase;
    margin-bottom: var(--space-s);
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
  }

  .blog-hero__post-title {
    margin-bottom: var(--space-2xs);
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
  }

  .blog-hero__post-title a,
  .blog-hero__post-link-container {
    color: var(--neutral-950);
    text-decoration: none;
  }

  .blog-hero__post-excerpt {
    color: var(--neutral-600);
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .blog-hero__post-link {
    display: flex;
    gap: var(--space-xs);
  }

  @media screen and (max-width: 1000px) {
    .blog-hero {
      padding-top: var(--space-xl);
      padding-bottom: var(--space-xl);
    }


    .blog-hero__image-content {
      flex-direction: column;
      justify-content: end;
      gap: var(--space-m);
    }

    .blog-hero__image-header {
      flex: 0;
      padding-right: 0;
    }

    .blog-hero__image-description-container {
      display: flex;
      flex-direction: column;
      gap: var(--space-xs);
    }

    .blog-hero__image-description {
      text-align: left;
    }

    .blog-hero__image-link {
      margin-left: 0px;
    }

    .blog-hero__content {
      padding-top: var(--space-xl);
      padding-bottom: var(--space-xl);
      flex-direction: column;
      gap: var(--space-m);
    }

    .blog-hero__header {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-m);
    }

    .blog-hero__description {
      align-items: start;
    }

    .blog-hero__text {
      text-align: left;
    }

    .blog-hero__title {
      padding-right: 0;
    }

    .blog-hero__divider {
      display: none;
    }

    .blog-hero__subtitle {
      padding-left: 0px;
    }

    .blog-hero__posts {
      grid-template-columns: repeat(2, 1fr);
      gap: calc(var(--space-xs) + var(--space-xs));
      column-gap: var(--space-2xs);
    }

    .blog-hero__post-content {
      padding-right: var(--space-m);
    }
  }

  @media screen and (max-width: 480px) {
    .blog-hero__image {
      height: 60vh;
    }

    .blog-hero__image-content {
      padding: var(--space-l) var(--space-m);
    }

    .blog-hero__posts {
      grid-template-columns: 1fr;
      gap: calc(var(--space-xs) + var(--space-xs));
    }
  }
</style>

<div
  class="blog-hero"
  {% if section.settings.anchor_id != blank %}
    id="{{ section.settings.anchor_id | downcase | replace: ' ', '-' }}-segment"
  {% endif %}
>
  {% if section.settings.hero_image != blank %}
    <div class="blog-hero__image">
      <picture>
        {% if section.settings.hero_image_mobile != blank %}
          <source
            media="(max-width: 767px)"
            srcset="{{ section.settings.hero_image_mobile | image_url: width: 2000 }}"
          >
        {% endif %}
        {{
          section.settings.hero_image
          | image_url: width: 2000
          | image_tag: loading: 'lazy', alt: section.settings.heading, class: 'blog-hero__image-img'
        }}
      </picture>

      {% if section.settings.show_image_overlay %}
        <div class="blog-hero__image-content">
          <div class="blog-hero__image-header">
            {% if section.settings.image_heading != blank %}
              <h2 class="blog-hero__image-title heading--l {% if section.settings.image_heading_animation != 'none' %}{{ section.settings.image_heading_animation }}{% endif %}">
                {{ section.settings.image_heading }}
              </h2>
            {% endif %}
          </div>

          <div class="blog-hero__image-description-container">
            {% if section.settings.image_description != blank %}
              <div class="blog-hero__image-description body {% if section.settings.image_description_animation != 'none' %}{{ section.settings.image_description_animation }}{% endif %}">
                {{ section.settings.image_description }}
              </div>
            {% endif %}

            {% if section.settings.image_link_url != blank and section.settings.image_link_text != blank %}
              <a href="{{ section.settings.image_link_url }}" class="blog-hero__image-link body">
                {{ section.settings.image_link_text }}
                {% render 'icon-arrow-submit-white' %}
              </a>
            {% endif %}
          </div>
        </div>
      {% endif %}
    </div>
  {% endif %}

  <div class="blog-hero__content">
    <div class="blog-hero__header">
      {% if section.settings.heading != blank %}
        <h1 class="blog-hero__title heading--decorative {% if section.settings.heading_animation != 'none' %}{{ section.settings.heading_animation }}{% endif %}">
          {{ section.settings.heading }}
        </h1>
      {% endif %}

      <span class="blog-hero__divider"></span>

      {% if section.settings.subheading != blank %}
        <h2 class="blog-hero__subtitle heading--l {% if section.settings.subheading_animation != 'none' %}{{ section.settings.subheading_animation }}{% endif %}">
          {{ section.settings.subheading }}
        </h2>
      {% endif %}
    </div>

    <div class="blog-hero__description">
      {% if section.settings.description != blank %}
        <div class="blog-hero__text body {% if section.settings.description_animation != 'none' %}{{ section.settings.description_animation }}{% endif %}">
          {{ section.settings.description }}
        </div>
      {% endif %}

      {% if section.settings.cta_link != blank and section.settings.cta_text != blank %}
        <a href="{{ section.settings.cta_link }}" class="blog-hero__link body">
          {{ section.settings.cta_text }}
          {% render 'icon-arrow-submit-dark' %}
        </a>
      {% endif %}
    </div>
  </div>

  {% if section.settings.show_recent_posts %}
    <div class="blog-hero__recent">
      <div class="blog-hero__posts {% if section.settings.animate_posts %}animate-container-cards-scroll{% endif %}">
        {%- assign blog = blogs[section.settings.blog] -%}
        {% for article in blog.articles limit: 4 %}
          <article class="blog-hero__post">
            {% if article.image %}
              <a href="{{ article.url }}" class="blog-hero__post-image">
                {{ article.image | image_url: width: 2000 | image_tag: loading: 'lazy', alt: article.title }}
              </a>
            {% endif %}

            <div class="blog-hero__post-content">
              {% if article.tags.size > 0 %}
                <div class="blog-hero__post-category small">{{ article.tags.first }}</div>
              {% endif %}

              <h3 class="blog-hero__post-title heading--l">
                <a href="{{ article.url }}">{{ article.title }}</a>
              </h3>

              {% if article.excerpt.size > 0 %}
                <div class="blog-hero__post-excerpt body">{{ article.excerpt }}</div>
              {% elsif article.content.size > 0 %}
                <div class="blog-hero__post-excerpt body">{{ article.content | strip_html | truncatewords: 30 }}</div>
              {% endif %}
              <a href="{{ article.url }}" class="blog-hero__post-link-container">
                <span class="blog-hero__post-link body">Read Article {% render 'icon-arrow-submit-dark' %}</span>
              </a>
            </div>
          </article>
        {% endfor %}
      </div>
    </div>
  {% endif %}
</div>

