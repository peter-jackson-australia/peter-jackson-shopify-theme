{% comment %}
  Blog Hero Section
{% endcomment %}

{{ 'section-blog-hero.css' | asset_url | stylesheet_tag }}

<div
  class="blog-hero"
  style="
    {% if section.settings.show_top_border %}border-top: 1px solid var(--neutral-50);{% endif %}
    {% if section.settings.show_bottom_border %}border-bottom: 1px solid var(--neutral-50);{% endif %}
  "
  id="section-{{ section.id }}"
  {% if section.settings.anchor_id != blank %}
    id="{{ section.settings.anchor_id | downcase | replace: ' ', '-' }}-segment"
  {% endif %}
>
  <div class="blog-hero__content">
    <div class="blog-hero__content-header">
      {% if section.settings.heading != blank %}
        <h1 class="blog-hero__content-title heading--decorative {% if section.settings.heading_animation != 'none' %}{{ section.settings.heading_animation }}{% endif %}">
          {{ section.settings.heading }}
        </h1>
      {% endif %}

      <span class="blog-hero__content-divider"></span>

      {% if section.settings.subheading != blank %}
        <h2 class="blog-hero__content-subtitle heading--l {% if section.settings.subheading_animation != 'none' %}{{ section.settings.subheading_animation }}{% endif %}">
          {{ section.settings.subheading }}
        </h2>
      {% endif %}
    </div>

    <div class="blog-hero__content-description">
      {% if section.settings.description != blank %}
        <div class="blog-hero__content-text body {% if section.settings.description_animation != 'none' %}{{ section.settings.description_animation }}{% endif %}">
          {{ section.settings.description }}
        </div>
      {% endif %}

      {% if section.settings.cta_link != blank and section.settings.cta_text != blank %}
        <a href="{{ section.settings.cta_link }}" class="blog-hero__content-link body">
          {{ section.settings.cta_text }}
          {% render '_icon-arrow-submit-dark' %}
        </a>
      {% endif %}
    </div>
  </div>

  {% if section.settings.hero_image != blank %}
    <div class="blog-hero__image">
      <picture>
        {% if section.settings.hero_image_mobile != blank %}
          <source
            media="(max-width: 767px)"
            srcset="
              {{ section.settings.hero_image_mobile | image_url: width: 400 }} 1x,
              {{ section.settings.hero_image_mobile | image_url: width: 800 }} 2x
            "
          >
        {% endif %}

        {{
          section.settings.hero_image
          | image_url: width: 1920
          | image_tag:
            loading: 'lazy',
            decoding: 'async',
            alt: section.settings.heading,
            class: 'blog-hero__image-img',
            widths: '400, 600, 800, 1000, 1200, 1400, 1600, 1800, 2000, 2400, 3000',
            sizes: '(max-width: 400px) 400px, (max-width: 600px) 600px, (max-width: 800px) 800px, (max-width: 1000px) 1000px, (max-width: 1200px) 1200px, (max-width: 1400px) 1400px, (max-width: 1600px) 1600px, (max-width: 1800px) 1800px, (max-width: 2000px) 2000px, (max-width: 2400px) 2400px, 100vw'
        }}
      </picture>

      {% if section.settings.show_image_overlay %}
        <div class="blog-hero__image-content">
          <div class="blog-hero__image-header">
            {% if section.settings.image_heading != blank %}
              <h2 class="heading--l {% if section.settings.image_heading_animation != 'none' %}{{ section.settings.image_heading_animation }}{% endif %}">
                {{ section.settings.image_heading }}
              </h2>
            {% endif %}
          </div>

          <div class="blog-hero__image-description-container">
            {% if section.settings.image_description != blank %}
              <div class="blog-hero__image-description body {% if section.settings.image_description_animation != 'none' %}{{ section.settings.image_description_animation }}{% endif %}">
                {{ section.settings.image_description }}
              </div>
            {% endif %}

            {% if section.settings.image_link_url != blank and section.settings.image_link_text != blank %}
              <a href="{{ section.settings.image_link_url }}" class="blog-hero__image-link body">
                {{ section.settings.image_link_text }}
                {% render '_icon-arrow-submit-white' %}
              </a>
            {% endif %}
          </div>
        </div>
      {% endif %}
    </div>
  {% endif %}

  {% if section.settings.show_recent_posts %}
    <div class="blog-hero__posts {% if section.settings.animate_posts %}animate-container-cards-scroll{% endif %}">
      {% for article in blogs[section.settings.blog].articles limit: 6 %}
        <article class="blog-hero__post">
          {% if article.image %}
            <a href="{{ article.url }}" class="blog-hero__post-image-link">
              {{
                article.image
                | image_url: width: 850
                | image_tag:
                  loading: 'lazy',
                  decoding: 'async',
                  alt: article.title,
                  widths: '400, 600, 800, 1000, 1200, 1400, 1600, 1800, 2000, 2400, 3000',
                  sizes: '(max-width: 400px) 400px, (max-width: 600px) 600px, (max-width: 800px) 800px, (max-width: 1000px) 1000px, (max-width: 1200px) 1200px, (max-width: 1400px) 1400px, (max-width: 1600px) 1600px, (max-width: 1800px) 1800px, (max-width: 2000px) 2000px, (max-width: 2400px) 2400px, 100vw',
                  class: 'blog-hero__post-image'
              }}
            </a>
          {% endif %}

          <div class="blog-hero__post-content">
            {% if article.tags.size > 0 %}
              <div class="blog-hero__post-category small">{{ article.tags.first }}</div>
            {% endif %}

            <h3 class="blog-hero__post-title heading--l">
              <a href="{{ article.url }}">{{ article.title }}</a>
            </h3>

            <a href="{{ article.url }}" class="blog-hero__post-link-container">
              <span class="blog-hero__post-link body">Read Article {% render '_icon-arrow-submit-dark' %}</span>
            </a>
          </div>
        </article>
      {% endfor %}
    </div>

    <div class="blog-hero__slider-wrapper">
      <div class="blog-hero__slider splide">
        <div class="splide__arrows">
          <button class="splide__arrow splide__arrow--prev">{% render '_icon-arrow-see-less' %}</button>
          <button class="splide__arrow splide__arrow--next">{% render '_icon-arrow-see-more' %}</button>
        </div>
        <div class="splide__track">
          <ul class="splide__list">
            {% for article in blogs[section.settings.blog].articles limit: 6 %}
              <li class="splide__slide">
                <article class="blog-hero__post">
                  {% if article.image %}
                    <a href="{{ article.url }}" class="blog-hero__post-image-link">
                      {{
                        article.image
                        | image_url: width: 600
                        | image_tag:
                          loading: 'lazy',
                          decoding: 'async',
                          alt: article.title,
                          class: 'blog-hero__post-image'
                      }}
                    </a>
                  {% endif %}

                  <div class="blog-hero__post-content">
                    {% if article.tags.size > 0 %}
                      <div class="blog-hero__post-category small">{{ article.tags.first }}</div>
                    {% endif %}

                    <h3 class="blog-hero__post-title heading--l">
                      <a href="{{ article.url }}">{{ article.title }}</a>
                    </h3>

                    <a href="{{ article.url }}" class="blog-hero__post-link-container">
                      <span class="blog-hero__post-link body"
                        >Read Article {% render '_icon-arrow-submit-dark' -%}
                      </span>
                    </a>
                  </div>
                </article>
              </li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </div>
  {% endif %}
</div>

<script
  src="{{ 'section-blog-hero.js' | asset_url }}"
  data-section-id="{{ section.id }}"
  defer
></script>

