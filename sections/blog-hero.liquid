{% comment %}
  Blog Hero Section
{% endcomment %}

<style>
  .blog-hero {
    display: flex;
    flex-direction: column;
    width: 100%;
  }

  .blog-hero__image {
    width: 100%;
    position: relative;
    overflow: hidden;
  }

  .blog-hero__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .blog-hero__content {
    display: flex;
    padding: var(--space-xl) var(--space-m);
    gap: var(--space-xl);
  }

  .blog-hero__header {
    display: flex;
    align-items: center;
    flex: 1;
  }

  .blog-hero__title {
    margin: 0;
    padding-right: var(--space-m);
  }

  .blog-hero__divider {
    height: 50px;
    width: 1px;
    background-color: var(--neutral-200);
    margin: 0 var(--space-m);
  }

  .blog-hero__subtitle {
    margin: 0;
    padding-left: var(--space-m);
  }

  .blog-hero__description {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: var(--space-m);
  }

  .blog-hero__text {
    color: var(--neutral-600);
  }

  .blog-hero__link {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    color: var(--neutral-950);
    text-decoration: none;
    transition: opacity 0.3s ease;
  }

  .blog-hero__recent {
    padding: var(--space-xl) var(--space-m);
  }

  .blog-hero__recent-title {
    margin-bottom: var(--space-l);
  }

  .blog-hero__posts {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-l);
  }

  .blog-hero__post {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .blog-hero__post-image {
    display: block;
    width: 100%;
    aspect-ratio: 1/1;
    overflow: hidden;
    margin-bottom: var(--space-xs);
  }

  .blog-hero__post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .blog-hero__post-category {
    color: var(--neutral-600);
    text-transform: uppercase;
  }

  .blog-hero__post-title {
    margin: 0;
  }

  .blog-hero__post-title a {
    color: var(--neutral-950);
    text-decoration: none;
    transition: opacity 0.3s ease;
  }

  .blog-hero__post-excerpt {
    color: var(--neutral-600);
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  @media screen and (max-width: 990px) {
    .blog-hero__posts {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (max-width: 768px) {
    .blog-hero__content {
      flex-direction: column;
      gap: var(--space-m);
    }

    .blog-hero__header {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-xs);
    }

    .blog-hero__divider {
      display: none;
    }

    .blog-hero__subtitle {
      padding-left: 0;
    }

    .blog-hero__title {
      padding-right: 0;
    }
  }

  @media screen and (max-width: 480px) {
    .blog-hero__posts {
      grid-template-columns: 1fr;
    }

    .blog-hero__image {
      height: 60vh;
    }
  }
</style>

<section class="blog-hero">
  {% if section.settings.hero_image != blank %}
    <div class="blog-hero__image">
      {%- assign imgUrl = section.settings.hero_image | image_url: 'master' -%}
      <img src="{{ imgUrl }}" alt="{{ section.settings.heading | escape }}" loading="lazy" height="500" width="500">
    </div>
  {% endif %}

  <div class="blog-hero__content">
    <div class="blog-hero__header">
      {% if section.settings.heading != blank %}
        <h1 class="blog-hero__title heading--decorative">{{ section.settings.heading }}</h1>
      {% endif %}

      <span class="blog-hero__divider"></span>

      {% if section.settings.subheading != blank %}
        <h2 class="blog-hero__subtitle heading--l">{{ section.settings.subheading }}</h2>
      {% endif %}
    </div>

    <div class="blog-hero__description">
      {% if section.settings.description != blank %}
        <div class="blog-hero__text body">{{ section.settings.description }}</div>
      {% endif %}

      {% if section.settings.cta_link != blank and section.settings.cta_text != blank %}
        <a href="{{ section.settings.cta_link }}" class="blog-hero__link body">
          {{ section.settings.cta_text }}
          {% render 'icon-arrow-submit' %}
        </a>
      {% endif %}
    </div>
  </div>

  {% if section.settings.show_recent_posts %}
    <div class="blog-hero__recent">
      <div class="blog-hero__posts">
        {%- assign blog = blogs[section.settings.blog] -%}
        {% for article in blog.articles limit: 4 %}
          <div class="blog-hero__post">
            {% if article.image %}
              <a href="{{ article.url }}" class="blog-hero__post-image">
                <img
                  src="{{ article.image | image_url: '500x500', crop: 'center' }}"
                  alt="{{ article.title | escape }}"
                  loading="lazy"
                  width="100"
                  height="100"
                >
              </a>
            {% endif %}

            {% if article.tags.size > 0 %}
              <div class="blog-hero__post-category small">{{ article.tags.first }}</div>
            {% endif %}

            <h3 class="blog-hero__post-title heading--l">
              <a href="{{ article.url }}">{{ article.title }}</a>
            </h3>

            {% if article.excerpt.size > 0 %}
              <div class="blog-hero__post-excerpt body">{{ article.excerpt }}</div>
            {% elsif article.content.size > 0 %}
              <div class="blog-hero__post-excerpt body">{{ article.content | strip_html | truncatewords: 30 }}</div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  {% endif %}
</section>

{% schema %}
{
  "name": "Blog Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Journal"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Heritage Meets Heritage"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>A spotlight on our partnership with prestigious Italian Mill, Vitale Barberis Canonico. With over 360 years of heritage, we've developed a capsule range that highlights 3 centuries of expertise.</p>"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Link"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Text",
      "default": "Read Now"
    },
    {
      "type": "header",
      "content": "Recent Posts"
    },
    {
      "type": "checkbox",
      "id": "show_recent_posts",
      "label": "Show Recent Posts",
      "default": true
    },
    {
      "type": "text",
      "id": "recent_posts_title",
      "label": "Recent Posts Title",
      "default": "Latest Articles"
    },
    {
      "type": "blog",
      "id": "blog",
      "label": "Blog"
    }
  ],
  "presets": [
    {
      "name": "Blog Hero",
      "category": "Blog"
    }
  ]
}
{% endschema %}
