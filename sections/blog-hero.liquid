{% comment %}
  Blog Hero Section
{% endcomment %}

<style>
  .blog-hero {
    display: flex;
    flex-direction: column;
    width: 100%;
    padding-top: var(--space-2xl);
  }

  .blog-hero__image {
    width: 100%;
    position: relative;
    overflow: hidden;
  }

  .blog-hero__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .blog-hero__image-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
    background: linear-gradient(to bottom, rgba(0, 0, 0, 0.25), transparent);
  }

  .blog-hero__image-content {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 3;
    padding: var(--space-m);
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
    color: var(--white);
  }

  .blog-hero__image-title {
    margin: 0;
    color: var(--white);
  }

  .blog-hero__image-description {
    color: var(--white);
    max-width: 60ch;
  }

  .blog-hero__image-link {
    display: inline-flex;
    align-items: center;
    text-decoration: none;
    color: var(--white);
    gap: var(--space-xs);
    transition: opacity 0.3s ease;
  }

  .blog-hero__image-link:hover {
    opacity: 0.8;
  }

  .blog-hero__content {
    display: flex;
    padding: var(--space-xl) var(--space-m);
    gap: var(--space-xl);
  }

  .blog-hero__header {
    display: flex;
    align-items: center;
    flex: 1;
  }

  .blog-hero__title {
    margin: 0;
    padding-right: var(--space-m);
  }

  .blog-hero__divider {
    height: 50px;
    width: 1px;
    background-color: var(--neutral-200);
    margin: 0 var(--space-m);
  }

  .blog-hero__subtitle {
    margin: 0;
    padding-left: var(--space-m);
  }

  .blog-hero__description {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: var(--space-m);
  }

  .blog-hero__text {
    color: var(--neutral-600);
  }

  .blog-hero__link {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    color: var(--neutral-950);
    text-decoration: none;
    transition: opacity 0.3s ease;
  }

  .blog-hero__recent {
    padding: var(--space-xl) var(--space-m);
  }

  .blog-hero__recent-title {
    margin-bottom: var(--space-l);
  }

  .blog-hero__posts {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-l);
  }

  .blog-hero__post {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .blog-hero__post-image {
    display: block;
    width: 100%;
    aspect-ratio: 1/1;
    overflow: hidden;
    margin-bottom: var(--space-xs);
  }

  .blog-hero__post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .blog-hero__post-category {
    color: var(--neutral-600);
    text-transform: uppercase;
  }

  .blog-hero__post-title {
    margin: 0;
  }

  .blog-hero__post-title a {
    color: var(--neutral-950);
    text-decoration: none;
    transition: opacity 0.3s ease;
  }

  .blog-hero__post-excerpt {
    color: var(--neutral-600);
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  @media screen and (max-width: 990px) {
    .blog-hero__posts {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (max-width: 768px) {
    .blog-hero__content {
      flex-direction: column;
      gap: var(--space-m);
    }

    .blog-hero__header {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-xs);
    }

    .blog-hero__divider {
      display: none;
    }

    .blog-hero__subtitle {
      padding-left: 0;
    }

    .blog-hero__title {
      padding-right: 0;
    }
  }

  @media screen and (max-width: 480px) {
    .blog-hero__posts {
      grid-template-columns: 1fr;
    }

    .blog-hero__image {
      height: 60vh;
    }

    .blog-hero__image-content {
      padding: var(--space-l) var(--space-m);
    }
  }
</style>

<section class="blog-hero">
  {% if section.settings.hero_image != blank %}
    <div class="blog-hero__image">
      <picture>
        {% if section.settings.hero_image_mobile != blank %}
          <source
            media="(max-width: 767px)"
            srcset="{{ section.settings.hero_image_mobile | image_url: width: 'master' }}"
          >
        {% endif %}
        {{
          section.settings.hero_image
          | image_url: width: 1500
          | image_tag: loading: 'lazy', alt: section.settings.heading, class: 'blog-hero__main-image'
        }}
      </picture>

      {% if section.settings.show_image_overlay %}
        <div class="blog-hero__image-overlay"></div>

        <div class="blog-hero__image-content">
          {% if section.settings.image_heading != blank %}
            <h2 class="blog-hero__image-title heading--2xl">{{ section.settings.image_heading }}</h2>
          {% endif %}

          {% if section.settings.image_description != blank %}
            <div class="blog-hero__image-description body">{{ section.settings.image_description }}</div>
          {% endif %}

          {% if section.settings.image_link_url != blank and section.settings.image_link_text != blank %}
            <a href="{{ section.settings.image_link_url }}" class="blog-hero__image-link body">
              {{ section.settings.image_link_text }}
              {% render 'icon-arrow-submit-white' %}
            </a>
          {% endif %}
        </div>
      {% endif %}
    </div>
  {% endif %}

  <div class="blog-hero__content">
    <div class="blog-hero__header">
      {% if section.settings.heading != blank %}
        <h1 class="blog-hero__title heading--decorative">{{ section.settings.heading }}</h1>
      {% endif %}

      <span class="blog-hero__divider"></span>

      {% if section.settings.subheading != blank %}
        <h2 class="blog-hero__subtitle heading--l">{{ section.settings.subheading }}</h2>
      {% endif %}
    </div>

    <div class="blog-hero__description">
      {% if section.settings.description != blank %}
        <div class="blog-hero__text body">{{ section.settings.description }}</div>
      {% endif %}

      {% if section.settings.cta_link != blank and section.settings.cta_text != blank %}
        <a href="{{ section.settings.cta_link }}" class="blog-hero__link body">
          {{ section.settings.cta_text }}
          {% render 'icon-arrow-submit-dark' %}
        </a>
      {% endif %}
    </div>
  </div>

  {% if section.settings.show_recent_posts %}
    <div class="blog-hero__recent">
      {% if section.settings.recent_posts_title != blank %}
        <h2 class="blog-hero__recent-title heading--l">{{ section.settings.recent_posts_title }}</h2>
      {% endif %}

      <div class="blog-hero__posts">
        {%- assign blog = blogs[section.settings.blog] -%}
        {% for article in blog.articles limit: 4 %}
          <div class="blog-hero__post">
            {% if article.image %}
              <a href="{{ article.url }}" class="blog-hero__post-image">
                {{ article.image | image_url: width: 500 | image_tag: loading: 'lazy', alt: article.title }}
              </a>
            {% endif %}

            {% if article.tags.size > 0 %}
              <div class="blog-hero__post-category small">{{ article.tags.first }}</div>
            {% endif %}

            <h3 class="blog-hero__post-title heading--l">
              <a href="{{ article.url }}">{{ article.title }}</a>
            </h3>

            {% if article.excerpt.size > 0 %}
              <div class="blog-hero__post-excerpt body">{{ article.excerpt }}</div>
            {% elsif article.content.size > 0 %}
              <div class="blog-hero__post-excerpt body">{{ article.content | strip_html | truncatewords: 30 }}</div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  {% endif %}
</section>

{% schema %}
{
  "name": "Blog Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image"
    },
    {
      "type": "image_picker",
      "id": "hero_image_mobile",
      "label": "Mobile Hero Image (optional)"
    },
    {
      "type": "header",
      "content": "Image Overlay Content"
    },
    {
      "type": "checkbox",
      "id": "show_image_overlay",
      "label": "Show Content Over Image",
      "default": true
    },
    {
      "type": "text",
      "id": "image_heading",
      "label": "Image Heading",
      "default": "Featured Article"
    },
    {
      "type": "richtext",
      "id": "image_description",
      "label": "Image Description",
      "default": "<p>Discover our latest collection and insights in this featured article.</p>"
    },
    {
      "type": "text",
      "id": "image_link_text",
      "label": "Image Link Text",
      "default": "Read More"
    },
    {
      "type": "url",
      "id": "image_link_url",
      "label": "Image Link URL"
    },
    {
      "type": "header",
      "content": "Content Section"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Journal"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Heritage Meets Heritage"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>A spotlight on our partnership with prestigious Italian Mill, Vitale Barberis Canonico. With over 360 years of heritage, we've developed a capsule range that highlights 3 centuries of expertise.</p>"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Link"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Text",
      "default": "Read Now"
    },
    {
      "type": "header",
      "content": "Recent Posts"
    },
    {
      "type": "checkbox",
      "id": "show_recent_posts",
      "label": "Show Recent Posts",
      "default": true
    },
    {
      "type": "text",
      "id": "recent_posts_title",
      "label": "Recent Posts Title",
      "default": "Latest Articles"
    },
    {
      "type": "blog",
      "id": "blog",
      "label": "Blog"
    }
  ],
  "presets": [
    {
      "name": "Blog Hero",
      "category": "Blog"
    }
  ]
}
{% endschema %}
