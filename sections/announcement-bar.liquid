<style>
  .announcement-bar {
    padding: var(--space-2xs);
  }

  .announcement-bar .splide__slide {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .announcement-bar__content {
    width: 100%;
  }

  .announcement-bar__content--left {
    text-align: left;
    justify-content: flex-start;
  }

  .announcement-bar__content--center {
    text-align: center;
    justify-content: center;
  }

  .announcement-bar__content--right {
    text-align: right;
    justify-content: flex-end;
  }

  .announcement-bar--neutral-950 {
    background-color: var(--neutral-950);
    color: var(--white);
  }

  .announcement-bar--green-700 {
    background-color: var(--green-700);
    color: var(--white);
  }

  .announcement-bar--white {
    background-color: var(--white);
    color: var(--neutral-950);
  }
</style>

<div
  class="announcement-bar announcement-bar--{{ section.settings.background_color }} splide"
  id="announcement-bar-{{ section.id }}"
>
  <div class="splide__track">
    <ul class="splide__list">
      {% for block in section.blocks %}
        <li class="splide__slide" {{ block.shopify_attributes }}>
          <div class="announcement-bar__content body announcement-bar__content--{{ block.settings.alignment | default: 'center' }}">
            {{ block.settings.text }}
          </div>
        </li>
      {% endfor %}
    </ul>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const slider = new Splide('#announcement-bar-{{ section.id }}', {
      type: 'loop',
      perPage: 1,
      arrows: false,
      pagination: false,
      drag: true,
      autoplay: {{ section.settings.autoplay }},
      interval: {{ section.settings.slide_interval | times: 1000 }}
    });

    slider.mount();
  });
</script>

{% schema %}
{
  "name": "Announcement Bar",
  "class": "announcement-bar-section",
  "settings": [
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Autoplay slides",
      "default": true
    },
    {
      "type": "range",
      "id": "slide_interval",
      "min": 3,
      "max": 30,
      "step": 1,
      "unit": "sec",
      "label": "Change slides every",
      "default": 5
    },
    {
      "type": "select",
      "id": "background_color",
      "label": "Background Color",
      "options": [
        {
          "value": "neutral-950",
          "label": "Black"
        },
        {
          "value": "green-700",
          "label": "Green"
        },
        {
          "value": "white",
          "label": "White"
        }
      ],
      "default": "neutral-950"
    }
  ],
  "blocks": [
    {
      "name": "Announcement",
      "type": "announcement",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "text",
          "label": "Text",
          "default": "Welcome to our store! <a href=\"#\"> Find out more</a>"
        },
        {
          "type": "select",
          "id": "alignment",
          "label": "Content Alignment",
          "default": "center",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ]
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Announcement Bar",
      "blocks": [
        {
          "type": "announcement"
        }
      ]
    }
  ]
}
{% endschema %}
