{% comment %}
  Announcement bar slider that sits at the top of all pages on the site, used for calling out sale and campaigns
  Refactored by Ash 5th August 2025
{% endcomment %}

{{ 'section-announcement-bar.css' | asset_url | stylesheet_tag }}

{% assign slider_background_colour = section.settings.background_color %}
{% assign slider_text_colour = section.settings.text_color %}
{% assign slider_autoplay = section.settings.autoplay %}
{% assign slider_interval = section.settings.slide_interval | times: 1000 %}

<div
  class="announcement-bar splide"
  id="announcement-bar"
  style="background: var(--{{ slider_background_colour }}); {% if slider_background_colour == 'white' %} border-bottom: 1px solid var(--neutral-50); {% endif %}"
>
  <div class="splide__track">
    <ul class="splide__list">
      {% for announcement_slide in section.blocks %}
        {% assign slide_alignment = announcement_slide.settings.alignment %}
        {% assign slide_text = announcement_slide.settings.text %}
        <li class="splide__slide">
          <div
            style="text-align: {% if slide_alignment == 'left' %} left; {% elsif slide_alignment == 'center' %} center; {% else %} right; {% endif %}"
          >
            <div class="announcement-bar__content-text-container small" style="color: var(--{{slider_text_colour}});">
              {{ slide_text }}
            </div>
          </div>
        </li>
      {% endfor %}
    </ul>
  </div>
</div>

<script
  src="{{ 'section-announcement-bar.js' | asset_url }}"
  data-autoplay="{{ slider_autoplay }}"
  data-interval="{{ slider_interval }}"
  defer
></script>

{% schema %}
{
  "name": "Announcement Bar",
  "tag": "section",
  "class": "announcement-bar-section",
  "limit": 1,
  "settings": [
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Autoplay slides",
      "default": true
    },
    {
      "type": "range",
      "id": "slide_interval",
      "min": 3,
      "max": 30,
      "step": 1,
      "unit": "sec",
      "label": "Change slides every",
      "default": 5
    },
    {
      "type": "select",
      "id": "background_color",
      "label": "Background Color",
      "options": [
        {
          "value": "neutral-950",
          "label": "Black"
        },
        {
          "value": "green-800",
          "label": "Green"
        },
        {
          "value": "white",
          "label": "White"
        }
      ],
      "default": "neutral-950"
    },
    {
      "type": "select",
      "id": "text_color",
      "label": "Text Color",
      "options": [
        {
          "value": "white",
          "label": "White"
        },
        {
          "value": "neutral-950",
          "label": "Black"
        }
      ],
      "default": "white"
    }
  ],
  "blocks": [
    {
      "name": "Announcement",
      "type": "announcement",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "text",
          "label": "Text",
          "default": "Welcome to our store! <a href=\"#\"> Find out more</a>"
        },
        {
          "type": "select",
          "id": "alignment",
          "label": "Content Alignment",
          "default": "center",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ]
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Announcement Bar",
      "blocks": [
        {
          "type": "announcement"
        }
      ]
    }
  ],
  "enabled_on": {
    "groups": ["header"]
  }
}
{% endschema %}
