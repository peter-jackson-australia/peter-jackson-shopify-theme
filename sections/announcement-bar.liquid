{% assign id = section.id %}
{% assign slider_background_colour = section.settings.background_color %}

<style>
  {% comment %} .announcement-bar-section {
    width: 100%;
  } {% endcomment %}

  .announcement-bar {
    {% comment %} background-color: {% if section.settings.background_color != 'transparent' %}var(--{{ section.settings.background_color }}){% else %}transparent{% endif %}; {% endcomment %}
    {% comment %} color: var(--{{ section.settings.text_color }}); {% endcomment %}
    padding: var(--space-2xs);
    {% comment %} width: 100%; {% endcomment %}
    {% if section.settings.background_color == 'white' %}
      border-bottom: 1px solid var(--neutral-50);
    {% endif %}
    height: 35px;
  }

  .announcement-bar__content a {
    color: var(--{{ section.settings.text_color }});
    text-decoration: none;
  }

  .announcement-bar__content strong {
    font-family: 'Ordinary Regular', sans-serif;
    font-weight: 500;
  }

  {% comment %} .announcement-bar .splide__slide {
    display: flex;
    justify-content: center;
    align-items: center;
  } {% endcomment %}

  {% comment %} .announcement-bar__content {
    width: 100%;
  } {% endcomment %}

  {% comment %} .announcement-bar__content--left {
    text-align: left;
    justify-content: flex-start;
  } {% endcomment %}

  {% comment %} .announcement-bar__content--center {
    text-align: center;
    justify-content: center;
  } {% endcomment %}

  {% comment %} .announcement-bar__content--right {
    text-align: right;
    justify-content: flex-end;
  } {% endcomment %}
</style>

<div
  class="announcement-bar splide"
  id="announcement-bar-{{ id }}"
  style="background-color: var(--{{ slider_background_colour }});"
>
  <div class="splide__track">
    <ul class="splide__list">
      {% for announcement_slide in section.blocks %}
        {% assign slide_alignment = announcement_slide.settings.alignment %}
        {% assign slide_text = announcement_slide.settings.text %}
        <li class="splide__slide">
          <div
            class="announcement-bar__content small announcement-bar__content--{{ slide_alignment | default: 'center' }}"
            style="text-align: {% if slide_alignment == 'left' %} left; {% elsif slide_alignment == 'center' %} center; {% else %} right; {% endif %}"
          >
            {{ slide_text }}
          </div>
        </li>
      {% endfor %}
    </ul>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const slider = new Splide('#announcement-bar-{{ section.id }}', {
      type: 'loop',
      perPage: 1,
      arrows: false,
      pagination: false,
      drag: true,
      autoplay: {{ section.settings.autoplay }},
      interval: {{ section.settings.slide_interval | times: 1000 }}
    });
    slider.mount();
  });
</script>

{% schema %}
{
  "name": "Announcement Bar",
  "class": "announcement-bar-section",
  "limit": 1,
  "settings": [
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Autoplay slides",
      "default": true
    },
    {
      "type": "range",
      "id": "slide_interval",
      "min": 3,
      "max": 30,
      "step": 1,
      "unit": "sec",
      "label": "Change slides every",
      "default": 5
    },
    {
      "type": "select",
      "id": "background_color",
      "label": "Background Color",
      "options": [
        {
          "value": "neutral-950",
          "label": "Black"
        },
        {
          "value": "green-800",
          "label": "Green"
        },
        {
          "value": "white",
          "label": "White"
        }
      ],
      "default": "neutral-950"
    },
    {
      "type": "select",
      "id": "text_color",
      "label": "Text Color",
      "options": [
        {
          "value": "white",
          "label": "White"
        },
        {
          "value": "neutral-950",
          "label": "Black"
        }
      ],
      "default": "white"
    }
  ],
  "blocks": [
    {
      "name": "Announcement",
      "type": "announcement",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "text",
          "label": "Text",
          "default": "Welcome to our store! <a href=\"#\"> Find out more</a>"
        },
        {
          "type": "select",
          "id": "alignment",
          "label": "Content Alignment",
          "default": "center",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ]
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Announcement Bar",
      "blocks": [
        {
          "type": "announcement"
        }
      ]
    }
  ],
  "enabled_on": {
    "groups": ["header"]
  }
}
{% endschema %}
