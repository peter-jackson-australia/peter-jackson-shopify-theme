{% comment %}
  Featured Collection Section
  - Displays heading, description and link to collection on left
  - Displays a Splide slider with products from selected collection on right
  - Responsive: stacks on mobile, 1 column slider on mobile vs 3 on desktop
{% endcomment %}

<section class="featured-collection" id="section-{{ section.id }}">
  <div class="featured-collection__container">
    <!-- Left side: Heading, description, and link -->
    <div class="featured-collection__content">
      {% if section.settings.heading != blank %}
        <h2 class="heading--2xl featured-collection__heading">{{ section.settings.heading }}</h2>
      {% endif %}

      {% if section.settings.description != blank %}
        <p class="body featured-collection__description">{{ section.settings.description }}</p>
      {% endif %}

      {% if section.settings.collection != blank and section.settings.button_label != blank %}
        <a href="{{ section.settings.collection.url }}" class="body--uppercase featured-collection__link">
          {{ section.settings.button_label }}
          {% render 'icon-arrow-submit' %}
        </a>
      {% endif %}
    </div>

    <!-- Right side: Product slider -->
    {% if section.settings.collection != blank %}
      <div class="featured-collection__slider-wrapper">
        <div class="featured-collection__slider splide">
          <div class="splide__track">
            <ul class="splide__list">
              {% assign product_limit = section.settings.products_to_show | default: 10 %}
              {% for product in section.settings.collection.products limit: product_limit %}
                <li class="splide__slide featured-collection__slide">
                  <a href="{{ product.url }}" class="featured-collection__product-link">
                    <div class="featured-collection__product-image-wrapper">
                      {% if product.featured_image != blank %}
                        <img
                          src="{{ product.featured_image | img_url: '500x' }}"
                          alt="{{ product.featured_image.alt | escape }}"
                          loading="lazy"
                          width="{{ product.featured_image.width }}"
                          height="{{ product.featured_image.height }}"
                          class="featured-collection__product-image"
                        >
                      {% else %}
                        {{ 'product-1' | placeholder_svg_tag: 'featured-collection__product-image placeholder' }}
                      {% endif %}
                    </div>

                    <h3 class="heading--l featured-collection__product-title">{{ product.title }}</h3>

                    {% if product.metafields.custom.material != blank %}
                      <p class="body featured-collection__product-material">{{ product.metafields.custom.material }}</p>
                    {% endif %}

                    <p class="body--bold featured-collection__product-price">
                      {% if product.compare_at_price > product.price %}
                        <span class="featured-collection__product-price--sale">{{ product.price | money }}</span>
                        <span class="featured-collection__product-price--compare">
                          {{- product.compare_at_price | money -}}
                        </span>
                      {% else %}
                        {{ product.price | money }}
                      {% endif %}
                    </p>
                  </a>
                </li>
              {% endfor %}
            </ul>
          </div>
        </div>
      </div>
    {% endif %}
  </div>
</section>

<style>
  .featured-collection {
    padding: var(--space-xl) var(--space-m);
  }

  .featured-collection__container {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: var(--space-l);
    width: 100%;
  }

  .featured-collection__content {
    display: flex;
    flex-direction: column;
    gap: var(--space-m);
  }

  .featured-collection__description {
    max-width: 90%;
  }

  .featured-collection__link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    text-decoration: none;
    color: var(--neutral-950);
    margin-top: var(--space-xs);
  }

  .featured-collection__slider-wrapper {
    overflow: visible;
    width: 100%;
  }

  .featured-collection__slider {
    width: calc(100% + var(--space-m));
    margin-right: 0;
  }

  .featured-collection__product-link {
    display: block;
    text-decoration: none;
    color: var(--neutral-950);
  }

  .featured-collection__product-image-wrapper {
    margin-bottom: var(--space-xs);
    aspect-ratio: 1 / 1.25;
    overflow: hidden;
  }

  .featured-collection__product-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .featured-collection__product-title {
    margin: var(--space-xs) 0 var(--space-2xs);
  }

  .featured-collection__product-material {
    margin-bottom: var(--space-2xs);
    color: var(--neutral-600);
  }

  .featured-collection__product-price--compare {
    text-decoration: line-through;
    color: var(--neutral-500);
    margin-left: var(--space-2xs);
  }

  @media screen and (max-width: 1200px) {
    .featured-collection__container {
      grid-template-columns: 1fr;
      width: 100%;
    }

    .featured-collection__content {
      margin-bottom: var(--space-l);
    }

    .featured-collection__slider {
      width: calc(100% + var(--space-l));
    }
  }

  @media screen and (max-width: 768px) {
    .featured-collection__product-image-wrapper,
    .featured-collection__product-image {
      max-height: 400px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const splideElement = document.querySelector('#section-{{ section.id }} .featured-collection__slider');

    if (splideElement) {
      new Splide(splideElement, {
        perPage: 3,
        gap: 'var(--space-m)',
        arrows: false,
        pagination: false,
        drag: true,
        snap: true,
        breakpoints: {
          370: {
            perPage: 1,
          },
        },
      }).mount();
    }
  });
</script>

{% schema %}
{
  "name": "Featured Collection",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "New In Now"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Layer up with premium wool/cashmere blends."
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Shop Now"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 3,
      "max": 12,
      "step": 1,
      "default": 10,
      "label": "Maximum products to show"
    }
  ],
  "presets": [
    {
      "name": "Featured Collection",
      "category": "Collection"
    }
  ]
}
{% endschema %}
