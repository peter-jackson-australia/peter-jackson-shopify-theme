<style>
  .blog-header {
    text-align: center;
    padding: var(--space-2xs) var(--space-m);
    border-top: 1px solid var(--neutral-50);
    border-bottom: 1px solid var(--neutral-50);
    display: flex;
    justify-content: space-between;
  }

  .blog-header__title {
    line-height: 150%;
    color: var(--neutral-950);
  }

  .blog-header__nav {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--space-m);
    flex-wrap: wrap;
  }

  .blog-header__link {
    text-decoration: none;
    color: var(--neutral-600);
    text-transform: uppercase;
    transition: color 0.3s ease;
  }

  .blog-header__link:hover {
    color: var(--neutral-950);
  }

  @media (max-width: 1000px) {
    .blog-header__nav {
      gap: var(--space-s);
    }
    .blog-header {
      display: block;
    }
  }
</style>

{% assign journal_type = section.settings.journal_type %}

{% if journal_type == 'jackson' %}
  <div class="blog-header">
    <h1 class="blog-header__title heading--decorative">The Jackson Journal</h1>
    <nav class="blog-header__nav">
      <a href="/pages/the-jackson-journal" class="blog-header__link body--uppercase">Latest</a>
      <a href="/pages/the-jackson-journal?tag=Style" class="blog-header__link body--uppercase">Style</a>
      <a href="/pages/the-jackson-journal?tag=Campaign" class="blog-header__link body--uppercase">Campaign</a>
      <a href="/pages/the-jackson-journal?tag=Features" class="blog-header__link body--uppercase">Features</a>
      <a href="/pages/the-empowered-mind" class="blog-header__link body--uppercase">Lifestyle</a>
    </nav>
  </div>
{% elsif journal_type == 'empowered' %}
  <div class="blog-header">
    <h1 class="blog-header__title heading--decorative">The Empowered Mind</h1>
    <nav class="blog-header__nav">
      <a href="/pages/the-empowered-mind" class="blog-header__link body--uppercase">Latest</a>
      <a href="/pages/the-empowered-mind?tag=Mental%20Health" class="blog-header__link body--uppercase"
        >Mental Health</a
      >
      <a href="/pages/the-empowered-mind?tag=Fitness" class="blog-header__link body--uppercase">Fitness</a>
      <a href="/pages/the-empowered-mind?tag=Wellbeing" class="blog-header__link body--uppercase">Wellbeing</a>
      <a href="/pages/the-empowered-mind?tag=Relationships" class="blog-header__link body--uppercase">Relationships</a>
      <a href="/pages/the-empowered-mind?tag=Work" class="blog-header__link body--uppercase">Work</a>
      <a href="/pages/the-empowered-mind?tag=Parenting" class="blog-header__link body--uppercase">Parenting</a>
    </nav>
  </div>
{% endif %}

{% schema %}
{
  "name": "Blog Header",
  "tag": "section",
  "class": "blog-header-section",
  "settings": [
    {
      "type": "select",
      "id": "journal_type",
      "label": "Journal Type",
      "options": [
        {
          "value": "jackson",
          "label": "The Jackson Journal"
        },
        {
          "value": "empowered",
          "label": "The Empowered Mind"
        }
      ],
      "default": "jackson"
    }
  ],
  "presets": [
    {
      "name": "Blog Header",
      "category": "Blog"
    }
  ]
}
{% endschema %}
