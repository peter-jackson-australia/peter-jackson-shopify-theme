{% assign journal_type = section.settings.journal_type %}

{% if journal_type == 'jackson' %}
  <div class="blog-header">
    <h1>The Jackson Journal</h1>
    <nav>
      <a href="/pages/the-jackson-journal">Latest</a>
      <a href="/pages/the-jackson-journal?tag=Style">Style</a>
      <a href="/pages/the-jackson-journal?tag=Campaign">Campaign</a>
      <a href="/pages/the-jackson-journal?tag=Features">Features</a>
      <a href="/pages/the-empowered-mind">Lifestyle</a>
    </nav>
  </div>
{% elsif journal_type == 'empowered' %}
  <div class="blog-header">
    <h1>The Empowered Mind</h1>
    <nav>
      <a href="/pages/the-empowered-mind">Latest</a>
      <a href="/pages/the-empowered-mind?tag=Mental%20Health">Mental Health</a>
      <a href="/pages/the-empowered-mind?tag=Fitness">Fitness</a>
      <a href="/pages/the-empowered-mind?tag=Wellbeing">Wellbeing</a>
      <a href="/pages/the-empowered-mind?tag=Relationships">Relationships</a>
      <a href="/pages/the-empowered-mind?tag=Work">Work</a>
      <a href="/pages/the-empowered-mind?tag=Parenting">Parenting</a>
    </nav>
  </div>
{% endif %}

{% schema %}
{
  "name": "Blog Header",
  "tag": "section",
  "class": "blog-header-section",
  "settings": [
    {
      "type": "select",
      "id": "journal_type",
      "label": "Journal Type",
      "options": [
        {
          "value": "jackson",
          "label": "The Jackson Journal"
        },
        {
          "value": "empowered",
          "label": "The Empowered Mind"
        }
      ],
      "default": "jackson"
    }
  ],
  "presets": [
    {
      "name": "Blog Header",
      "category": "Blog"
    }
  ]
}
{% endschema %}
