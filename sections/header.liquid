<div id="site-header" class="header container">
  <button
    type="button"
    class="hamburger-menu"
    onclick="window.toggleNav();"
    aria-expanded="false"
    aria-controls="site-navigation"
    aria-label="Toggle menu"
  >
    <div class="hamburger-icon">
      {% render 'icon-hamburger-menu', accessible_name: 'Menu' %}
    </div>
  </button>
  <div class="header__logo">
    <a href="/" aria-label="Peter Jackson - Home">
      {% render 'icon-peter-jackson', accessible_name: 'Peter Jackson', role: 'img' %}
    </a>
  </div>
  <ul class="header__icons">
    <li>
      <a href="/account" aria-label="Account">
        {% render 'icon-account', accessible_name: 'Account', role: 'img' %}
      </a>
    </li>
    <li>
      <button
        aria-label="Cart{% if cart.item_count > 0 %} with {{ cart.item_count }} item{% if cart.item_count > 1 %}s{% endif %}{% endif %}"
        style="text-decoration: none; position: relative;"
      >
        {%- render 'icon-cart', accessible_name: 'Shopping Cart', role: 'img' %}
        <span
          style="{% if cart.item_count == 0 %}display: none;{% else %}display: block;{% endif %}"
          aria-hidden="true"
        >
          {{- cart.item_count -}}
        </span>
      </button>
    </li>
  </ul>
</div>

{% render 'menu', id: 'site-navigation' %}
