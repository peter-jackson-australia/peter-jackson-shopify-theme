{% comment %}
  Section: Variable Column Content
{% endcomment %}

<style>
  .variable-column-content {
    width: 100%;
    margin: 0;
    padding: var(--space-2xl) 0;
  }

  .variable-column-content__image-grid {
    display: grid;
    gap: var(--space-2xs);
    width: 100%;
    margin: 0;
    padding: 0;
    overflow: hidden;
  }

  .variable-column-content__image-wrapper {
    overflow: hidden;
  }

  .variable-column-content__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .variable-column-content__text-container {
    padding: var(--space-m);
    padding-bottom: 0px;
    width: 100%;
    box-sizing: border-box;
  }

  .variable-column-content__text-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-m);
  }

  .variable-column-content__text {
    color: var(--neutral-600);
    max-width: 80ch;
  }

  .variable-column-content__text-content--left {
    align-items: flex-start;
    text-align: left;
  }

  .variable-column-content__text-content--center {
    align-items: center;
    text-align: center;
  }

  .variable-column-content__text-content--right {
    align-items: flex-end;
    text-align: right;
  }

  .variable-column-content__button {
    display: inline-block;
    background-color: var(--white);
    color: var(--neutral-950);
    border: 1px solid var(--neutral-200);
    cursor: pointer;
    text-decoration: none;
  }

  @media screen and (max-width: 768px) {
    .variable-column-content__image-grid {
      grid-template-columns: 1fr !important;
    }

    .variable-column-content__image {
      height: 700px;
    }

    .variable-column-content__text-content {
      text-align: left;
      align-items: flex-start;
    }
  }
</style>

<section class="variable-column-content" id="shopify-section-{{ section.id }}">
  {% if section.settings.column_count != blank %}
    {% assign column_count = section.settings.column_count | plus: 0 %}
    <div class="variable-column-content__image-grid" style="grid-template-columns: repeat({{ column_count }}, 1fr);">
      {% for i in (1..column_count) %}
        {% assign image_setting = 'image_' | append: i %}
        {% if section.settings[image_setting] != blank %}
          <div class="variable-column-content__image-wrapper">
            {{
              section.settings[image_setting]
              | image_url: width: 800
              | image_tag:
                class: 'variable-column-content__image',
                loading: 'lazy',
                alt: section.settings[image_setting].alt
            }}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  {% endif %}

  <div class="variable-column-content__text-container">
    <div class="variable-column-content__text-content variable-column-content__text-content--{{ section.settings.text_alignment }}">
      {% if section.settings.heading != blank %}
        <h2 class="variable-column-content__heading heading--xl">
          {{ section.settings.heading }}
        </h2>
      {% endif %}

      {% if section.settings.text != blank %}
        <div class="variable-column-content__text body">
          {{ section.settings.text }}
        </div>
      {% endif %}

      {% if section.settings.button_label != blank and section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="variable-column-content__button button">
          {{ section.settings.button_label }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Variable Column Content",
  "tag": "section",
  "class": "variable-column-content-section",
  "settings": [
    {
      "type": "select",
      "id": "column_count",
      "label": "Number of Columns",
      "options": [
        {
          "value": "3",
          "label": "3 Columns"
        },
        {
          "value": "4",
          "label": "4 Columns"
        },
        {
          "value": "5",
          "label": "5 Columns"
        },
        {
          "value": "6",
          "label": "6 Columns"
        }
      ],
      "default": "3"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Desktop Content Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
