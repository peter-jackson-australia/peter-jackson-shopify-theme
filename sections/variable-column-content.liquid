{% comment %}
  Section: Variable Column Content
{% endcomment %}

<style>
  .variable-column-content {
    padding: var(--space-l) var(--space-m);
  }

  .variable-column-content__container {
    max-width: 1440px;
    margin: 0 auto;
  }

  .variable-column-content__image-grid {
    display: grid;
    gap: var(--space-2xs);
    margin-bottom: var(--space-m);
  }

  .variable-column-content__image-wrapper {
    aspect-ratio: 1 / 1;
    overflow: hidden;
  }

  .variable-column-content__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .variable-column-content__placeholder {
    width: 100%;
    height: 100%;
    background-color: var(--neutral-100);
  }

  .variable-column-content__text-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-s);
  }

  .variable-column-content__text-content--left {
    align-items: flex-start;
    text-align: left;
  }

  .variable-column-content__text-content--center {
    align-items: center;
    text-align: center;
  }

  .variable-column-content__text-content--right {
    align-items: flex-end;
    text-align: right;
  }

  .variable-column-content__button {
    background-color: var(--neutral-950);
    color: var(--white);
    text-decoration: none;
    display: inline-block;
    border: 1px solid var(--neutral-950);
    transition: background-color 0.3s ease, color 0.3s ease;
  }

  .variable-column-content__button:hover {
    background-color: var(--white);
    color: var(--neutral-950);
  }

  @media screen and (max-width: 768px) {
    .variable-column-content__image-grid {
      grid-template-columns: 1fr !important;
    }

    .variable-column-content__text-content {
      text-align: left;
      align-items: flex-start;
    }
  }
</style>

<section class="variable-column-content" id="shopify-section-{{ section.id }}">
  <div class="variable-column-content__container">
    {% if section.settings.column_count > 0 %}
      <div
        class="variable-column-content__image-grid"
        style="grid-template-columns: repeat({{ section.settings.column_count }}, 1fr);"
      >
        {% for i in (1..section.settings.column_count) %}
          {% assign image_setting = 'image_' | append: i %}
          {% if section.settings[image_setting] != blank %}
            <div class="variable-column-content__image-wrapper">
              {% if section.settings[image_setting] != blank %}
                <img
                  src="{{ section.settings[image_setting] | image_url: 'master' }}"
                  alt="{{ section.settings[image_setting].alt | escape }}"
                  width="{{ section.settings[image_setting].width }}"
                  height="{{ section.settings[image_setting].height }}"
                  loading="lazy"
                  class="variable-column-content__image"
                >
              {% else %}
                {{ 'image' | placeholder_svg_tag: 'variable-column-content__placeholder' }}
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}

    <div class="variable-column-content__text-content variable-column-content__text-content--{{ section.settings.text_alignment }}">
      {% if section.settings.heading != blank %}
        <h2 class="variable-column-content__heading heading--xl">
          {{ section.settings.heading }}
        </h2>
      {% endif %}

      {% if section.settings.text != blank %}
        <div class="variable-column-content__text body">
          {{ section.settings.text }}
        </div>
      {% endif %}

      {% if section.settings.button_label != blank and section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="variable-column-content__button button">
          {{ section.settings.button_label }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Variable Column Content",
  "tag": "section",
  "class": "variable-column-content-section",
  "settings": [
    {
      "type": "select",
      "id": "column_count",
      "label": "Number of Columns",
      "options": [
        {
          "value": "3",
          "label": "3 Columns"
        },
        {
          "value": "4",
          "label": "4 Columns"
        },
        {
          "value": "5",
          "label": "5 Columns"
        },
        {
          "value": "6",
          "label": "6 Columns"
        }
      ],
      "default": "3"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "header",
      "content": "Images"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Image 1"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image 2"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "Image 3"
    },
    {
      "type": "image_picker",
      "id": "image_4",
      "label": "Image 4"
    },
    {
      "type": "image_picker",
      "id": "image_5",
      "label": "Image 5"
    },
    {
      "type": "image_picker",
      "id": "image_6",
      "label": "Image 6"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Variable Column Content"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Share information about your brand or services with your customers. Describe a product, make an announcement, or welcome customers to your store.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Variable Column Content",
      "category": "Custom Content"
    }
  ],
  "enabled_on": {
    "templates": ["index", "page", "article", "blog"]
  }
}
{% endschema %}
