{% comment %}
  Footer Section
{% endcomment %}

<style>
  .footer {
    background-color: var(--neutral-950);
    color: var(--white);
  }

  .footer__section {
    padding: 0 var(--space-m);
    margin-bottom: var(--space-2xl);
  }

  .footer__intro {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-xl);
    border-bottom: 1px solid var(--neutral-600);
    padding-bottom: var(--space-2xl);
    padding-top: var(--space-2xl);
  }

  .footer__brand {
    margin-bottom: var(--space-s);
  }

  .footer__brand > img {
    width: calc(var(--space-3xl) + var(--space-3xl));
  }

  .footer__description {
    max-width: 80ch;
  }

  .footer__store-locator {
    display: flex;
    flex-direction: column;
  }

  .footer__search-form {
    position: relative;
    display: flex;
    align-items: center;
  }

  .footer__search-input {
    width: 100%;
    background: transparent;
    border: none;
    border-bottom: 1px solid var(--neutral-600);
    color: var(--white);
    padding: var(--space-s) var(--space-l) var(--space-s) 0;
  }

  .footer__search-input::placeholder {
    color: var(--neutral-600);
  }

  .footer__search-input:focus {
    outline: none;
  }

  .footer__search-button {
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    cursor: pointer;
    padding: var(--space-2xs);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .footer__description--store-locator {
    margin-top: var(--space-s);
  }

  .footer__main {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
  }

  .footer__heading--menu {
    margin-bottom: var(--space-2xs);
  }

  .footer__list {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
    list-style: none;
  }

  .footer__link {
    color: var(--white);
    text-decoration: none;
  }

  .footer__link:hover {
    text-decoration: underline;
  }

  .footer__partnerships {
    display: flex;
    align-items: center;
    gap: var(--space-m);
    margin-bottom: var(--space-l);
  }

  .footer__heading--partnerships {
    margin-bottom: 0px;
  }

  .footer__logo-box {
    width: var(--space-3xl);
  }

  .footer__logo-box > img {
    width: 100%;
  }

  .footer__info {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .footer__bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-m);
    border-top: 1px solid var(--neutral-600);
  }

  .footer__social {
    display: flex;
    gap: var(--space-s);
  }

  .footer__social-icon {
    max-width: 17px;
  }

  .footer__terms {
    display: flex;
    gap: var(--space-l);
  }

  @media (max-width: 1024px) {
    .footer__main {
      grid-template-columns: 1fr !important;
      gap: 0px;
    }

    .footer__section {
      margin-bottom: var(--space-2xl);
    }

    .footer__intro {
      grid-template-columns: 1fr;
      gap: var(--space-l);
      padding-bottom: var(--space-2xl);
    }

    .footer__partnerships {
      flex-direction: column;
      align-items: flex-start;
      margin-bottom: 0px !important;
    }

    .footer__bottom {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-s);
    }

    .footer__terms {
      gap: var(--space-xs);
    }
  }
</style>

