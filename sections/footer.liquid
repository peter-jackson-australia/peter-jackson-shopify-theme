{{ 'section-footer.css' | asset_url | stylesheet_tag }}

<footer class="footer">
  <div class="footer__section footer__intro">
    <div>
      <div class="footer__brand">
        {% if section.settings.footer_logo != blank %}
          {{ section.settings.footer_logo | image_url: width: 140 | image_tag: loading: 'lazy', alt: shop.name }}
        {% else %}
          <svg
            width="140"
            height="30"
            viewBox="0 0 140 30"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <rect width="140" height="30" fill="#777"/>
          </svg>
        {% endif %}
      </div>
      <p class="footer__description body">{{ section.settings.intro_text }}</p>
    </div>

    <div class="footer__store-locator">
      <h2 class="footer__heading heading--l">
        {{ section.settings.store_locator_heading }}
      </h2>
      <form class="footer__search-form" action="/pages/stores-in-australia" method="get">
        <input
          type="text"
          name="search"
          class="footer__search-input"
          placeholder="{{ section.settings.store_locator_placeholder }}"
        >
        <button type="submit" class="footer__search-button" aria-label="Search Peter Jackson Stores">
          {% render '_icon-arrow-submit-white' %}
        </button>
      </form>
      <p class="footer__description footer__description--store-locator body">
        {{ section.settings.store_locator_description }}
      </p>
    </div>
  </div>

  <div class="footer__main">
    <div style="display: flex;">
      <div class="footer__section">
        <h2 class="footer__heading footer__heading--menu heading--l">{{ section.settings.menu_heading }}</h2>
        <ul class="footer__list">
          {% for link in linklists[section.settings.footer_menu].links %}
            <li>
              <a href="{{ link.url }}" class="footer__link body">{{ link.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </div>

      <div class="footer__section">
        <h2 class="footer__heading footer__heading--menu heading--l">
          {{ section.settings.support_heading }}
        </h2>
        <ul class="footer__list">
          {% for link in linklists[section.settings.footer_support_menu].links %}
            <li>
              <a href="{{ link.url }}" class="footer__link body">{{ link.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>

    <div class="footer__section">
      {% if section.settings.show_partnerships %}
        <div class="footer__partnerships">
          {% if section.settings.partnerships_image != blank %}
            <div class="footer__logo-box">
              {{ section.settings.partnerships_image | image_url: width: 50 | image_tag: loading: 'lazy', alt: section.settings.partnerships_heading }}
            </div>
          {% else %}
            <div class="footer__logo-box"></div>
          {% endif %}
          <div class="footer__info">
            <h2 class="footer__heading footer__heading--partnerships heading--l">
              {{ section.settings.partnerships_heading }}
            </h2>
            <p class="footer__description body">
              {{ section.settings.partnerships_text }}
            </p>
            {% if section.settings.partnerships_link != blank and section.settings.partnerships_link_text != blank %}
              <a href="{{ section.settings.partnerships_link }}" class="footer__link body">
                {{- section.settings.partnerships_link_text }}
                <span aria-hidden="true">â†’</span></a
              >
            {% endif %}
          </div>
        </div>
      {% endif %}
    </div>
  </div>

  <div class="footer__bottom">
    <div class="footer__social">
      {% if section.settings.social_icon_1 != blank and section.settings.social_link_1 != blank %}
        <a href="{{ section.settings.social_link_1 }}" target="_blank">
          {{
            section.settings.social_icon_1
            | image_url: width: 34
            | image_tag: class: 'footer__social-icon', loading: 'lazy', decoding: 'async'
          }}
        </a>
      {% endif %}
      {% if section.settings.social_icon_2 != blank and section.settings.social_link_2 != blank %}
        <a href="{{ section.settings.social_link_2 }}" target="_blank">
          {{
            section.settings.social_icon_2
            | image_url: width: 34
            | image_tag: class: 'footer__social-icon', loading: 'lazy', decoding: 'async'
          }}
        </a>
      {% endif %}
      {% if section.settings.social_icon_3 != blank and section.settings.social_link_3 != blank %}
        <a href="{{ section.settings.social_link_3 }}" target="_blank">
          {{
            section.settings.social_icon_3
            | image_url: width: 34
            | image_tag: class: 'footer__social-icon', loading: 'lazy', decoding: 'async'
          }}
        </a>
      {% endif %}
    </div>
    
    <div class="footer__currency_selector">
        <localization-form>
          {% form 'localization' %}
            <div class="disclosure">
              <button type="button" class="disclosure__button" aria-expanded="false" aria-controls="localization-country-list" id="localization-popup-button">
                <span class="disclosure__button-img-text body">Shipping to: <span class="disclosure__button-text-country">{{ localization.country.name }}</span></span>
              </button>
              
              <ul id="localization-country-list" role="list" class="disclosure__list custom-scrollbar" hidden>
                {% for country in localization.available_countries %}
                  <li class="disclosure__list-item" tabindex="-1">
                    <a class="disclosure__list-item-link" {% if country.iso_code == localization.country.iso_code %} aria-current="true"{% endif %} data-value="{{ country.iso_code }}">
                      <span class="disclosure__list-item-text" >{{ country | image_url: width: 24 | image_tag: style: "border: 1px solid var(--neutral-50);"}} {{ country.name }} ({{ country.currency.iso_code }} {{ country.currency.symbol }})</span>
                    </a>
                  </li>
                {% endfor %}
              </ul>
              
              <input type="hidden" name="country_code" value="{{ localization.country.iso_code }}" />
            </div>
          {% endform %}
        </localization-form>
    </div>

    <div class="footer__terms">
      {% if section.settings.terms_link != blank %}
        <a href="{{ section.settings.terms_link }}" class="footer__link body">
          {{- section.settings.terms_text -}}
        </a>
      {% endif %}
      {% if section.settings.privacy_link != blank %}
        <a href="{{ section.settings.privacy_link }}" class="footer__link body">
          {{- section.settings.privacy_text -}}
        </a>
      {% endif %}
    </div>
  </div>
</footer>

<script src="{{ "section-footer.js" |  asset_url }}" defer></script>

