{{ 'section-icon-callout.css' | asset_url | stylesheet_tag }}

{% assign section_id = section.id %}
{% assign show_top_border = section.settings.show_top_border %}
{% assign show_bottom_border = section.settings.show_bottom_border %}
{% assign background_colour = section.settings.background_color %}
{% assign anchor_id = section.settings.anchor_id %}
{% assign icon = section.settings.icon %}
{% assign heading = section.settings.heading %}
{% assign heading_animation = section.settings.heading_animation %}
{% assign text = section.settings.text %}
{% assign text_animation = section.settings.text_animation %}
{% assign button_label = section.settings.button_label %}
{% assign button_link = section.settings.button_link %}

<div
  id="icon-callout-{{ section_id }}"
  class="icon-callout"
  aria-label="Icon callout section"
  style="
    {% if show_top_border %}border-top: 1px solid var(--neutral-50);{% endif %}
    {% if show_bottom_border %}border-bottom: 1px solid var(--neutral-50);{% endif %}
  "
>
  <div
    class="icon-callout__container icon-callout--{{ background_colour }}"
    {% if anchor_id != blank %}
      id="{{ anchor_id | downcase | replace: ' ', '-' }}-segment"
    {% endif %}
  >
    {% if icon != blank %}
      <img
        src="{{ icon | image_url: width: 150 }}"
        alt="{{ heading | escape }}"
        class="icon-callout__icon"
        width="80"
        height="80"
        loading="lazy"
      >
    {% endif %}

    {% if heading != blank %}
      <h2 class="icon-callout__heading heading--xl {% if heading_animation != 'none' %}{{ heading_animation }}{% endif %}">
        {{ heading }}
      </h2>
    {% endif %}

    {% if text != blank %}
      <div class="icon-callout__text body {% if text_animation != 'none' %}{{ text_animation }}{% endif %}">
        {{ text }}
      </div>
    {% endif %}

    {% if button_label != blank and button_link != blank %}
      <a href="{{ button_link }}" class="icon-callout__cta button body">
        {{ button_label }}
      </a>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Icon Callout",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "anchor_id",
      "label": "Anchor ID (lowercase with hyphens)",
      "info": "Example: history or about-us"
    },
    {
      "type": "checkbox",
      "id": "show_top_border",
      "label": "Show top border",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_bottom_border",
      "label": "Show bottom border",
      "default": false
    },
    {
      "type": "image_picker",
      "id": "icon",
      "label": "Icon Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Feature Heading"
    },
    {
      "type": "select",
      "id": "heading_animation",
      "label": "Heading Animation",
      "options": [
        {
          "value": "none",
          "label": "None"
        },
        {
          "value": "animate-word-slide-up-scroll",
          "label": "Slide Up Words"
        },
        {
          "value": "animate-word-rotate-scroll",
          "label": "Rotate In Words"
        },
        {
          "value": "animate-paragraph-slide-up-scroll",
          "label": "Slide Up"
        }
      ],
      "default": "none"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "Add descriptive text about this feature or benefit to help visitors understand your offerings better."
    },
    {
      "type": "select",
      "id": "text_animation",
      "label": "Text Animation",
      "options": [
        {
          "value": "none",
          "label": "None"
        },
        {
          "value": "animate-word-slide-up-scroll",
          "label": "Slide Up Words"
        },
        {
          "value": "animate-word-rotate-scroll",
          "label": "Rotate In Words"
        },
        {
          "value": "animate-paragraph-slide-up-scroll",
          "label": "Slide Up"
        },
        {
          "value": "animate-word-opacity-scroll",
          "label": "Fade In Words"
        }
      ],
      "default": "none"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "select",
      "id": "background_color",
      "label": "Background Color",
      "options": [
        {
          "value": "neutral-950",
          "label": "Black"
        },
        {
          "value": "green-800",
          "label": "Green"
        },
        {
          "value": "white",
          "label": "White"
        }
      ],
      "default": "neutral-950"
    }
  ],
  "presets": [
    {
      "name": "Icon Callout",
      "category": "Text",
      "settings": {
        "heading": "Feature Heading",
        "text": "Add descriptive text about this feature or benefit to help visitors understand your offerings better.",
        "button_label": "Learn More",
        "background_color": "neutral-950"
      }
    }
  ],
  "enabled_on": {
    "templates": ["index", "page", "collection", "product", "article"]
  }
}
{% endschema %}
