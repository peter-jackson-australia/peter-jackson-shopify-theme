{% comment %}
  AJAX Cart
{% endcomment %}

<style>
  .cart {
    position: fixed;
    top: 0;
    left: -9999px;
    opacity: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.6);
    z-index: 99999;
    display: flex;
    flex-direction: column;
  }

  .cart--active {
    left: 0;
    opacity: 1;
  }

  .cart__container {
    width: 400px;
    background-color: var(--white);
    flex: 1;
    margin-left: auto;
    display: flex;
    flex-direction: column;
    overflow: auto;
    opacity: 0;
    transform: translateX(var(--space-m));
  }

  .cart--active .cart__container {
    transform: none;
    opacity: 1;
  }

  .cart__header {
    display: flex;
    align-items: center;
    padding: var(--space-m);
    border-bottom: 1px solid var(--neutral-200);
  }

  .cart__title {
    color: var(--neutral-950);
    flex: 1;
  }

  .cart__controls {
    color: var(--neutral-400);
    display: inline-flex;
    align-items: center;
    gap: var(--space-s);
  }

  .cart__count {
    display: block;
  }

  .cart__close {
    width: var(--space-s);
    color: var(--neutral-400);
    cursor: pointer;
    background: none;
    border: none;
  }

  .cart__close:hover {
    color: var(--neutral-950);
  }

  .cart__form {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .cart__items {
    padding: var(--space-m);
  }

  .cart-item {
    display: flex;
    align-items: center;
    background: var(--white);
    overflow: hidden;
  }

  .cart-item + .cart-item {
    margin-top: var(--space-2xs);
  }

  .cart-item__image {
    width: 100px;
    min-width: 100px;
  }

  .cart-item__image img {
    width: 100%;
    height: auto;
    max-height: 100px;
    object-fit: contain;
    display: block;
  }

  .cart-item__content {
    flex: 1;
    padding: 0 var(--space-m);
  }

  .cart-item__row {
    display: flex;
    flex-wrap: wrap;
    align-items: flex-start;
    gap: var(--space-s);
  }

  .cart-item__details {
    flex: 1;
    min-width: 50%;
  }

  .cart-item__title a {
    color: var(--neutral-950);
  }

  .cart-item__variant {
    color: var(--neutral-400);
    display: block;
    margin-top: var(--space-3xs);
  }

  .cart-item__quantity {
    display: inline-flex;
    border: 1px solid var(--neutral-200);
    margin-top: var(--space-2xs);
  }

  .cart-item__quantity-button {
    width: var(--space-l);
    height: var(--space-m);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    user-select: none;
    background: none;
    border: none;
  }

  .cart-item__quantity-input {
    width: var(--space-l);
    text-align: center;
    border-left: 1px solid var(--neutral-200);
    border-right: 1px solid var(--neutral-200);
    border-top: none;
    border-bottom: none;
  }

  .cart__footer {
    padding: var(--space-m);
    margin-top: auto;
    border-top: 1px solid var(--neutral-200);
  }

  .cart__footer-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: var(--space-2xs);
  }

  .cart__footer-row:last-of-type {
    margin-bottom: var(--space-xs);
  }

  .cart__checkout {
    display: block;
    width: 100%;
    background-color: var(--neutral-950);
    color: var(--white);
    border: none;
    cursor: pointer;
    padding: var(--space-2xs) 0;
  }

  .cart__empty {
    margin: auto;
    color: var(--neutral-950);
  }

  .cart-item__actions {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    margin-top: var(--space-2xs);
  }

  .cart-item__remove {
    color: var(--neutral-400);
    cursor: pointer;
    background: none;
    border: none;
    text-decoration: underline;
  }

  .cart-item__remove:hover {
    color: var(--neutral-950);
  }
</style>

<aside class="cart" role="dialog" aria-labelledby="cart-title">
  <div class="cart__container">
    <header class="cart__header">
      <h2 id="cart-title" class="cart__title heading--xl">Cart</h2>
      <div class="cart__controls">
        <button class="cart__close" type="button" aria-label="Close cart">
          {% render 'icon-close' %}
        </button>
      </div>
    </header>

    {% form 'cart', cart, class: 'cart__form' %}
      {% if cart.item_count == 0 %}
        <p class="cart__empty body">Your cart is empty</p>
      {% else %}
        <div class="cart__items">
          {% for item in cart.items %}
            <article
              class="cart-item"
              data-line-item-key="{{ item.key }}"
              data-inventory-quantity="{{ item.variant.inventory_quantity }}"
            >
              <div class="cart-item__image">
                <img
                  src="{{ item.image | image_url: width: '200x' }}"
                  alt="{{ item.title }}"
                  width="100"
                  height="auto"
                >
              </div>
              <div class="cart-item__content">
                <div class="cart-item__row">
                  <div class="cart-item__details">
                    <h3 class="cart-item__title body--bold">
                      <a href="{{ item.url }}">{{ item.product.title }}</a>
                    </h3>
                    <span class="cart-item__variant small">{{ item.variant.title }}</span>
                    <div class="cart-item__actions">
                      <div class="cart-item__quantity">
                        <button
                          class="cart-item__quantity-button cart-item__quantity-button--minus"
                          type="button"
                          aria-label="Decrease quantity"
                        >
                          -
                        </button>
                        <input
                          type="text"
                          class="cart-item__quantity-input small"
                          readonly
                          value="{{ item.quantity }}"
                          aria-label="Quantity"
                        >
                        <button
                          class="cart-item__quantity-button cart-item__quantity-button--plus"
                          type="button"
                          aria-label="Increase quantity"
                        >
                          +
                        </button>
                      </div>
                      <button type="button" class="cart-item__remove small">Remove</button>
                    </div>
                  </div>
                  <div class="cart-item__price">
                    <span class="body--bold">{{ item.final_line_price | money }}</span>
                  </div>
                </div>
              </div>
            </article>
          {% endfor %}
        </div>

        <footer class="cart__footer">
          {% if cart.total_discounts > 0 %}
            <div class="cart__footer-row">
              <h3 class="cart__footer-label body">Discounts</h3>
              <span class="cart__footer-value body--bold">{{ cart.total_discounts | money }}</span>
            </div>
          {% endif %}
          <div class="cart__footer-row">
            <h3 class="cart__footer-label body">Subtotal</h3>
            <span class="cart__footer-value body--bold">{{ cart.total_price | money }}</span>
          </div>
          <button type="submit" name="checkout" class="cart__checkout heading--l">Checkout</button>
        </footer>
      {% endif %}
    {% endform %}
  </div>
</aside>

{% schema %}
{
  "name": "Cart drawer"
}
{% endschema %}
