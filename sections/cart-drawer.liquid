{% comment %}
  AJAX Cart
{% endcomment %}

<style>
  .cart {
    position: fixed;
    top: 0;
    left: 0;
    opacity: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.6);
    z-index: 99999;
    display: flex;
    flex-direction: column;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s linear;
  }

  .cart--active {
    left: 0;
    opacity: 1;
    visibility: visible;
  }

  .cart__container {
    width: 400px;
    max-width: 100%;
    background-color: var(--white);
    flex: 1;
    margin-left: auto;
    display: flex;
    flex-direction: column;
    overflow: auto;
    opacity: 0;
    transform: translateX(100%);
    transition: transform 0.4s ease, opacity 0.3s linear;
  }

  .cart--active .cart__container {
    transform: translateX(0);
    opacity: 1;
  }

  .cart__header {
    display: flex;
    align-items: center;
    height: var(--space-xl);
    padding: var(--space-m);
  }

  .cart__title {
    color: var(--neutral-950);
    flex: 1;
  }

  .cart__controls {
    color: var(--neutral-400);
    display: inline-flex;
    align-items: center;
    gap: var(--space-s);
  }

  .cart__count {
    display: block;
  }

  .cart__close {
    width: var(--space-s);
    color: var(--neutral-400);
    cursor: pointer;
    background: none;
    border: none;
  }

  .cart__close:hover {
    color: var(--neutral-950);
  }

  .cart__form {
    flex: 1;
    display: flex;
    flex-direction: column;
    height: calc(100dvh - var(--space-xl));
    overflow-y: auto;
    position: relative;
  }

  .cart__items {
    padding: var(--space-m);
    overflow-y: auto;
    padding-bottom: 128px;
  }

  .cart-item {
    display: flex;
    align-items: start;
    background: var(--white);
    overflow: hidden;
    gap: var(--space-m);
    margin-bottom: var(--space-m);
  }

  .cart-item__image {
    width: 100px;
    min-width: 100px;
  }

  .cart-item__image img {
    width: 100%;
    height: 150px;
    object-fit: cover;
    display: block;
  }

  .cart-item__content {
    flex: 1;
    min-width: 0;
  }

  .cart-item__row {
    display: flex;
    flex-wrap: wrap;
    align-items: flex-start;
    gap: var(--space-s);
  }

  .cart-item__details {
    display: flex;
    flex-direction: column;
    gap: var(--space-s);
    width: 100%;
  }

  .cart-item__title {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 100%;
  }

  .cart-item__title a {
    color: var(--neutral-950);
    text-decoration: none;
    display: block;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .cart-item__specifics {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    height: 15px;
    width: 100%;
  }

  .cart-item__variant {
    color: var(--neutral-400);
    display: block;
  }

  .cart-item__quantity {
    display: flex;
    align-items: center;
    border: 1px solid var(--neutral-200);
    height: 100%;
  }

  .cart-item__quantity-button {
    width: 30px;
    height: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    user-select: none;
    background: none;
    border: none;
  }

  .cart-item__quantity-input {
    width: var(--space-l);
    height: 30px;
    text-align: center;
    border: 1px solid var(--neutral-200);
  }

  .cart__footer {
    padding: var(--space-m);
    border-top: 1px solid var(--neutral-200);
    position: absolute;
    bottom: 0;
    left: 0;
    background-color: var(--white);
    width: 100%;
    z-index: 10;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .cart__footer-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: var(--space-2xs);
    width: 100%;
  }

  .cart__footer-row:last-of-type {
    margin-bottom: var(--space-xs);
  }

  .cart__checkout {
    width: 100%;
    height: var(--space-xl);
    background-color: var(--neutral-950);
    color: var(--white);
    border: none;
    padding: var(--space-s) var(--space-m);
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
  }

  .cart__empty {
    margin: auto;
    color: var(--neutral-950);
  }

  .cart__empty-state {
    margin: auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-m);
  }

  .cart__empty {
    color: var(--neutral-950);
    text-align: center;
  }

  .cart__new-arrivals {
    width: 100%;
    max-width: 300px;
    height: var(--space-xl);
    background-color: var(--neutral-950);
    color: var(--white);
    border: none;
    padding: var(--space-s) var(--space-m);
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    text-decoration: none;
    transition: background-color 0.2s ease;
  }

  .cart__new-arrivals:hover {
    background-color: var(--neutral-800);
    color: var(--white);
  }

  .cart-item__actions {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 30px;
  }

  .cart-item__remove {
    color: var(--neutral-400);
    cursor: pointer;
    background: none;
    border: none;
    text-decoration: underline;
  }

  .cart-item__error {
    color: #ff0000;
  }
</style>

<div x-data="cartDrawer" x-init="init()">
  <aside class="cart" role="dialog" aria-labelledby="cart-title">
    <div class="cart__container">
      <header class="cart__header">
        <h2 id="cart-title" class="cart__title heading--xl">Cart</h2>
        <div class="cart__controls">
          <button class="cart__close" type="button" aria-label="Close cart">
            {% render 'icon-close' %}
          </button>
        </div>
      </header>

      {% form 'cart', cart, class: 'cart__form' %}
        {% if cart.item_count == 0 %}
          <div class="cart__empty-state">
            <p class="cart__empty body">Your cart is empty</p>
            <a href="/collections/new-arrivals" class="cart__new-arrivals body">New Arrivals</a>
          </div>
        {% else %}
          <div class="cart__items custom-scrollbar">
            {% for item in cart.items %}
              <article
                class="cart-item"
                data-line-item-key="{{ item.key }}"
                data-inventory-quantity="{{ item.variant.inventory_quantity }}"
              >
                <div class="cart-item__image">
                  <img
                    src="{{ item.image | image_url: width: '200x' }}"
                    alt="{{ item.title }}"
                    width="100"
                    height="auto"
                  >
                </div>
                <div class="cart-item__content">
                  <div class="cart-item__row">
                    <div class="cart-item__details">
                      <h3 class="cart-item__title body--bold">
                        <a href="{{ item.url }}">{{ item.product.title }}</a>
                      </h3>
                      <div class="cart-item__specifics">
                        {% if item.variant.title != 'Default Title' %}
                          <p class="cart-item__variant small">
                            {% assign variant_parts = item.variant.title | split: ' / ' %}
                            {% for option in item.product.options %}
                              {% if forloop.index <= variant_parts.size %}
                                {% assign option_index = forloop.index | minus: 1 %}
                                {% assign option_value = variant_parts[option_index] %}
                                {{ option }}:
                                {% if option contains 'Size' and option_value contains '.0' -%}
                                  {{- option_value | remove: '.0' -}}
                                {%- else -%}
                                  {{- option_value -}}
                                {%- endif -%}
                                {%- unless forloop.last %}, {% endunless %}
                              {% endif %}
                            {% endfor %}
                          </p>
                        {% else %}
                          <p class="cart-item__variant small">One Size</p>
                        {% endif %}
                        <div class="cart-item__price">
                          <p class="small">{{ item.final_line_price | money }}</p>
                        </div>
                      </div>
                      <div class="cart-item__actions">
                        <div class="cart-item__quantity">
                          <button
                            class="cart-item__quantity-button cart-item__quantity-button--minus body"
                            type="button"
                            aria-label="Decrease quantity"
                          >
                            -
                          </button>
                          <input
                            type="text"
                            class="cart-item__quantity-input small"
                            readonly
                            value="{{ item.quantity }}"
                            aria-label="Quantity"
                          >
                          <button
                            class="cart-item__quantity-button cart-item__quantity-button--plus body"
                            type="button"
                            aria-label="Increase quantity"
                          >
                            +
                          </button>
                        </div>
                        <button type="button" class="cart-item__remove small">Remove</button>
                      </div>
                    </div>
                  </div>
                </div>
              </article>
            {% endfor %}
          </div>

          <footer class="cart__footer">
            {% if cart.total_discounts > 0 %}
              <div class="cart__footer-row">
                <h3 class="cart__footer-label body">Discounts</h3>
                <span class="cart__footer-value body--bold">{{ cart.total_discounts | money }}</span>
              </div>
            {% endif %}
            <div class="cart__footer-row">
              <h3 class="cart__footer-label body">Subtotal</h3>
              <span class="cart__footer-value body--bold">{{ cart.total_price | money }}</span>
            </div>
            <button type="submit" name="checkout" class="cart__checkout body">Checkout</button>
          </footer>
        {% endif %}
      {% endform %}
    </div>
  </aside>
</div>

<script>
  document.addEventListener('alpine:init', () => {
    Alpine.data('cartDrawer', () => ({
      isOpen: false,
      scrollY: 0,

      init() {
        window.openCart = () => this.openCart();
        window.closeCart = () => this.closeCart();

        this.$nextTick(() => {
          const closeBtn = document.querySelector('.cart__close');
          if (closeBtn) {
            closeBtn.addEventListener('click', () => this.closeCart());
          }

          const cart = document.querySelector('.cart');
          if (cart) {
            cart.addEventListener('click', (e) => {
              if (e.target === cart) this.closeCart();
            });
          }
        });
      },

      openCart() {
        this.scrollY = window.scrollY;

        document.body.style.position = 'fixed';
        document.body.style.top = `-${this.scrollY}px`;
        document.body.style.width = '100%';

        this.isOpen = true;
        document.body.classList.add('cart-open');
        document.querySelector('.cart').classList.add('cart--active');
      },

      closeCart() {
        if (!this.isOpen) return;

        this.isOpen = false;
        document.body.classList.remove('cart-open');
        document.querySelector('.cart').classList.remove('cart--active');

        document.documentElement.style.scrollBehavior = 'auto';

        document.body.style.position = '';
        document.body.style.top = '';
        document.body.style.width = '';
        window.scrollTo(0, this.scrollY);

        document.documentElement.style.scrollBehavior = '';
      },
    }));
  });
</script>

{% schema %}
{
  "name": "Cart drawer"
}
{% endschema %}
