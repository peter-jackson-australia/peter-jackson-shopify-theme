{% comment %}
  AJAX Cart - Fixed wrapper structure
{% endcomment %}

<style>
  .cart {
    position: fixed;
    top: 0;
    left: 0;
    opacity: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.6);
    z-index: 99999;
    display: flex;
    flex-direction: column;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s linear;
  }

  .cart--active {
    left: 0;
    opacity: 1;
    visibility: visible;
  }

  .cart__container {
    width: 400px;
    max-width: 100%;
    background-color: var(--white);
    flex: 1;
    margin-left: auto;
    display: flex;
    flex-direction: column;
    overflow: auto;
    opacity: 0;
    transform: translateX(100%);
    transition: transform 0.4s ease, opacity 0.3s linear;
  }

  .cart--active .cart__container {
    transform: translateX(0);
    opacity: 1;
  }

  .cart__header {
    display: flex;
    align-items: center;
    height: var(--space-xl);
    padding: var(--space-m);
    border-bottom: 1px solid var(--neutral-50);
  }

  .cart__title {
    color: var(--neutral-950);
    flex: 1;
  }

  .cart__controls {
    color: var(--neutral-400);
    display: inline-flex;
    align-items: center;
    gap: var(--space-s);
  }

  .cart__count {
    display: block;
  }

  .cart__close {
    width: var(--space-s);
    color: var(--neutral-400);
    cursor: pointer;
    background: none;
    border: none;
  }

  .cart__close:hover {
    color: var(--neutral-950);
  }

  .cart__form {
    flex: 1;
    display: flex;
    flex-direction: column;
    height: calc(100dvh - var(--space-xl));
    overflow: hidden;
    position: relative;
  }

  .cart__content-wrapper {
    flex: 1;
    overflow-y: auto;
    padding-bottom: calc(128px + var(--space-m));
  }

  .cart__items {
    padding: var(--space-m) var(--space-m) 0px var(--space-m);
  }

  .cart-item {
    display: flex;
    align-items: start;
    background: var(--white);
    overflow: hidden;
    gap: var(--space-m);
    margin-bottom: var(--space-m);
  }

  .cart-item__image {
    width: 100px;
    min-width: 100px;
  }

  .cart-item__image img {
    width: 100%;
    height: 150px;
    object-fit: cover;
    display: block;
  }

  .cart-item__content {
    flex: 1;
    min-width: 0;
  }

  .cart-item__row {
    display: flex;
    flex-wrap: wrap;
    align-items: flex-start;
    gap: var(--space-s);
  }

  .cart-item__details {
    display: flex;
    flex-direction: column;
    gap: var(--space-s);
    width: 100%;
  }

  .cart-item__title {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 100%;
  }

  .cart-item__title a {
    color: var(--neutral-950);
    text-decoration: none;
    display: block;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .cart-item__specifics {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    height: 15px;
    width: 100%;
  }

  .cart-item__variant {
    color: var(--neutral-400);
    display: block;
  }

  .cart-item__quantity {
    display: flex;
    align-items: center;
    border: 1px solid var(--neutral-50);
    height: 100%;
  }

  .cart-item__quantity-button {
    width: 30px;
    height: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    user-select: none;
    background: none;
    border: none;
    color: var(--neutral-950);
  }

  .cart-item__quantity-input {
    width: var(--space-l);
    height: 30px;
    text-align: center;
    border: 1px solid var(--neutral-50);
  }

  .cart__complementary-products {
    padding: var(--space-m);
    border-top: 1px solid var(--neutral-50);
  }

  .cart__complementary-products-title {
    color: var(--neutral-950);
    margin-bottom: var(--space-m);
  }

  .cart__complementary-products-slider {
    width: 100%;
  }

  .cart__complementary-products .splide__slide {
    display: block;
    text-decoration: none;
    color: var(--neutral-950);
  }

  .cart__complementary-products .splide__slide a {
    display: block;
    text-decoration: none;
    color: var(--neutral-950);
  }

  .cart__complementary-products-image-wrapper {
    margin-bottom: var(--space-xs);
    overflow: hidden;
    background-color: var(--neutral-50);
    position: relative;
    width: 100%;
    padding-bottom: 133.33%;
  }

  .cart__complementary-products-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .cart__complementary-products-title-product {
    margin: var(--space-xs) 0 var(--space-2xs);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    color: var(--neutral-950);
  }

  .cart__complementary-products-price {
    color: var(--neutral-950);
  }

  .cart__complementary-products-slider > .splide__arrows > .splide__arrow[disabled] {
    opacity: 0.25;
    cursor: not-allowed;
  }

  .cart__footer {
    padding: var(--space-m);
    border-top: 1px solid var(--neutral-50);
    position: absolute;
    bottom: 0;
    left: 0;
    background-color: var(--white);
    width: 100%;
    z-index: 10;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .cart__footer-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: var(--space-2xs);
    width: 100%;
  }

  .cart__footer-row:last-of-type {
    margin-bottom: var(--space-xs);
  }

  .cart__checkout {
    width: 100%;
    height: var(--space-xl);
    background-color: var(--neutral-950);
    color: var(--white);
    border: none;
    padding: var(--space-s) var(--space-m);
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
  }

  .cart__empty {
    margin: auto;
    color: var(--neutral-950);
    padding-bottom: var(--space-m);
    border-bottom: 1px solid var(--neutral-50);
  }

  .cart__empty-state {
    margin: auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-m);
    padding: var(--space-m) var(--space-m) 0px var(--space-m);
  }

  .cart__empty {
    color: var(--neutral-950);
    text-align: center;
  }

  .cart__new-arrivals-section {
    width: 100%;
  }

  .cart__new-arrivals-section-title {
    color: var(--neutral-600);
    text-align: center;
    margin-bottom: var(--space-m);
  }

  .cart__new-arrivals-grid {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-s);
  }

  .cart__new-arrivals-card {
    width: calc(50% - (var(--space-s) / 2));
    display: block;
    text-decoration: none;
    color: var(--neutral-950);
  }

  .cart__new-arrivals-image-wrapper {
    margin-bottom: var(--space-xs);
    overflow: hidden;
    background-color: var(--neutral-50);
    position: relative;
    width: 100%;
    padding-bottom: 133.33%;
  }

  .cart__new-arrivals-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .cart__new-arrivals-title {
    margin: var(--space-xs) 0 var(--space-2xs);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    color: var(--neutral-950);
  }

  .cart__new-arrivals-price {
    color: var(--neutral-950);
  }

  .cart__new-arrivals-price--compare {
    text-decoration: line-through;
    color: var(--neutral-600);
    margin-left: var(--space-2xs);
  }

  .cart__shipping {
    padding: var(--space-m);
    height: 93px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    border-bottom: 1px solid var(--neutral-50);
  }

  .cart__shipping-bar {
    width: 100%;
    height: 2px;
    background: var(--neutral-200);
    margin: var(--space-xs) 0;
    opacity: 1;
    transition: opacity 0.3s ease;
  }

  .cart__shipping-progress {
    height: 100%;
    background: var(--neutral-950);
    width: 0%;
    transition: width 0.5s ease;
  }

  .cart__shipping--loading .cart__shipping-bar {
    opacity: 0;
  }

  .cart__new-arrivals {
    width: 100%;
    height: var(--space-xl);
    background-color: var(--neutral-950);
    color: var(--white);
    border: none;
    padding: var(--space-s) var(--space-m);
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    text-decoration: none;
    margin-bottom: var(--space-m);
  }

  .cart-item__actions {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 30px;
  }

  .cart-item__remove {
    color: var(--neutral-400);
    cursor: pointer;
    background: none;
    border: none;
    text-decoration: underline;
  }

  .cart-item__error {
    color: #ff0000;
  }
</style>

<div x-data="cartDrawer" x-init="init()">
  <aside class="cart" role="dialog" aria-labelledby="cart-title">
    <div class="cart__container">
      <header class="cart__header">
        <h2 id="cart-title" class="cart__title heading--xl">Cart</h2>
        <div class="cart__controls">
          <button class="cart__close" type="button" aria-label="Close cart">
            {% render '_icon-close' %}
          </button>
        </div>
      </header>

      <div class="cart__shipping" style="display: none;">
        <p class="cart__shipping-text small"></p>
        <div class="cart__shipping-bar">
          <div class="cart__shipping-progress"></div>
        </div>
      </div>

      {% form 'cart', cart, class: 'cart__form' %}
        {% if cart.item_count == 0 %}
          <div class="cart__empty-state">
            <p class="cart__empty heading--l">Your Cart Is Empty</p>
            {% assign new_arrivals = collections['mens-suits'] %}
            {% if new_arrivals and new_arrivals.products.size > 0 %}
              <div class="cart__new-arrivals-section">
                <h3 class="cart__new-arrivals-section-title body">Shop Premium Merino Wool Suits from $399</h3>
                <div class="cart__new-arrivals-grid">
                  {% for product in new_arrivals.products limit: 4 %}
                    <a href="{{ product.url }}" class="cart__new-arrivals-card">
                      <div class="cart__new-arrivals-image-wrapper">
                        {% if product.featured_image != blank %}
                          {% assign image_aspect_ratio = product.featured_image.aspect_ratio | default: 1 %}
                          {% assign image_height = 300 | divided_by: image_aspect_ratio | round %}
                          {{
                            product.featured_image
                            | image_url: width: product.featured_image.width
                            | image_tag:
                              class: 'cart__new-arrivals-image',
                              sizes: '(max-width: 768px) 150px, 300px',
                              loading: 'lazy',
                              decoding: 'async',
                              alt: product.featured_image.alt
                            | escape
                            | default: product.title, width: 300, height: image_height
                          }}
                        {% else %}
                          {{ 'product-1' | placeholder_svg_tag: 'cart__new-arrivals-image placeholder' }}
                        {% endif %}
                      </div>
                      <h3 class="body--bold cart__new-arrivals-title">{{ product.title }}</h3>
                      <p class="small cart__new-arrivals-price">
                        <span class="cart__new-arrivals-price--current">{{ product.price | money }}</span>
                        {% if product.compare_at_price > product.price %}
                          <span class="cart__new-arrivals-price--compare">
                            {{- product.compare_at_price | money -}}
                          </span>
                        {% endif %}
                      </p>
                    </a>
                  {% endfor %}
                </div>
              </div>
            {% endif %}
            <a href="{{ routes.collections_url }}/mens-suits" class="cart__new-arrivals body">View Full Collection</a>
          </div>
        {% else %}
          <div class="cart__content-wrapper custom-scrollbar">
            <div class="cart__items">
              {% for item in cart.items %}
                <article
                  class="cart-item"
                  data-line-item-key="{{ item.key }}"
                  data-inventory-quantity="{{ item.variant.inventory_quantity }}"
                >
                  <div class="cart-item__image">
                    <img
                      src="{{ item.image | image_url: width: '200x' }}"
                      alt="{{ item.title }}"
                      width="100"
                      height="auto"
                    >
                  </div>
                  <div class="cart-item__content">
                    <div class="cart-item__row">
                      <div class="cart-item__details">
                        <h3 class="cart-item__title body--bold">
                          <a href="{{ item.url }}">{{ item.product.title }}</a>
                        </h3>
                        <div class="cart-item__specifics">
                          {% if item.variant.title != 'Default Title' %}
                            <p class="cart-item__variant small">
                              {% assign variant_parts = item.variant.title | split: ' / ' %}
                              {% for option in item.product.options %}
                                {% if forloop.index <= variant_parts.size %}
                                  {% assign option_index = forloop.index | minus: 1 %}
                                  {% assign option_value = variant_parts[option_index] %}
                                  {{ option }}:
                                  {% if option contains 'Size' and option_value contains '.0' -%}
                                    {{- option_value | remove: '.0' -}}
                                  {%- else -%}
                                    {{- option_value -}}
                                  {%- endif -%}
                                  {%- unless forloop.last %}, {% endunless %}
                                {% endif %}
                              {% endfor %}
                            </p>
                          {% else %}
                            <p class="cart-item__variant small">One Size</p>
                          {% endif %}
                          <div class="cart-item__price">
                            <p class="small">{{ item.final_line_price | money }}</p>
                          </div>
                        </div>
                        <div class="cart-item__actions">
                          <div class="cart-item__quantity">
                            <button
                              class="cart-item__quantity-button cart-item__quantity-button--minus body"
                              type="button"
                              aria-label="Decrease quantity"
                            >
                              -
                            </button>
                            <input
                              type="text"
                              class="cart-item__quantity-input small"
                              readonly
                              value="{{ item.quantity }}"
                              aria-label="Quantity"
                            >
                            <button
                              class="cart-item__quantity-button cart-item__quantity-button--plus body"
                              type="button"
                              aria-label="Increase quantity"
                            >
                              +
                            </button>
                          </div>
                          <button type="button" class="cart-item__remove small">Remove</button>
                        </div>
                      </div>
                    </div>
                  </div>
                </article>
              {% endfor %}
            </div>

            <div class="cart__complementary-products" style="display: none;">
              <div class="cart__complementary-products-loading">
                <div class="animated-loader">
                  <svg
                    fill="#E7E7E7"
                    style="height:4px;display:block"
                    viewBox="0 0 40 4"
                    xmlns="http://www.w3.org/2000/svg"
                  >
                    <style>
                      .react{animation:moving 1s ease-in-out infinite}
                      @keyframes moving{0%{width:0%}50%{width:100%;transform:translate(0,0)}100%{width:0;right:0;transform:translate(100%,0)}}
                    </style>
                    <rect class="react" fill="#E7E7E7" height="4" width="40" />
                  </svg>
                </div>
              </div>
              <div class="cart__complementary-products-content" style="display: none;">
                <h3 class="cart__complementary-products-title heading--l">Complement Your Look</h3>
                <div class="cart__complementary-products-slider splide">
                  <div class="splide__arrows">
                    <button class="splide__arrow splide__arrow--prev" type="button">
                      {% render '_icon-arrow-see-less' %}
                    </button>
                    <button class="splide__arrow splide__arrow--next" type="button">
                      {% render '_icon-arrow-see-more' %}
                    </button>
                  </div>
                  <div class="splide__track">
                    <ul class="splide__list"></ul>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <footer class="cart__footer">
            {% if cart.total_discounts > 0 %}
              <div class="cart__footer-row">
                <h3 class="cart__footer-label body">Discounts</h3>
                <span class="cart__footer-value body--bold">{{ cart.total_discounts | money }}</span>
              </div>
            {% endif %}
            <div class="cart__footer-row">
              <h3 class="cart__footer-label body">Subtotal</h3>
              <span class="cart__footer-value body--bold">{{ cart.total_price | money }}</span>
            </div>
            <button type="submit" name="checkout" class="cart__checkout body">Checkout</button>
          </footer>
        {% endif %}
      {% endform %}
    </div>
  </aside>
</div>

<script>
  document.addEventListener('alpine:init', () => {
    Alpine.data('cartDrawer', () => ({
      isOpen: false,
      scrollY: 0,

      init() {
        this.$nextTick(() => {
          window.openCart = () => this.openCart();
          window.closeCart = () => this.closeCart();

          const closeBtn = document.querySelector('.cart__close');
          if (closeBtn) {
            closeBtn.addEventListener('click', () => this.closeCart());
          }

          const cart = document.querySelector('.cart');
          if (cart) {
            cart.addEventListener('click', (e) => {
              if (e.target === cart) this.closeCart();
            });
          }
        });
      },

      openCart() {
        if (document.body.style.position !== 'fixed') {
          this.scrollY = window.scrollY;
          document.body.style.position = 'fixed';
          document.body.style.top = `-${this.scrollY}px`;
          document.body.style.width = '100%';
        }

        this.isOpen = true;
        document.body.classList.add('cart-open');
        document.querySelector('.cart').classList.add('cart--active');

        if (window.closeMenu) {
          window.closeMenu(true);
        }
      },

      closeCart() {
        if (!this.isOpen) return;

        this.isOpen = false;
        document.body.classList.remove('cart-open');
        document.querySelector('.cart').classList.remove('cart--active');

        const scrollY = Math.abs(parseInt(document.body.style.top || '0'));

        document.documentElement.style.scrollBehavior = 'auto';

        document.body.style.position = '';
        document.body.style.top = '';
        document.body.style.width = '';
        window.scrollTo(0, scrollY);

        document.documentElement.style.scrollBehavior = '';
      },
    }));
  });
</script>

