{% comment %}
See https://shopify.dev/docs/storefronts/themes/architecture/templates/customers-activate-account
{% endcomment %}
<section id="account-login" class="section-wrap">
  <div class="section form">
    <h1 data-title="Activate">Activate</h1>

    <p>Create your password to activate your account.</p>

    {% form 'activate_customer_password', id: 'activate-account' %}
      {{ form.errors | default_errors }}

      <div class="form-row">
        <label for="password">Password</label>
        <input type="password" name="customer[password]" />
      </div>
      <div class="form-row">
        <label for="password_confirmation">Password Confirmation</label>
        <input type="password" name="customer[password_confirmation]" />
      </div>
      <div class="form-row">
        <button type="submit" value="Activate Account">
          Activate account
        </button>
        <button type="submit" class="button-white" name="decline" value="Decline Invitation">Decline invitation</button>
      </div>
    {% endform %}
  </div>
</section>
