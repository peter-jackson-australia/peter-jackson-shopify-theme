{% comment %}
  Link List Section
{% endcomment %}

{{ 'section-link-list.css' | asset_url | stylesheet_tag }}

{% assign alignment = section.settings.alignment %}
{% assign show_top_border = section.settings.show_top_border %}
{% assign show_bottom_border = section.settings.show_bottom_border %}
{% assign heading = section.settings.heading %}
{% assign blocks = section.blocks %}

<div
  class="link-list link-list--align-{{ alignment }}"
  style="
    {% if show_top_border %}border-top: 1px solid var(--neutral-50);{% endif %}
    {% if show_bottom_border %}border-bottom: 1px solid var(--neutral-50);{% endif %}
  "
>
  <div class="link-list__wrapper">
    {% if heading != blank %}
      <div class="link-list__title">
        <h2 class="heading--xl">{{ heading }}</h2>
      </div>
    {% endif %}

    <div class="link-list__content">
      <ul class="link-list__list">
        {% for block in blocks %}
          {% assign type = block.type %}
          {% assign link_text = block.settings.link_test %}
          {% assign link_url = block.settings.link_url %}
          {% case block.type %}
            {% when 'link' %}
              {% if link_text != blank and link_url != blank %}
                <li>
                  <a href="{{ link_url }}" class="link-list__link body--uppercase">
                    {{ link_text }}
                  </a>
                </li>
              {% endif %}
          {% endcase %}
        {% endfor %}
      </ul>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Link List",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "info": "Optional heading for the link list"
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Desktop Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "checkbox",
      "id": "show_top_border",
      "label": "Show top border",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_bottom_border",
      "label": "Show bottom border",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "link",
      "name": "Link",
      "settings": [
        {
          "type": "text",
          "id": "link_text",
          "label": "Link Text"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "Link URL"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Link List",
      "blocks": [
        {
          "type": "link",
          "settings": {
            "link_text": "Shop All",
            "link_url": "/collections/all"
          }
        },
        {
          "type": "link",
          "settings": {
            "link_text": "New Arrivals",
            "link_url": "/collections/new-arrivals"
          }
        },
        {
          "type": "link",
          "settings": {
            "link_text": "Best Sellers",
            "link_url": "/collections/best-sellers"
          }
        }
      ]
    }
  ]
}
{% endschema %}
