{% comment %}
  Section: Variable Column Content Tertiary
{% endcomment %}

{{ 'section-variable-column-content-tertiary.css' | asset_url | stylesheet_tag }}

<div
  class="variable-column-content-tertiary"
  id="shopify-section-{{ section.id }}"
  style="
    {% if section.settings.show_top_border %}border-top: 1px solid var(--neutral-50);{% endif %}
    {% if section.settings.show_bottom_border %}border-bottom: 1px solid var(--neutral-50);{% endif %}
  "
>
  {% if section.settings.column_count != blank %}
    {% assign column_count = section.settings.column_count | plus: 0 %}
    <div
      class="variable-column-content-tertiary__image-grid {% if section.settings.animate_columns %}animate-container-cards-scroll{% endif %}"
      style="grid-template-columns: repeat({{ column_count }}, 1fr);"
      {% if section.settings.anchor_id != blank %}
        id="{{ section.settings.anchor_id | downcase | replace: ' ', '-' }}-segment"
      {% endif %}
    >
      {%- for block in section.blocks limit: column_count -%}
        {% if block.type == 'column_item' %}
          <div class="variable-column-content-tertiary__column" {{ block.shopify_attributes }}>
            {% if block.settings.column_link != blank %}
              <a href="{{ block.settings.column_link }}" class="variable-column-content-tertiary__column-link">
            {% endif %}

            {% if block.settings.image != blank %}
              <div class="variable-column-content-tertiary__image-wrapper{% if block.settings.show_gradient_overlay %} variable-column-content-tertiary__image-wrapper--gradient{% endif %}">
                {{
                  block.settings.image
                  | image_url: width: 1200
                  | image_tag:
                    class: 'variable-column-content-tertiary__image',
                    sizes: '(max-width: 767px) 400px, 1200px',
                    loading: 'lazy',
                    decoding: 'async',
                    alt: block.settings.image.alt
                }}

                {% if block.settings.heading != blank or block.settings.text != blank %}
                  {% assign h_align = block.settings.content_horizontal_alignment | default: 'center' %}
                  {% assign v_align = block.settings.content_vertical_alignment | default: 'center' %}
                  <div class="variable-column-content-tertiary__column-content variable-column-content-tertiary__column-content--h-{{ h_align }} variable-column-content-tertiary__column-content--v-{{ v_align }}">
                    {% if block.settings.heading != blank %}
                      <h3 class="variable-column-content-tertiary__column-heading heading--l {% if block.settings.heading_animation != 'none' %}{{ block.settings.heading_animation }}{% endif %}">
                        {{ block.settings.heading }}
                      </h3>
                    {% endif %}

                    {% if block.settings.text != blank %}
                      <div class="variable-column-content-tertiary__column-text body {% if block.settings.text_animation != 'none' %}{{ block.settings.text_animation }}{% endif %}">
                        {{ block.settings.text }}
                      </div>
                    {% endif %}

                    {% if block.settings.column_link != blank and block.settings.column_link_text != blank %}
                      <div class="variable-column-content-tertiary__column-cta body">
                        {{ block.settings.column_link_text }}
                        {% render '_icon-arrow-submit-light' %}
                      </div>
                    {% endif %}
                  </div>
                {% endif %}
              </div>
            {% endif %}

            {% if block.settings.column_link != blank %}
              </a>
            {% endif %}
          </div>
        {% endif %}
      {%- endfor -%}
    </div>
  {% endif %}

  {% if section.settings.heading != blank and section.settings.text != blank %}
    <div class="variable-column-content-tertiary__text-container">
      <div class="variable-column-content-tertiary__text-content variable-column-content-tertiary__text-content--{{ section.settings.text_alignment }}">
        {% if section.settings.heading != blank %}
          <h2 class="variable-column-content-tertiary__heading heading--xl {% if section.settings.heading_animation != 'none' %}{{ section.settings.heading_animation }}{% endif %}">
            {{ section.settings.heading }}
          </h2>
        {% endif %}

        {% if section.settings.text != blank %}
          <div class="variable-column-content-tertiary__text body {% if section.settings.text_animation != 'none' %}{{ section.settings.text_animation }}{% endif %}">
            {{ section.settings.text }}
          </div>
        {% endif %}

        {% if section.settings.button_label != blank and section.settings.button_link != blank %}
          <a
            href="{{ section.settings.button_link }}"
            class="variable-column-content-tertiary__button button body"
          >
            {{ section.settings.button_label }}
          </a>
        {% endif %}
      </div>
    </div>
  {% endif %}
</div>

