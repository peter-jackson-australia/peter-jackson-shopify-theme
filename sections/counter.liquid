{% assign heading = section.settings.heading %}
{% assign subheading = section.settings.subheading %}

<div>
  <p>Testing: {{ section.settings }}</p>
  <h1>{{ heading }}</h1>

  {% if subheading != blank %}
    <p>{{ subheading }}</p>
  {% endif %}

  {% for counter in section.blocks %}
    <h1>{{ counter.settings.counter_description }}</h1>
    <p>Value: {{ counter.settings.value }}</p>
  {% endfor %}
</div>

{% schema %}
{
  "name": "Counter",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Some text here"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "More text here"
    }
  ],
  "blocks": [
    {
      "type": "counter",
      "name": "Counter",
      "settings": [
        {
          "id": "counter_description",
          "label": "Counter Description",
          "type": "text",
          "default": "description"
        },
        {
          "id": "value",
          "label": "Value",
          "type": "number",
          "default": 100
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Counter"
    }
  ]
}
{% endschema %}
