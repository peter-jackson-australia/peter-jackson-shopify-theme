{% comment %}
  Image Gallery Slider Section
{% endcomment %}

{{ 'section-image-gallery-slider.css' | asset_url | stylesheet_tag }}

<div
  class="image-gallery-slider"
  id="section-{{ section.id }}"
  style="
    {% if section.settings.show_top_border %}border-top: 1px solid var(--neutral-50);{% endif %}
    {% if section.settings.show_bottom_border %}border-bottom: 1px solid var(--neutral-50);{% endif %}
  "
>
  {% if section.settings.heading != blank or section.settings.subtitle != blank %}
    <div class="image-gallery-slider__header image-gallery-slider__header--{{ section.settings.alignment }}">
      <div class="image-gallery-slider__header-content">
        {% if section.settings.heading != blank %}
          <h2 class="image-gallery-slider__title heading--decorative">
            {{ section.settings.heading }}
          </h2>
        {% endif %}

        {% if section.settings.heading != blank and section.settings.subtitle != blank %}
          <span class="image-gallery-slider__divider"></span>
        {% endif %}

        {% if section.settings.subtitle != blank %}
          <h3 class="image-gallery-slider__subtitle heading--l">
            {{ section.settings.subtitle }}
          </h3>
        {% endif %}
      </div>
    </div>
  {% endif %}

  <div class="image-gallery-slider__slider-wrapper">
    <div class="image-gallery-slider__slider splide">
      <div class="splide__arrows">
        <button class="splide__arrow splide__arrow--prev">{% render '_icon-arrow-see-less' %}</button>
        <button class="splide__arrow splide__arrow--next">{% render '_icon-arrow-see-more' %}</button>
      </div>
      <div class="splide__track">
        <ul class="splide__list">
          {% for block in section.blocks %}
            {% if block.settings.image != blank %}
              <li class="splide__slide">
                <img
                  src="{{ block.settings.image | image_url: width: 800 }}"
                  alt="{{ block.settings.image.alt | escape }}"
                  loading="lazy"
                  width="{{ block.settings.image.width }}"
                  height="{{ block.settings.image.height }}"
                  class="image-gallery-slider__slide-image"
                  decoding="async"
                >
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</div>

<script
  src="{{ "section-image-gallery-slider.js" | asset_url }}"
  data-section-id="{{ section.id }}"
  defer
></script>

{% schema %}
{
  "name": "Image Gallery Slider",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Content Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "checkbox",
      "id": "show_top_border",
      "label": "Show top border",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_bottom_border",
      "label": "Show bottom border",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Image Slide",
      "limit": 30,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image Gallery Slider",
      "category": "Media"
    }
  ],
  "enabled_on": {
    "templates": ["index", "page", "article", "blog", "product", "collection"]
  }
}
{% endschema %}
