{% comment %}
  Collection Related Collections
{% endcomment %}

{% assign collection_id = collection.id %}
{% assign has_related_articles = false %}
{% assign related_count = 0 %}

{% for article in blogs['the-jackson-journal'].articles limit: 50 %}
  {% assign is_related = false %}
  {% for related_collection in article.metafields.custom.related_collections.value %}
    {% if related_collection.id == collection_id %}
      {% assign has_related_articles = true %}
      {% break %}
    {% endif %}
  {% endfor %}
  {% if has_related_articles %}
    {% break %}
  {% endif %}
{% endfor %}

<style>
  .related-articles {
    display: flex;
    flex-direction: column;
    width: 100%;
    padding-bottom: var(--space-2xl);
    border-bottom: 1px solid var(--neutral-200);
  }

  .related-articles__content {
    display: flex;
    padding: var(--space-2xl) var(--space-m);
    gap: var(--space-xl);
    border-top: 1px solid var(--neutral-200);
  }

  .related-articles__header {
    display: flex;
    align-items: center;
    flex: 1;
  }

  .related-articles__title {
    padding-right: var(--space-m);
    color: var(--neutral-950);
    white-space: nowrap;
  }

  .related-articles__divider {
    height: 50px;
    width: 1px;
    background-color: var(--neutral-200);
  }

  .related-articles__subtitle {
    padding-left: var(--space-m);
    color: var(--neutral-950);
    margin-top: -7px;
  }

  .related-articles__description {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: end;
    gap: var(--space-m);
  }

  .related-articles__text {
    color: var(--neutral-600);
    max-width: 80ch;
    text-align: right;
  }

  .related-articles__link {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    color: var(--neutral-950);
    text-decoration: none;
  }

  .related-articles__posts {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-2xs);
  }

  .related-articles__post {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
    overflow: hidden;
  }

  .related-articles__post-image {
    display: block;
    width: 100%;
    aspect-ratio: 1/1;
    overflow: hidden;
    margin-bottom: var(--space-xs);
    min-height: 550px;
  }

  .related-articles__post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .related-articles__post-content {
    padding-left: var(--space-m);
  }

  .related-articles__post-category {
    color: var(--neutral-600);
    text-transform: uppercase;
    margin-bottom: var(--space-s);
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
  }

  .related-articles__post-title {
    margin-bottom: var(--space-2xs);
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
  }

  .related-articles__post-title a,
  .related-articles__post-link-container {
    color: var(--neutral-950);
    text-decoration: none;
  }

  .related-articles__post-link {
    display: flex;
    gap: var(--space-xs);
  }

  @media screen and (max-width: 1000px) {
    .related-articles {
      padding-top: var(--space-xl);
      padding-bottom: var(--space-xl);
    }

    .related-articles__content {
      padding-top: var(--space-xl);
      padding-bottom: var(--space-xl);
      flex-direction: column;
      gap: var(--space-m);
    }

    .related-articles__header {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-m);
    }

    .related-articles__description {
      align-items: start;
    }

    .related-articles__text {
      text-align: left;
    }

    .related-articles__title {
      padding-right: 0;
    }

    .related-articles__divider {
      display: none;
    }

    .related-articles__subtitle {
      padding-left: 0px;
    }

    .related-articles__posts {
      grid-template-columns: repeat(2, 1fr);
      gap: calc(var(--space-xs) + var(--space-xs));
      column-gap: var(--space-2xs);
    }

    .related-articles__post-content {
      padding-right: var(--space-m);
    }
  }

  @media screen and (max-width: 480px) {
    .related-articles__posts {
      grid-template-columns: 1fr;
      gap: calc(var(--space-xs) + var(--space-xs));
    }
  }
</style>

{% if has_related_articles %}
  <div class="related-articles">
    <div class="related-articles__content">
      <div class="related-articles__header">
        {% if section.settings.heading != blank %}
          <h2 class="related-articles__title heading--decorative">{{ section.settings.heading }}</h2>
        {% endif %}

        <span class="related-articles__divider"></span>

        {% if section.settings.subheading != blank %}
          <div class="related-articles__subtitle heading--l">{{ section.settings.subheading }}</div>
        {% endif %}
      </div>

      <div class="related-articles__description">
        {% if section.settings.description != blank %}
          <div class="related-articles__text body">{{ section.settings.description }}</div>
        {% endif %}

        {% if section.settings.cta_link != blank and section.settings.cta_text != blank %}
          <a href="{{ section.settings.cta_link }}" class="related-articles__link body">
            {{ section.settings.cta_text }}
            {% render 'icon-arrow-submit-dark' %}
          </a>
        {% endif %}
      </div>
    </div>

    <div class="related-articles__posts">
      {% assign related_count = 0 %}

      {% for article in blogs['the-jackson-journal'].articles limit: 50 %}
        {% assign is_related = false %}
        {% for related_collection in article.metafields.custom.related_collections.value %}
          {% if related_collection.id == collection_id %}
            {% assign is_related = true %}
            {% break %}
          {% endif %}
        {% endfor %}

        {% if is_related %}
          <article class="related-articles__post">
            {% if article.image %}
              <a href="{{ article.url }}" class="related-articles__post-image">
                {{ article.image | image_url: width: 600 | image_tag: loading: 'lazy', alt: article.title }}
              </a>
            {% endif %}

            <div class="related-articles__post-content">
              {% if article.tags.size > 0 %}
                <div class="related-articles__post-category small">{{ article.tags.first }}</div>
              {% endif %}

              <h3 class="related-articles__post-title heading--l">
                <a href="{{ article.url }}">{{ article.title }}</a>
              </h3>

              <a href="{{ article.url }}" class="related-articles__post-link-container">
                <span class="related-articles__post-link body">Read Article {% render 'icon-arrow-submit-dark' %}</span>
              </a>
            </div>
          </article>
          {% assign related_count = related_count | plus: 1 %}
          {% if related_count >= 4 %}
            {% break %}
          {% endif %}
        {% endif %}
      {% endfor %}
    </div>
  </div>
{% endif %}

{% schema %}
{
  "name": "Related Collections",
  "tag": "section",
  "settings": [
    {
      "type": "header",
      "content": "Content Section"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Related Collections"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "From The Jackson Journal"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Discover articles that complement this collection and provide additional insight into our heritage, craftsmanship, and style philosophy.</p>"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Link"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Text",
      "default": "View All Articles"
    }
  ],
  "presets": [
    {
      "name": "Related Collections",
      "category": "Collection"
    }
  ],
  "enabled_on": {
    "templates": ["collection"]
  }
}
{% endschema %}
