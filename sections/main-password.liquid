<section id="account-login" class="section-wrap">
  <div class="section form">
    <h1 data-title="Login">Login</h1>

    {%- form 'storefront_password' -%}
      {{ form.errors | default_errors }}

      <div class="form-row">
        <label for="password">Password</label>
        <input type="password"
          name="password"
          id="password"
          placeholder="Your password">
      </div>

      <div class="form-row">
        <button type="submit" name="commit">Enter</button>
      </div>
    {%- endform -%}

    <hr/>

    <p>Are you the store owner? <a href="\admin\" class="text-link">Log in here</a></p>
  </div>
</section>
