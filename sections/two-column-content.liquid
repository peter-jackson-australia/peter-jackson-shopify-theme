{% comment %}
  Two Column Content Section - Using Correct Product Picker
{% endcomment %}

<style>
  .two-column-content__grid {
    display: grid;
    grid-template-columns: 1fr;
    width: 100%;
    padding-top: var(--space-2xl);
    padding-bottom: calc(var(--space-2xl) - var(--space-m));
    border-bottom: 1px solid var(--neutral-200);
  }

  .two-column-content__item {
    width: 100%;
    display: flex;
    flex-direction: column;
  }

  .two-column-content__image-container {
    width: 100%;
    height: 0;
    padding-bottom: 130%;
    position: relative;
    overflow: hidden;
    border-bottom: 1px solid var(--neutral-200);
  }

  .two-column-content__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: filter 0.3s ease;
  }

  .two-column-content__product-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: var(--white);
    padding: var(--space-m);
    transform: translateY(100%);
    transition: transform 0.3s ease;
  }

  .two-column-content__image-container:hover .two-column-content__image.has-product {
    filter: grayscale(100%);
  }

  .two-column-content__image-container:hover .two-column-content__product-overlay {
    transform: translateY(0);
  }

  .two-column-content__product-info {
    display: flex;
    align-items: end;
    gap: var(--space-xs);
  }

  .two-column-content__product-details {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    gap: var(--space-2xs);
  }

  .two-column-content__model-wearing {
    color: var(--neutral-950);
  }

  .two-column-content__product-name {
    color: var(--neutral-600);
  }

  .two-column-content__product-price {
    color: var(--neutral-600);
  }

  .two-column-content__product-link {
    display: inline-flex;
    align-items: center;
    margin-left: auto;
    text-decoration: none;
    color: var(--neutral-950);
    gap: var(--space-xs);
  }

  .two-column-content__content {
    padding: var(--space-m);
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .two-column-content__heading-container {
    display: flex;
    gap: var(--space-m);
  }

  .two-column-content__description {
    margin-bottom: var(--space-s);
    color: var(--neutral-600);
    max-width: 80ch;
    margin-left: auto;
    text-align: right;
  }

  .two-column-content__link {
    display: inline-flex;
    align-items: center;
    text-decoration: none;
    color: var(--neutral-950);
    margin-top: var(--space-xs);
    gap: var(--space-xs);
  }

  @media (min-width: 1040px) {
    .two-column-content__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 1040px) {
    .two-column-content__grid {
      padding-top: var(--space-xl);
      padding-bottom: calc(var(--space-xl) - var(--space-m));
    }
    .two-column-content__heading-container {
      flex-direction: column;
      gap: var(--space-s);
    }
    .two-column-content__description {
      text-align: left;
      margin-left: 0px;
    }
    .two-column-content__product-link {
      margin-top: var(--space-s);
    }
  }

  @media (max-width: 768px) {
    .two-column-content__product-info {
      align-items: start;
      flex-direction: column;
    }
    .two-column-content__product-link {
      margin-right: auto;
      margin-left: 0px;
    }
  }
</style>

<section class="two-column-content">
  <div class="two-column-content__grid">
    {% for block in section.blocks %}
      {% assign has_product = false %}
      {% assign product_data = null %}

      {% if block.settings.product != blank %}
        {% assign product_handle = block.settings.product %}
        {% assign product_data = all_products[product_handle] %}
        {% if product_data.id != blank %}
          {% assign has_product = true %}
        {% endif %}
      {% endif %}

      <article class="two-column-content__item" {{ block.shopify_attributes }}>
        <div class="two-column-content__image-container">
          {% if block.settings.image != blank %}
            <picture>
              {% if block.settings.image_mobile != blank %}
                <source
                  media="(max-width: 767px)"
                  srcset="{{ block.settings.image_mobile | image_url: width: 'master' }}"
                >
              {% endif %}
              {% if has_product %}
                {{
                  block.settings.image
                  | image_url: width: 800
                  | image_tag:
                    class: 'two-column-content__image has-product',
                    loading: 'lazy',
                    alt: block.settings.image.alt
                }}
              {% else %}
                {{
                  block.settings.image
                  | image_url: width: 800
                  | image_tag: class: 'two-column-content__image', loading: 'lazy', alt: block.settings.image.alt
                }}
              {% endif %}
            </picture>
          {% else %}
            {{ 'image' | placeholder_svg_tag: 'two-column-content__image placeholder' }}
          {% endif %}

          {% if has_product %}
            <div class="two-column-content__product-overlay">
              <div class="two-column-content__product-info">
                <div class="two-column-content__product-details">
                  <p class="two-column-content__model-wearing heading--l">Model Is Wearing:</p>
                  <p class="two-column-content__product-name body">
                    {{ product_data.title }}:
                    <span class="two-column-content__product-price body">{{ product_data.price | money }}</span>
                  </p>
                </div>
                <a href="{{ product_data.url }}" class="two-column-content__product-link body">
                  View Product
                  {% render 'icon-arrow-submit-dark' %}
                </a>
              </div>
            </div>
          {% endif %}
        </div>

        <div class="two-column-content__content">
          <div class="two-column-content__heading-container">
            {% if block.settings.heading != blank %}
              <h2 class="two-column-content__heading heading--l">{{ block.settings.heading }}</h2>
            {% endif %}

            {% if block.settings.description != blank %}
              <p class="two-column-content__description body">{{ block.settings.description }}</p>
            {% endif %}
          </div>
          {% if block.settings.button_label != blank and block.settings.button_link != blank %}
            <a href="{{ block.settings.button_link }}" class="two-column-content__link body">
              {{ block.settings.button_label }}
              {% render 'icon-arrow-submit-dark' %}
            </a>
          {% endif %}
        </div>
      </article>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Two Column Content",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Column Contents"
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Column",
      "limit": 2,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Desktop Image"
        },
        {
          "type": "image_picker",
          "id": "image_mobile",
          "label": "Mobile Image (optional)"
        },
        {
          "type": "product",
          "id": "product",
          "label": "Featured Product (optional)",
          "info": "If selected, product info will appear on image hover"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Column Heading"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Add your description text here."
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button Label",
          "default": "Learn More"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Two Column Content",
      "blocks": [
        {
          "type": "column"
        },
        {
          "type": "column"
        }
      ]
    }
  ]
}
{% endschema %}
