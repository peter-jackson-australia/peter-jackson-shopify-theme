{% comment %}
  Two Column Content Section
{% endcomment %}

{{ 'section-two-column-content.css' | asset_url | stylesheet_tag }}

{% assign anchor_id = section.settings.anchor_id %}
{% assign blocks = section.blocks %}
{% assign animate_columns = section.settings.animate_columns %}

<div
  class="two-column-content"
  {% if anchor_id %}
    id="{{ anchor_id | downcase | replace: ' ', '-' }}-segment"
  {% endif %}
>
  <div
    class="two-column-content__grid"
    style="
      {% if section.settings.show_top_border %}border-top: 1px solid var(--neutral-50);{% endif %}
      {% if section.settings.show_bottom_border %}border-bottom: 1px solid var(--neutral-50);{% endif %}
    "
  >
    {% for block in blocks %}
      {% assign has_product = false %}
      {% assign product_data = null %}
      {% assign current_shopify_attrs = block.settings.shopify_attributes %}
      {% assign current_block_img = block.settings.image %}
      {% assign current_block_mobile_img = block.settings.image_mobile %}
      {% assign current_heading = block.settings.heading %}
      {% assign current_heading_animation = block.settings.heading_animation %}
      {% assign current_description = block.settings.description %}
      {% assign current_description_animation = block.settings.description_animation %}
      {% assign current_button_link = block.settings.button_link %}
      {% assign current_button_label = block.settings.button_label %}
      {% assign current_button_link = block.settings.button_link %}
      {% assign current_button_label = block.settings.button_label %}

      {% if block.settings.product %}
        {% assign current_product_handle = block.settings.product %}
        {% assign current_product_data = all_products[current_product_handle] %}
        {% if current_product_data.id != blank %}
          {% assign has_product = true %}
        {% endif %}
      {% endif %}

      <article
        class="two-column-content__item {% if animate_columns %}animate-container-cards-scroll{% endif %}"
        {{ current_shopify_attrs }}
      >
        <div class="two-column-content__image-container">
          <a href="{{ current_button_link }}">
            {% if current_block_img %}
              <picture>
                {% if current_block_mobile_img %}
                  <source
                    media="(max-width: 767px)"
                    srcset="
                      {{ current_block_mobile_img | image_url: width: 400 }} 1x,
                      {{ current_block_mobile_img | image_url: width: 800 }} 2x
                    "
                  >
                {% endif %}
                {% if has_product %}
                  {{
                    block.settings.image
                    | image_url: width: 1280
                    | image_tag:
                      class: 'two-column-content__image has-product',
                      loading: 'lazy',
                      decoding: 'async',
                      alt: current_block_img.alt,
                      widths: '400, 500, 600, 700, 800, 1000, 1200',
                      sizes: '(max-width: 768px) 100vw, (max-width: 1040px) 100vw, 50vw'
                  }}
                {% else %}
                  {{
                    current_block_img
                    | image_url: width: 1280
                    | image_tag:
                      class: 'two-column-content__image',
                      loading: 'lazy',
                      decoding: 'async',
                      alt: current_block_img.alt,
                      widths: '400, 500, 600, 700, 800, 1000, 1200',
                      sizes: '(max-width: 768px) 100vw, (max-width: 1040px) 100vw, 50vw'
                  }}
                {% endif %}
              </picture>
            {% endif %}
          </a>

          {% if has_product %}
            <div class="two-column-content__product-overlay">
              <div class="two-column-content__product-info">
                <div class="two-column-content__product-details">
                  <p class="two-column-content__model-wearing heading--l">Model Is Wearing:</p>
                  <p class="two-column-content__product-name body">
                    {{ product_data.title }}:
                    <span class="two-column-content__product-price body">
                      {{- product_data.price | money_with_currency -}}
                    </span>
                  </p>
                </div>
                <a href="{{ product_data.url }}" class="two-column-content__product-link body">
                  View Product
                  {% render '_icon-arrow-submit-dark' %}
                </a>
              </div>
            </div>
          {% endif %}
        </div>

        <div class="two-column-content__content">
          <div class="two-column-content__heading-container">
            {% if current_heading != blank %}
              <h2 class="two-column-content__heading heading--l {% if current_heading_animation != 'none' %}{{ current_heading_animation }}{% endif %}">
                {{ current_heading }}
              </h2>
            {% endif %}

            {% if current_description != blank %}
              <p class="two-column-content__description body {% if current_description_animation != 'none' %}{{ current_description_animation }}{% endif %}">
                {{ current_description }}
              </p>
            {% endif %}
          </div>
          {% if current_button_label != blank and current_button_link != blank %}
            <a href="{{ current_button_link }}" class="two-column-content__link body">
              {{ current_button_label }}
              {% render '_icon-arrow-submit-dark' %}
            </a>
          {% endif %}
        </div>
      </article>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Two Column Content",
  "limit": 1,
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "anchor_id",
      "label": "Anchor ID (lowercase with hyphens)",
      "info": "Example: history or about-us"
    },
    {
      "type": "checkbox",
      "id": "show_top_border",
      "label": "Show top border",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_bottom_border",
      "label": "Show bottom border",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "animate_columns",
      "label": "Animate columns",
      "default": false,
      "info": "Adds a staggered animation to columns as they scroll into view"
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Column",
      "limit": 2,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Desktop Image"
        },
        {
          "type": "image_picker",
          "id": "image_mobile",
          "label": "Mobile Image (optional)"
        },
        {
          "type": "product",
          "id": "product",
          "label": "Featured Product (optional)",
          "info": "If selected, product info will appear on image hover"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Column Heading"
        },
        {
          "type": "select",
          "id": "heading_animation",
          "label": "Heading Animation",
          "options": [
            {
              "value": "none",
              "label": "None"
            },
            {
              "value": "animate-word-slide-up-scroll",
              "label": "Slide Up Words"
            },
            {
              "value": "animate-word-rotate-scroll",
              "label": "Rotate In Words"
            },
            {
              "value": "animate-paragraph-slide-up-scroll",
              "label": "Slide Up"
            }
          ],
          "default": "none"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Add your description text here."
        },
        {
          "type": "select",
          "id": "description_animation",
          "label": "Description Animation",
          "options": [
            {
              "value": "none",
              "label": "None"
            },
            {
              "value": "animate-word-slide-up-scroll",
              "label": "Slide Up Words"
            },
            {
              "value": "animate-word-rotate-scroll",
              "label": "Rotate In Words"
            },
            {
              "value": "animate-paragraph-slide-up-scroll",
              "label": "Slide Up"
            }
          ],
          "default": "none"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button Label",
          "default": "Learn More"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Two Column Content",
      "category": "Image",
      "blocks": [
        {
          "type": "column"
        },
        {
          "type": "column"
        }
      ]
    }
  ],
  "enabled_on": {
    "templates": ["index", "page", "article", "blog"]
  }
}
{% endschema %}
