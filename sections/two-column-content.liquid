{% comment %}
  Two Column Content Section
{% endcomment %}

<style>
  .two-column-content__grid {
    display: grid;
    grid-template-columns: 1fr;
    width: 100%;
    padding-top: var(--space-2xl);
    padding-bottom: calc(var(--space-2xl) - var(--space-m));
    border-bottom: 1px solid var(--neutral-200);
  }

  @media (min-width: 1040px) {
    .two-column-content__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .two-column-content__item {
    width: 100%;
    display: flex;
    flex-direction: column;
  }

  .two-column-content__image-container {
    width: 100%;
    height: 0;
    padding-bottom: 130%;
    position: relative;
    overflow: hidden;
  }

  .two-column-content__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: filter 0.3s ease;
  }

  /* Product info overlay styles */
  .two-column-content__product-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: rgba(255, 255, 255, 0.9);
    padding: var(--space-m);
    opacity: 0;
    transform: translateY(100%);
    transition: opacity 0.3s ease, transform 0.3s ease;
    display: none;
  }

  .two-column-content__image-container:hover .two-column-content__image--with-product {
    filter: grayscale(100%);
  }

  .two-column-content__image-container:hover .two-column-content__product-overlay {
    opacity: 1;
    transform: translateY(0);
  }

  .two-column-content__product-info {
    display: flex;
    align-items: center;
    gap: var(--space-m);
  }

  .two-column-content__product-thumbnail {
    width: 60px;
    height: 60px;
    object-fit: cover;
    flex-shrink: 0;
  }

  .two-column-content__product-details {
    flex-grow: 1;
  }

  .two-column-content__model-wearing {
    color: var(--neutral-600);
    margin-bottom: var(--space-xs);
  }

  .two-column-content__product-name {
    margin-bottom: var(--space-xs);
    color: var(--neutral-900);
  }

  .two-column-content__product-price {
    margin-bottom: var(--space-xs);
    color: var(--neutral-800);
  }

  .two-column-content__product-link {
    display: inline-flex;
    align-items: center;
    margin-left: auto;
    text-decoration: none;
    color: var(--neutral-900);
    gap: var(--space-xs);
  }

  .two-column-content__content {
    padding: var(--space-m);
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .two-column-content__heading-container {
    display: flex;
    gap: var(--space-m);
  }

  .two-column-content__description {
    margin-bottom: var(--space-s);
    color: var(--neutral-600);
    max-width: 80ch;
    margin-left: auto;
    text-align: right;
  }

  .two-column-content__link {
    display: inline-flex;
    align-items: center;
    text-decoration: none;
    color: var(--neutral-900);
    margin-top: var(--space-xs);
    gap: var(--space-xs);
  }

  @media (max-width: 1040px) {
    .two-column-content__grid {
      padding-top: var(--space-xl);
      padding-bottom: calc(var(--space-xl) - var(--space-m));
    }
    .two-column-content__heading-container {
      flex-direction: column;
      gap: var(--space-s);
    }
    .two-column-content__description {
      text-align: left;
      margin-left: 0px;
    }
  }
</style>

<section class="two-column-content">
  <div class="two-column-content__grid">
    {% for block in section.blocks %}
      {% assign has_product = false %}
      {% if block.settings.product != blank %}
        {% assign has_product = true %}
        {% assign product = all_products[block.settings.product] %}
      {% endif %}

      <article class="two-column-content__item" {{ block.shopify_attributes }}>
        <div class="two-column-content__image-container">
          {% if block.settings.image != blank %}
            <picture>
              {% if block.settings.image_mobile != blank %}
                <source
                  media="(max-width: 767px)"
                  srcset="{{ block.settings.image_mobile | image_url: width: 'master' }}"
                >
              {% endif %}
              {{
                block.settings.image
                | image_url: width: 800
                | image_tag: class: has_product ? 'two-column-content__image two-column-content__image--with-product' : 'two-column-content__image', loading: 'lazy', alt: block.settings.image.alt
                | escape
                | default: block.settings.heading
              }}
            </picture>
          {% else %}
            {{ 'image' | placeholder_svg_tag: 'two-column-content__image placeholder' }}
          {% endif %}

          {% if has_product %}
            <div class="two-column-content__product-overlay" style="display: block;">
              <div class="two-column-content__product-info">
                {% if product.featured_image %}
                  <img
                    src="{{ product.featured_image | image_url: width: '120x120', crop: 'center' }}"
                    alt="{{ product.title }}"
                    class="two-column-content__product-thumbnail"
                    loading="lazy"
                    height="100"
                    width="100"
                  >
                {% endif %}
                <div class="two-column-content__product-details">
                  <p class="two-column-content__model-wearing body--s">Model Is Wearing:</p>
                  <p class="two-column-content__product-name body">{{ product.title }}</p>
                  <p class="two-column-content__product-price body">{{ product.price | money }}</p>
                </div>
                <a href="{{ product.url }}" class="two-column-content__product-link body--s">
                  View Product
                  {% render 'icon-arrow-submit-dark' %}
                </a>
              </div>
            </div>
          {% endif %}
        </div>

        <div class="two-column-content__content">
          <div class="two-column-content__heading-container">
            {% if block.settings.heading != blank %}
              <h2 class="two-column-content__heading heading--l">{{ block.settings.heading }}</h2>
            {% endif %}

            {% if block.settings.description != blank %}
              <p class="two-column-content__description body">{{ block.settings.description }}</p>
            {% endif %}
          </div>
          {% if block.settings.button_label != blank and block.settings.button_link != blank %}
            <a href="{{ block.settings.button_link }}" class="two-column-content__link body">
              {{ block.settings.button_label }}
              {% render 'icon-arrow-submit-dark' %}
            </a>
          {% endif %}
        </div>
      </article>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Two Column Content",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Column Contents"
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Column",
      "limit": 2,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Desktop Image"
        },
        {
          "type": "image_picker",
          "id": "image_mobile",
          "label": "Mobile Image (optional)"
        },
        {
          "type": "product",
          "id": "product",
          "label": "Featured Product (optional)",
          "info": "If selected, product info will appear on image hover"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Column Heading"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Add your description text here."
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button Label",
          "default": "Learn More"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Two Column Content",
      "blocks": [
        {
          "type": "column"
        },
        {
          "type": "column"
        }
      ]
    }
  ]
}
{% endschema %}
