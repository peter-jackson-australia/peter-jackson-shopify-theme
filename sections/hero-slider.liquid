<style>
  .hero {
    position: relative;
    height: calc(100dvh - var(--space-xl));
    overflow: hidden;
  }

  .hero__background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  .hero__overlay {
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: 2;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.6), transparent);
  }

  .hero__content {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    z-index: 3;
    padding: 0 var(--space-m) var(--space-2xl) var(--space-m);
    display: grid;
    gap: var(--space-s);
    color: var(--white);
  }

  .hero__content--left {
    text-align: left;
    justify-items: start;
  }

  .hero__content--center {
    text-align: center;
    justify-items: center;
  }

  .hero__content--right {
    text-align: right;
    justify-items: end;
  }

  .hero__description {
    max-width: 80ch;
  }

  .hero-slider {
    position: relative;
    height: calc(100dvh - var(--space-xl));
    overflow: hidden;
  }

  .hero-slider__slide {
    position: relative;
    height: 100%;
    width: 100%;
  }

  @media screen and (max-width: 768px) {
    .hero__content {
      padding-bottom: var(--space-xl);
      text-align: left;
      justify-items: start;
    }
  }
</style>

<div id="hero-slider-{{ section.id }}" class="hero-slider" aria-label="{{ section.settings.heading | escape }}">
  <div class="splide">
    <div class="splide__track">
      <ul class="splide__list">
        {% for block in section.blocks %}
          {% if block.type == 'slide' %}
            <li class="splide__slide hero-slider__slide" id="{{ block.id }}" {{ block.shopify_attributes }}>
              {% if block.settings.desktop_image %}
                {{
                  block.settings.desktop_image
                  | image_url: width: 2000
                  | image_tag:
                    class: 'hero__background hero__background--desktop',
                    alt: block.settings.desktop_image.alt,
                    preload: forloop.first
                }}
              {% endif %}

              {% if block.settings.mobile_image %}
                {{
                  block.settings.mobile_image
                  | image_url: width: 768
                  | image_tag:
                    class: 'hero__background hero__background--mobile',
                    alt: block.settings.mobile_image.alt,
                    preload: forloop.first
                }}
              {% endif %}

              <div class="hero__overlay"></div>

              <div class="hero__content hero__content--{{ block.settings.content_alignment | default: 'center' }}">
                <h1 class="heading--3xl">{{ block.settings.heading }}</h1>

                <div class="heading--l">
                  {{ block.settings.description }}
                </div>

                {% if block.settings.button_link and block.settings.button_label %}
                  <a
                    href="{{ block.settings.button_link }}"
                    class="button button--white"
                    aria-label="{{ block.settings.button_label | escape }}"
                  >
                    {{ block.settings.button_label }}
                  </a>
                {% endif %}
              </div>
            </li>
          {% endif %}
        {% endfor %}
      </ul>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const splideElement = document.querySelector('#hero-slider-{{ section.id }} .splide');

    if (splideElement) {
      new Splide(splideElement, {
        type: 'loop',
        perPage: 1,
        arrows: false,
        pagination: true,
        autoplay: {{ section.settings.autoplay }},
        interval: {{ section.settings.autoplay_speed | times: 1000 }},
        pauseOnHover: true,
        drag: true,
        snap: true,
      }).mount();
    }
  });
</script>

{% schema %}
{
  "name": "Hero Slider",
  "tag": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Auto-rotate slides",
      "default": true
    },
    {
      "type": "range",
      "id": "autoplay_speed",
      "min": 3,
      "max": 9,
      "step": 1,
      "unit": "s",
      "label": "Change slides every",
      "default": 5
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "limit": 4,
      "settings": [
        {
          "type": "image_picker",
          "id": "desktop_image",
          "label": "Desktop Background Image"
        },
        {
          "type": "image_picker",
          "id": "mobile_image",
          "label": "Mobile Background Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Welcome to Our Store"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "Discover our latest collection"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button Text",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        },
        {
          "type": "select",
          "id": "content_alignment",
          "label": "Content Alignment",
          "default": "center",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ]
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Slider",
      "blocks": [
        {
          "type": "slide"
        }
      ]
    }
  ],
  "enabled_on": {
    "templates": ["index", "page", "article", "blog"]
  }
}
{% endschema %}
