<style>
  .hero-slider {
    position: relative;
    height: calc(100dvh - var(--space-xl));
  }

  .hero-slider .splide__slide {
    position: relative;
    height: calc(100dvh - var(--space-xl));
  }

  .hero-slider__background {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  .hero-slider__video {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .hero-slider__video video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-slider__background--mobile {
    display: none;
  }

  @media not all and (min-resolution:.001dpcm) {
    @supports (-webkit-appearance:none) {
      .hero-slider .hero-slider__overlay {
        -webkit-transform: translate3d(0,0,0);
      }

      .hero-slider .hero-slider__content {
        -webkit-transform: translate3d(0,0,0);
      }
    }
  }

  .hero-slider__overlay {
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: 2;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.6), transparent);
  }

  .hero-slider__content {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    z-index: 3;
    padding: 0 var(--space-m) var(--space-2xl) var(--space-m);
    display: grid;
    gap: var(--space-s);
    color: var(--white);
  }

  .hero-slider__content--left {
    text-align: left;
    justify-items: start;
  }

  .hero-slider__content--center {
    text-align: center;
    justify-items: center;
  }

  .hero-slider__content--right {
    text-align: right;
    justify-items: end;
  }

  .hero-slider__description {
    max-width: 80ch;
  }

  .hero-slider .splide__pagination {
    position: absolute;
    bottom: var(--space-m);
    left: 50%;
    transform: translateX(-50%);
    padding: 0;
    z-index: 4;
    display: flex;
    gap: var(--space-xs);
  }

  .hero-slider__content--left ~ .splide__pagination {
    left: var(--space-m);
    transform: none;
  }

  .hero-slider__content--right ~ .splide__pagination {
    left: auto;
    right: var(--space-m);
    transform: none;
  }

  .hero-slider .splide__pagination__page {
    width: 8px;
    height: 8px;
    margin: 0;
    border: none;
    border-radius: 50%;
    background-color: var(--neutral-600);
    transition: background-color 0.3s ease;
    cursor: pointer;
  }

  .hero-slider .splide__pagination__page.is-active {
    background-color: var(--white);
    transform: none;
  }

  @media screen and (max-width: 768px) {
    .hero-slider__content {
      padding-bottom: var(--space-xl);
      text-align: left;
      justify-items: start;
    }

    .hero-slider .splide__pagination {
        margin-left: var(--space-m);
        left: var(--space-m);
        bottom: var(--space-s);
      }

    {% for block in section.blocks %}
      {% if block.settings.mobile_image %}
        #hero-slider-{{ section.id }} .splide__slide[data-block-id="{{ block.id }}"] .hero-slider__background--desktop {
          display: none;
        }

        #hero-slider-{{ section.id }} .splide__slide[data-block-id="{{ block.id }}"] .hero-slider__background--mobile {
          display: block;
        }
      {% endif %}
    {% endfor %}
  }
</style>

<div class="hero-slider splide" id="hero-slider-{{ section.id }}">
  <div class="splide__track">
    <ul class="splide__list">
      {% for block in section.blocks %}
        <li class="splide__slide" {{ block.shopify_attributes }} data-block-id="{{ block.id }}">
          {% if block.settings.media_type == 'image' %}
            {% if block.settings.desktop_image %}
              {% assign loading_attr = 'lazy' %}
              {% if forloop.first %}
                {% assign loading_attr = 'eager' %}
              {% endif %}

              {{
                block.settings.desktop_image
                | image_url: width: 2000
                | image_tag:
                  class: 'hero-slider__background hero-slider__background--desktop',
                  loading: loading_attr,
                  preload: true
              }}
            {% endif %}

            {% if block.settings.mobile_image %}
              {{
                block.settings.mobile_image
                | image_url: width: 768
                | image_tag:
                  class: 'hero-slider__background hero-slider__background--mobile',
                  loading: loading_attr,
                  preload: true
              }}
            {% endif %}
          {% elsif block.settings.media_type == 'video' and block.settings.video %}
            <div class="hero-slider__video">
              {{
                block.settings.video
                | video_tag:
                  autoplay: true,
                  loop: true,
                  muted: true,
                  controls: false,
                  playsinline: true,
                  class: 'hero-slider__video-element',
                  id: 'video-'
                | append: block.id
              }}
            </div>
          {% endif %}

          <div class="hero-slider__overlay"></div>
          <div class="hero-slider__content hero-slider__content--{{ block.settings.content_alignment | default: 'center' }}">
            <h2 class="heading--3xl">{{ block.settings.heading }}</h2>

            <div class="heading--l">
              {{ block.settings.description }}
            </div>

            {% if block.settings.button_link and block.settings.button_label %}
              <a
                href="{{ block.settings.button_link }}"
                class="button button--white"
                aria-label="{{ block.settings.button_label | escape }}"
              >
                {{ block.settings.button_label }}
              </a>
            {% endif %}
          </div>
        </li>
      {% endfor %}
    </ul>
  </div>
  <div class="splide__pagination"></div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const slider = new Splide('#hero-slider-{{ section.id }}', {
      type: 'loop',
      perPage: 1,
      arrows: false,
      pagination: true,
      drag: true,
      autoplay: {{ section.settings.autoplay }},
      interval: {{ section.settings.slide_interval | times: 1000 }}
    });

    const isSafari = navigator.vendor && navigator.vendor.indexOf('Apple') > -1 &&
                   navigator.userAgent && !navigator.userAgent.match('CriOS');

    if (isSafari) {
      slider.on('mounted', function() {
        const sliderElement = document.getElementById('hero-slider-{{ section.id }}');
        const overlaysInHero = sliderElement.querySelectorAll('.hero-slider__overlay');
        const contentsInHero = sliderElement.querySelectorAll('.hero-slider__content');
        overlaysInHero.forEach(el => {
          el.style.transform = 'translateZ(0)';
        });

        contentsInHero.forEach(el => {
          el.style.transform = 'translateZ(0)';
        });
      });

      slider.on('move', function() {
        const currentSlideNum = slider.index;
        requestAnimationFrame(function() {
          const currentSlide = slider.Components.Elements.slides[currentSlideNum];
          const overlay = currentSlide.querySelector('.hero-slider__overlay');
          const content = currentSlide.querySelector('.hero-slider__content');

          if (overlay) overlay.style.willChange = 'transform';
          if (content) content.style.willChange = 'transform';

          setTimeout(function() {
            if (overlay) overlay.style.willChange = 'auto';
            if (content) content.style.willChange = 'auto';
          }, 500);
        });
      });
    }

    slider.on('mounted', function() {
      const heroSlider = document.getElementById('hero-slider-{{ section.id }}');
      const videos = heroSlider.querySelectorAll('.hero-slider__video-element');

      videos.forEach(function(video) {
        video.muted = true;
        video.playsInline = true;
      });
    });

    slider.mount();
  });
</script>

{% schema %}
{
  "name": "Hero Slider",
  "limit": 1,
  "tag": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Autoplay slides",
      "default": true
    },
    {
      "type": "range",
      "id": "slide_interval",
      "min": 3,
      "max": 30,
      "step": 1,
      "unit": "sec",
      "label": "Change slides every",
      "default": 5
    }
  ],
  "max_blocks": 4,
  "blocks": [
    {
      "name": "Slide",
      "type": "slide",
      "settings": [
        {
          "type": "select",
          "id": "media_type",
          "label": "Media Type",
          "options": [
            {
              "value": "image",
              "label": "Image"
            },
            {
              "value": "video",
              "label": "Video"
            }
          ],
          "default": "image"
        },
        {
          "type": "image_picker",
          "id": "desktop_image",
          "label": "Desktop Image",
          "info": "Used when Media Type is set to Image"
        },
        {
          "type": "image_picker",
          "id": "mobile_image",
          "label": "Mobile Image (optional)",
          "info": "If not provided, Desktop Image will be used on mobile devices"
        },
        {
          "type": "video",
          "id": "video",
          "label": "Video",
          "info": "Used when Media Type is set to Video."
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Welcome to Our Store"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "Discover our latest collection"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button Text",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        },
        {
          "type": "select",
          "id": "content_alignment",
          "label": "Content Alignment",
          "default": "center",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ]
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Slider",
      "blocks": [
        {
          "type": "slide"
        }
      ]
    }
  ],
  "enabled_on": {
    "templates": ["index", "page", "article", "blog"]
  }
}
{% endschema %}
