{% comment %}
  FAQ Section
{% endcomment %}

<style>
  .faq-section {
    max-width: 1200px;
    margin: 0 auto;
    padding: var(--space-2xl) var(--space-m);
  }

  .faq-items__item > .ploiu-accordion-body > .body > p {
    margin-bottom: var(--space-m);
  }

  .faq-section__heading:first-of-type {
    margin-top: 0px;
  }

  .faq-section__heading {
    margin-top: var(--space-m);
  }
</style>

<div class="faq-section">
  <div class="faq-items">
    {% for block in section.blocks %}
      {% if block.type == 'heading' %}
        <h2 class="faq-section__heading heading--2xl">{{ block.settings.heading }}</h2>
      {% elsif block.type == 'faq_item' %}
        <accordion-element
          class="faq-items__item body--bold"
          data-title="{{ block.settings.question }}"
        >
          <div class="body">
            {{ block.settings.answer }}
          </div>
        </accordion-element>
      {% endif %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "FAQ Section",
  "tag": "section",
  "class": "section",
  "blocks": [
    {
      "name": "Heading",
      "type": "heading",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading Text",
          "default": "FAQ Category"
        }
      ]
    },
    {
      "name": "FAQ Item",
      "type": "faq_item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "FAQ question"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "Answer",
          "default": "<p>Answer your customer's question here.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ Section",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "faq_item"
        },
        {
          "type": "faq_item"
        },
        {
          "type": "heading"
        },
        {
          "type": "faq_item"
        }
      ]
    }
  ]
}
{% endschema %}
