{% comment %}
  FAQ Section
{% endcomment %}

<style>
  .faq-section {
    max-width: 900px;
    margin: 0 auto;
    padding: var(--space-2xl) 0px;
    display: flex;
    flex-direction: column;
    gap: var(--space-m);
  }

  .faq-items__item > .ploiu-accordion-body > .body > p {
    margin-bottom: var(--space-m);
  }
</style>

<div class="faq-section">
  {% if section.settings.heading != blank %}
    <h2 class="faq-section__heading heading--2xl">{{ section.settings.heading }}</h2>
  {% endif %}

  <div class="faq-items">
    {% for block in section.blocks %}
      {% if block.type == 'faq_item' %}
        <accordion-element
          class="faq-items__item body--bold"
          data-title="{{ block.settings.question }}"
        >
          <div class="body">
            {{ block.settings.answer }}
          </div>
        </accordion-element>
      {% endif %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "FAQ Section",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Frequently Asked Questions"
    }
  ],
  "blocks": [
    {
      "name": "FAQ Item",
      "type": "faq_item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "FAQ question"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "Answer",
          "default": "<p>Answer your customer's question here.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ Section",
      "blocks": [
        {
          "type": "faq_item"
        },
        {
          "type": "faq_item"
        },
        {
          "type": "faq_item"
        }
      ]
    }
  ]
}
{% endschema %}
