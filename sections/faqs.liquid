{% comment %}
  FAQ Section
{% endcomment %}

{{ 'section-faqs.css' | asset_url | stylesheet_tag }}

{% assign show_top_border = section.settings.show_top_border %}
{% assign show_bottom_border = section.settings.show_bottom_border %}
{% assign animate_faqs = section.settings.animate_faqs %}
{% assign blocks = section.blocks %}

<div
  class="faq-section"
  style="
    {% if show_top_border %}border-top: 1px solid var(--neutral-50);{% endif %}
    {% if show_bottom_border %}border-bottom: 1px solid var(--neutral-50);{% endif %}
  "
>
  <div class="faq-section__container">
    <div class="faq-items {% if animate_faqs %}animate-container-cards-scroll{% endif %}">
      {% for block in blocks %}
        {% assign block_type = block.type %}
        {% assign heading_text = block.settings.heading %}
        {% assign anchor_id_raw = block.settings.anchor_id %}
        {% assign anchor_id_slug = anchor_id_raw | downcase | replace: ' ', '-' %}
        {% assign question_text = block.settings.question %}
        {% assign answer_richtext = block.settings.answer %}
        {% if block_type == 'heading' %}
          <h2
            class="faq-section__heading heading--2xl"
            {% if anchor_id_raw != blank %}
              id="{{ anchor_id_slug }}-segment"
            {% endif %}
          >
            {{ heading_text }}
          </h2>
        {% elsif block_type == 'faq_item' %}
          <accordion-element
            class="faq-items__item body--bold"
            data-title="{{ question_text }}"
          >
            <div class="body">
              {{ answer_richtext }}
            </div>
          </accordion-element>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "FAQ Section",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_top_border",
      "label": "Show top border",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_bottom_border",
      "label": "Show bottom border",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "animate_faqs",
      "label": "Animate FAQ items",
      "default": false,
      "info": "Adds a staggered animation to FAQ items as they scroll into view"
    }
  ],
  "blocks": [
    {
      "name": "Heading",
      "type": "heading",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading Text",
          "default": "FAQ Category"
        },
        {
          "type": "text",
          "id": "anchor_id",
          "label": "Anchor ID (lowercase with hyphens)",
          "info": "Example: shipping or returns"
        }
      ]
    },
    {
      "name": "FAQ Item",
      "type": "faq_item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "FAQ question"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "Answer",
          "default": "<p>Answer your customer's question here.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ Section",
      "category": "FAQ's",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "faq_item"
        }
      ]
    }
  ]
}
{% endschema %}
