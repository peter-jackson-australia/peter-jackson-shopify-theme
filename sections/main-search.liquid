<script src="{{ 'ajaxinate.min.js' | asset_url }}" defer></script>

<style>
  .products-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
  }

  .product-card {
    opacity: 1 !important;
  }

  .collection-controls {
    display: flex;
    justify-content: space-between;
    align-items: stretch;
    margin-bottom: var(--space-m);
    padding: 0 var(--space-m);
    gap: var(--space-xs);
  }

  .collection-controls__filter-button {
    background-color: transparent;
    border: 1px solid #ccc;
    padding: 8px 16px;
    cursor: pointer;
  }

  .filter-sidebar {
    position: fixed;
    top: calc(var(--space-xl) + 35px);
    bottom: 0;
    left: 0;
    width: 400px;
    background-color: var(--white);
    z-index: 9998;
  }

  .filter-sidebar__overlay {
    position: fixed;
    top: calc(var(--space-xl) + 35px);
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.6);
    z-index: 9997;
  }

  body.filter-open {
    overflow: hidden;
  }

  @media (max-width: 768px) {
    .products-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>

<div id="{{ section.id }}" class="section-wrap">
  <div class="section">
    {% if search.performed %}
      {% assign search_term = search.terms | capitalize | prepend: '&quot;' | append: '&quot;' %}
      {% capture title %}Found {{ search.results_count }} results for {{ search_term }}{% endcapture %}
      <h1 data-title="{{ title }}">{{ title }}</h1>
    {% else %}
      <h1 data-title="Search">Search Products</h1>
    {% endif %}

    <form id="search-form" action="{{ routes.search_url }}" method="get" class="flex middle">
      <input type="hidden" name="type" value="product">
      <input
        type="text"
        name="q"
        value="{{ search.terms }}"
        placeholder="Enter product name or keywords..."
        maxlength="128"
      >
      <button type="submit" class="button solid">Search</button>
    </form>
    <hr>

    {% if search.performed %}
      <div
        x-data="{ isFilterOpen: false }"
      >
        <div x-show="isFilterOpen" x-cloak>
          <div
            class="filter-sidebar__overlay"
            @click="isFilterOpen = false; document.body.classList.remove('filter-open')"
          ></div>
          <aside class="filter-sidebar">
            <div class="filter-sidebar-header">
              <h3 class="heading--xl">Filters</h3>
              <p>
                <a class="body" href="{{ routes.search_url }}?q={{ search.terms | escape }}&type=product">Clear all</a>
              </p>
              <button
                class="filter-close-btn"
                @click="isFilterOpen = false; document.body.classList.remove('filter-open')"
                aria-label="Close filters"
              >
                {% render 'icon-close' %}
              </button>
            </div>
            {% render 'search-filters' %}
          </aside>
        </div>

        <div class="collection-controls">
          <button
            class="collection-controls__filter-button body"
            @click="isFilterOpen = !isFilterOpen; document.body.classList.toggle('filter-open', isFilterOpen)"
          >
            Filters
            <span>{% render 'icon-filter' %}</span>
          </button>

          <p class="body">
            {{ search.results_count }}
            {% if search.results_count == 1 %}Result{% else %}Results{% endif %}
          </p>
        </div>

        {% paginate search.results by section.settings.limit %}
          <div id="AjaxinateContainer" class="products-grid">
            {% if search.results_count == 0 %}
              <div>
                <p>No products found</p>
                <p>Try adjusting your search terms or <a href="/">return home</a></p>
              </div>
            {% else %}
              {% for product in search.results %}
                {% render 'product-card', product: product %}
              {% endfor %}
            {% endif %}
          </div>

          <div id="AjaxinatePagination">
            {% if paginate.next %}
              <a aria-label="Loading More" href="{{ paginate.next.url }}">Load More</a>
            {% endif %}
          </div>
        {% endpaginate %}
      </div>
    {% endif %}
  </div>
</div>

{% javascript %}
  window.addEventListener('load', function () {
    if (document.querySelector('#AjaxinateContainer')) {
      var endlessScroll = new Ajaxinate({
        method: 'scroll',
        container: '#AjaxinateContainer',
        pagination: '#AjaxinatePagination',
        offset: '100',
      });
    }
  });
{% endjavascript %}

{% schema %}
{
  "name": "Search",
  "tag": "section",
  "limit": 1,
  "class": "search-products-section",
  "enabled_on": {
    "templates": ["search"]
  },
  "settings": [
    {
      "type": "range",
      "id": "limit",
      "label": "Products per load",
      "info": "Number of products to show initially and load with each scroll.",
      "min": 4,
      "max": 50,
      "step": 1,
      "default": 24
    }
  ]
}
{% endschema %}
