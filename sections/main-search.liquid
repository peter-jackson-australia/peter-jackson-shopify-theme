<script src="{{ 'ajaxinate.min.js' | asset_url }}" defer></script>

<style>
  .products-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-2xs);
  }

  .product-card {
    display: block;
    position: relative;
    height: 100%;
    overflow: hidden;
  }

  .product-card__image-link {
    display: block;
  }

  .product-card__image-wrapper {
    position: relative;
    width: 100%;
    overflow: hidden;
    background-color: var(--neutral-50);
    contain: paint;
  }

  .product-card__image {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .product-card__content {
    padding: var(--space-xs) var(--space-m);
    display: flex;
    flex-direction: column;
    gap: var(--space-2xs);
  }

  .product-card__title {
    color: var(--neutral-950);
  }

  .product-card__title-link {
    text-decoration: none;
  }

  .product-card__material {
    color: var(--neutral-600);
  }

  .product-card__title,
  .product-card__material,
  .product-card__price {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .product-card__price {
    margin-top: auto;
  }

  .product-card__slider-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .product-card__slider {
    width: 100%;
    height: auto;
  }

  .product-card__slider .splide__track,
  .product-card__slider .splide__list,
  .product-card__slider .splide__slide {
    height: auto;
  }

  .product-card__slider .splide__slide img {
    width: 100%;
    height: auto;
  }

  .product-card__slider .splide__arrows {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    pointer-events: none;
  }

  .product-card__slider .splide__arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    pointer-events: auto;
    cursor: pointer;
    width: var(--space-l);
    height: 100%;
  }

  .product-card__slider .splide__arrow--prev {
    left: var(--space-3xs);
  }

  .product-card__slider .splide__arrow--next {
    right: var(--space-3xs);
  }

  .product-card__slider .splide__arrow:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .product-card__slider .splide__progress {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 2px;
    background: transparent;
    z-index: 2;
  }

  .product-card__slider .splide__progress__bar {
    background: var(--neutral-950);
    height: 2px;
    transition: width 300ms ease;
    width: 0;
  }

  .product-card__price--compare {
    text-decoration: line-through;
    color: var(--neutral-600);
    margin-left: var(--space-2xs);
  }

  .search-controls {
    display: flex;
    justify-content: space-between;
    align-items: stretch;
    margin-bottom: var(--space-m);
    padding: 0 var(--space-m);
    gap: var(--space-xs);
  }

  .search-controls__filter-button {
    background-color: transparent;
    cursor: pointer;
    padding: var(--space-2xs) var(--space-s);
    border: 1px solid var(--neutral-200);
    color: var(--neutral-950);
  }

  .search-filter-sidebar {
    position: fixed;
    top: calc(var(--space-xl) + 35px);
    bottom: 0;
    left: 0;
    width: 400px;
    background-color: var(--white);
    z-index: 9998;
  }

  .search-filter-sidebar__overlay {
    position: fixed;
    top: calc(var(--space-xl) + 35px);
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.6);
    z-index: 9997;
  }

  body.search-filter-open {
    overflow: hidden;
  }

  #AjaxinatePagination {
    margin: var(--space-m);
  }

  .no-products-message {
    grid-column: 1 / -1;
    text-align: center;
    padding: var(--space-xl);
    background-color: var(--neutral-50);
  }

  @media (max-width: 768px) {
    .products-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>

<div id="{{ section.id }}" class="section-wrap">
  <div class="section">
    {% if search.performed %}
      {% assign search_term = search.terms | capitalize | prepend: '&quot;' | append: '&quot;' %}
      {% capture title %}Found {{ search.results_count }} results for {{ search_term }}{% endcapture %}
      <h1 data-title="{{ title }}">{{ title }}</h1>
    {% else %}
      <h1 data-title="Search">Search Products</h1>
    {% endif %}

    <form id="search-form" action="{{ routes.search_url }}" method="get" class="flex middle">
      <input type="hidden" name="type" value="product">
      <input
        type="text"
        name="q"
        value="{{ search.terms }}"
        placeholder="Enter product name or keywords..."
        maxlength="128"
      >
      <button type="submit" class="button solid">Search</button>
    </form>
    <hr>

    {% if search.performed %}
      <div
        x-data="{ isFilterOpen: false }"
      >
        <div x-show="isFilterOpen" x-cloak>
          <div
            class="search-filter-sidebar__overlay"
            @click="isFilterOpen = false; document.body.classList.remove('search-filter-open')"
          ></div>
          <aside class="search-filter-sidebar">
            <div class="search-filter-sidebar-header">
              <h3 class="heading--xl">Filters</h3>
              <p>
                <a class="body" href="{{ routes.search_url }}?q={{ search.terms | escape }}&type=product">Clear all</a>
              </p>
              <button
                class="search-filter-close-btn"
                @click="isFilterOpen = false; document.body.classList.remove('search-filter-open')"
                aria-label="Close filters"
              >
                {% render 'icon-close' %}
              </button>
            </div>
            {% render 'search-filters' %}
          </aside>
        </div>

        <div class="search-controls">
          <button
            class="search-controls__filter-button body"
            @click="isFilterOpen = !isFilterOpen; document.body.classList.toggle('search-filter-open', isFilterOpen)"
          >
            Filters
            <span>{% render 'icon-filter' %}</span>
          </button>

          <p class="body">
            {{ search.results_count }}
            {% if search.results_count == 1 %}Result{% else %}Results{% endif %}
          </p>
        </div>

        {% paginate search.results by section.settings.limit %}
          <div id="AjaxinateContainer" class="products-grid animate-container-cards-scroll">
            {% if search.results_count == 0 %}
              <div class="no-products-message">
                <p class="heading--l" style="color: var(--neutral-950)">No products found</p>
                <p class="body">
                  Try adjusting your search terms or <a href="/" style="color: var(--neutral-950)">return home</a>
                </p>
              </div>
            {% else %}
              {% for product in search.results %}
                {% render 'product-card', product: product, image_width: 600 %}
              {% endfor %}
            {% endif %}
          </div>

          <div id="AjaxinatePagination">
            {% if paginate.next %}
              <a aria-label="Loading More" href="{{ paginate.next.url }}">Load More</a>
            {% endif %}
          </div>
        {% endpaginate %}
      </div>
    {% endif %}
  </div>
</div>

{% javascript %}
  window.addEventListener('load', function () {
    if (document.querySelector('#AjaxinateContainer')) {
      var endlessScroll = new Ajaxinate({
        method: 'scroll',
        container: '#AjaxinateContainer',
        pagination: '#AjaxinatePagination',
        offset: '100',
        loadingText:
          '<div style="margin: auto 0; display:flex;justify-content:center;align-items:center;padding:var(--space-m) 0;width:100%;height:1px;overflow:hidden"><svg fill=#E7E7E7 height=1 style=max-width:300px viewBox="0 0 100 1"width=100% xmlns=http://www.w3.org/2000/svg><style>.react{animation:moving 1s ease-in-out infinite;transform-origin:0 50%}@keyframes moving{0%{width:0%}50%{width:100%;transform:translateX(0)}100%{width:0;transform:translateX(100%)}}</style><rect class=react fill=#E7E7E7 height=1 width=100% /></svg></div>',
      });
    }

    document.addEventListener(
      'click',
      function (event) {
        if (event.target.closest('.splide__arrow')) {
          event.preventDefault();
        }
      },
      true
    );

    document.querySelectorAll('[x-data]').forEach((el) => {
      if (el.hasAttribute('x-data') && el.__x) {
        if (el.__x.$data.hasOwnProperty('isMobile')) {
          el.__x.$data.isMobile = window.innerWidth < 768;
        }
      }
    });
  });
{% endjavascript %}

{% schema %}
{
  "name": "Search",
  "tag": "section",
  "limit": 1,
  "class": "search-products-section",
  "enabled_on": {
    "templates": ["search"]
  },
  "settings": [
    {
      "type": "range",
      "id": "limit",
      "label": "Products per load",
      "info": "Number of products to show initially and load with each scroll.",
      "min": 4,
      "max": 50,
      "step": 1,
      "default": 24
    }
  ]
}
{% endschema %}
