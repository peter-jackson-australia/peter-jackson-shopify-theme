    padding: var(--space-m);
  }

  .size-guide-title {
    margin: 0;
  }

  .main-tabs {
    display: flex;
    gap: var(--space-m);
  }

  .main-tab-button {
    border: none;
    background: none;
    padding: var(--space-xs) var(--space-s);
    cursor: pointer;
    border-bottom: 2px solid transparent;
    transition: all 0.2s ease;
  }

  .main-tab-button.active {
    border-bottom: 2px solid var(--neutral-950);
  }

  .main-tab-button:hover:not(.active) {
    border-bottom: 2px solid var(--neutral-400);
  }

  .size-guide-content {
    display: flex;
    min-height: 500px;
  }

  .size-guide-left {
    width: 40%;
    padding: var(--space-l);
    display: flex;
    flex-direction: column;
  }

  .size-guide-right {
    width: 60%;
    padding: var(--space-l);
    overflow-x: auto;
  }

  .guide-image {
    margin-bottom: var(--space-m);
  }

  .sizing-image {
    max-width: 100%;
    height: auto;
    display: block;
  }

  .measurement-item {
    margin-bottom: var(--space-m);
  }

  .measurement-item h6 {
    margin-bottom: var(--space-xs);
  }

  .measurement-item p {
    color: var(--neutral-600);
    margin-top: 0;
  }

  .size-options {
    margin-bottom: var(--space-m);
  }

  .size-button {
    border: none;
    background: none;
    padding: var(--space-xs) var(--space-s);
    cursor: pointer;
    margin-right: var(--space-s);
    border-bottom: 2px solid transparent;
  }

  .size-button.active {
    border-bottom: 2px solid var(--neutral-950);
  }

  .size-table {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0;
  }

  .size-table th,
  .size-table td {
    padding: var(--space-xs) var(--space-s);
    text-align: left;
    white-space: nowrap;
  }

  .size-table th {
    background-color: var(--neutral-100);
  }

  .tab-content {
    display: none;
  }

  .tab-content.active {
    display: block;
  }

  .size-content {
    display: none;
  }

  .size-content.active {
    display: table;
  }

  @media screen and (max-width: 768px) {
    .size-guide-header {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-m);
    }

    .main-tabs {
      width: 100%;
      overflow-x: auto;
      padding-bottom: var(--space-xs);
    }

    .size-guide-content {
