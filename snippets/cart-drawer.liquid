{% comment %}
  Simple Cart Drawer - Reliable Implementation
  This snippet creates a cart drawer that works with Liquid Ajax Cart
{% endcomment %}

<style>
  .simple-cart-drawer {
    position: fixed;
    top: 0;
    right: -400px;
    width: 100%;
    max-width: 400px;
    height: 100vh;
    background: #ffffff;
    box-shadow: -2px 0 10px rgba(0, 0, 0, 0.1);
    z-index: 1000;
    transition: right 0.3s ease-out;
    display: flex;
    flex-direction: column;
  }

  .simple-cart-drawer.is-active {
    right: 0;
  }

  .simple-cart-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: 999;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s, visibility 0.3s;
  }

  .simple-cart-overlay.is-active {
    opacity: 1;
    visibility: visible;
  }

  .simple-cart__header {
    padding: 15px;
    border-bottom: 1px solid #e5e5e5;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .simple-cart__title {
    margin: 0;
    font-size: 18px;
  }

  .simple-cart__close {
    background: none;
    border: none;
    font-size: 24px;
    cursor: pointer;
    padding: 0;
  }

  .simple-cart__content {
    flex: 1;
    overflow-y: auto;
    padding: 15px;
  }

  .simple-cart__empty-message {
    text-align: center;
    padding: 30px 0;
  }

  .simple-cart__item {
    display: grid;
    grid-template-columns: 80px 1fr auto;
    gap: 15px;
    padding: 15px 0;
    border-bottom: 1px solid #e5e5e5;
  }

  .simple-cart__item-image {
    width: 80px;
    height: 80px;
    object-fit: cover;
  }

  .simple-cart__item-details {
    display: flex;
    flex-direction: column;
  }

  .simple-cart__item-title {
    font-weight: bold;
    margin-bottom: 5px;
  }

  .simple-cart__item-variant {
    font-size: 12px;
    color: #666;
    margin-bottom: 5px;
  }

  .simple-cart__item-price {
    margin-bottom: 5px;
  }

  .simple-cart__quantity-wrapper {
    display: flex;
    align-items: center;
    margin-bottom: 5px;
  }

  .simple-cart__quantity-btn {
    background: #f5f5f5;
    border: none;
    width: 25px;
    height: 25px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    text-decoration: none;
    color: #333;
  }

  .simple-cart__quantity-input {
    width: 40px;
    text-align: center;
    margin: 0 5px;
    padding: 2px 5px;
    border: 1px solid #e5e5e5;
  }

  .simple-cart__remove {
    color: #999;
    font-size: 14px;
    text-decoration: underline;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
    text-align: left;
  }

  .simple-cart__footer {
    border-top: 1px solid #e5e5e5;
    padding: 15px;
  }

  .simple-cart__subtotal {
    display: flex;
    justify-content: space-between;
    margin-bottom: 15px;
    font-weight: bold;
  }

  .simple-cart__checkout {
    display: block;
    width: 100%;
    padding: 10px;
    background: #000;
    color: #fff;
    border: none;
    text-align: center;
    font-weight: bold;
    margin-bottom: 10px;
    cursor: pointer;
    text-decoration: none;
  }

  .simple-cart__continue {
    display: block;
    width: 100%;
    padding: 10px;
    background: transparent;
    color: #000;
    border: 1px solid #000;
    text-align: center;
    cursor: pointer;
  }
</style>

<div
  data-ajax-cart-section
  id="simple-cart-drawer"
  class="simple-cart-drawer"
>
  <div class="simple-cart__header">
    <h2 class="simple-cart__title">
      Cart (<span data-ajax-cart-bind="item_count">{{ cart.item_count }}</span>)
    </h2>
    <button class="simple-cart__close" onclick="closeSimpleCart()">Ã—</button>
  </div>

  <div class="simple-cart__content">
    <!-- Empty cart message -->
    {% if cart.item_count == 0 %}
      <div class="simple-cart__empty-message">
        <p>Your cart is empty</p>
      </div>
    {% else %}
      <!-- Cart items -->
      {% for item in cart.items %}
        <div class="simple-cart__item" data-item-key="{{ item.key }}">
          <img
            src="{{ item.image | image_url: width: 160 }}"
            alt="{{ item.title | escape }}"
            class="simple-cart__item-image"
            loading="lazy"
            width="80"
            height="80"
          >

          <div class="simple-cart__item-details">
            <div class="simple-cart__item-title">
              {{ item.product.title | escape }}
            </div>

            {% unless item.product.has_only_default_variant %}
              <div class="simple-cart__item-variant">
                {% for option in item.options_with_values %}
                  {{ option.name }}: {{ option.value -}}
                  {%- unless forloop.last %}, {% endunless %}
                {% endfor %}
              </div>
            {% endunless %}

            <div class="simple-cart__item-price">
              {{ item.final_price | money }}
            </div>

            <div class="simple-cart__quantity-wrapper">
              <a
                href="{{ routes.cart_change_url }}?id={{ item.key }}&quantity={{ item.quantity | minus: 1 }}"
                class="simple-cart__quantity-btn"
                data-ajax-cart-request-button
                >-</a
              >

              <input
                type="number"
                name="updates[{{ item.key }}]"
                value="{{ item.quantity }}"
                min="0"
                class="simple-cart__quantity-input"
                data-ajax-cart-quantity-input="{{ item.key }}"
                form="simple-cart-form"
              >

              <a
                href="{{ routes.cart_change_url }}?id={{ item.key }}&quantity={{ item.quantity | plus: 1 }}"
                class="simple-cart__quantity-btn"
                data-ajax-cart-request-button
                >+</a
              >
            </div>

            <a
              href="{{ item.url_to_remove }}"
              class="simple-cart__remove"
              data-ajax-cart-request-button
              >Remove</a
            >

            <!-- Error message area for this item -->
            <div data-ajax-cart-errors="{{ item.key }}"></div>
          </div>

          <div class="simple-cart__item-total">
            {{ item.final_line_price | money }}
          </div>
        </div>
      {% endfor %}
    {% endif %}
  </div>

  {% if cart.item_count > 0 %}
    <div class="simple-cart__footer">
      <div class="simple-cart__subtotal">
        <span>Subtotal</span>
        <span data-ajax-cart-bind="total_price | money_with_currency">
          {{- cart.total_price | money_with_currency -}}
        </span>
      </div>

      {% form 'cart', cart, id: 'simple-cart-form' %}
        <button type="submit" name="checkout" class="simple-cart__checkout">Checkout</button>
      {% endform %}

      <button class="simple-cart__continue" onclick="closeSimpleCart()">Continue Shopping</button>
    </div>
  {% endif %}
</div>

<div id="simple-cart-overlay" class="simple-cart-overlay" onclick="closeSimpleCart()"></div>

<script>
  // Prevent initialization issues by waiting for DOM content to load
  document.addEventListener('DOMContentLoaded', function () {
    // Initialize AJAX cart hooks
    setupSimpleCart();
  });

  function setupSimpleCart() {
    // Redirect cart links to open the drawer instead
    document.querySelectorAll('a[href="{{ routes.cart_url }}"]').forEach((link) => {
      link.addEventListener('click', function (e) {
        e.preventDefault();
        openSimpleCart();
      });
    });

    // Make drawer close when ESC key is pressed
    document.addEventListener('keydown', function (e) {
      if (e.key === 'Escape') {
        closeSimpleCart();
      }
    });

    // Listen for AJAX cart events
    document.addEventListener('liquid-ajax-cart:request-end', function (event) {
      const { requestState } = event.detail;

      // Open cart drawer after adding an item
      if (requestState.requestType === 'add' && requestState.responseData?.ok) {
        openSimpleCart();
      }

      // Close drawer when cart becomes empty
      if (requestState.responseData?.item_count === 0) {
        // Keep drawer open so the user can see it's empty, but release scroll lock
        document.body.style.overflow = '';
      }
    });

    // Make sure any existing cart button in product.liquid opens the drawer
    const addToCartForms = document.querySelectorAll('ajax-cart-product-form form');
    addToCartForms.forEach((form) => {
      form.addEventListener('submit', function (e) {
        // Let Liquid AJAX Cart handle the form submission
        // It will trigger the 'liquid-ajax-cart:request-end' event later
      });
    });

    // Expose global cart functions
    window.openSimpleCart = openSimpleCart;
    window.closeSimpleCart = closeSimpleCart;
  }

  function openSimpleCart() {
    const drawer = document.getElementById('simple-cart-drawer');
    const overlay = document.getElementById('simple-cart-overlay');

    drawer.classList.add('is-active');
    overlay.classList.add('is-active');
    document.body.style.overflow = 'hidden';

    // Force a cart refresh to ensure data is current
    fetch('/cart?view=ajax')
      .then((response) => response.text())
      .catch((error) => {
        console.error('Error refreshing cart:', error);
      });
  }

  function closeSimpleCart() {
    const drawer = document.getElementById('simple-cart-drawer');
    const overlay = document.getElementById('simple-cart-overlay');

    drawer.classList.remove('is-active');
    overlay.classList.remove('is-active');
    document.body.style.overflow = '';
  }
</script>
