<style>
  .newsletter-signup {
    padding: var(--space-m) var(--space-l);
    border-top: 1px solid var(--neutral-200);
  }

  .newsletter-signup__heading {
    margin: 0 0 var(--space-xs);
    font-size: 18px;
  }

  .newsletter-signup__text {
    margin-bottom: var(--space-s);
    font-size: 14px;
  }

  .newsletter-signup__form {
    width: 100%;
  }

  .newsletter-signup__row {
    margin-bottom: var(--space-xs);
    position: relative;
  }

  .newsletter-signup__input {
    width: 100%;
    padding: 10px;
    padding-right: 40px; /* Space for the icon */
    border: 1px solid var(--neutral-300);
  }

  .newsletter-signup__submit-icon {
    position: absolute;
    right: 15px;
    top: 50%;
    transform: translateY(-50%);
    cursor: pointer;
    background: none;
    border: none;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .newsletter-signup__checkbox-label {
    display: flex;
    align-items: flex-start;
    font-size: 12px;
    gap: var(--space-xs);
  }

  .newsletter-signup__checkbox {
    margin: 3px 0 0 0;
  }

  .newsletter-signup__success {
    padding: var(--space-s);
    background-color: var(--neutral-100);
    border-left: 3px solid var(--black);
    margin-bottom: var(--space-s);
  }
</style>

<div class="newsletter-signup" x-data="{ showForm: true, showSuccess: false }">
  <h3 class="newsletter-signup__heading">Newsletter</h3>

  <div class="newsletter-signup__text">
    <p>Sign up to receive updates, access to exclusive deals, and more.</p>
  </div>

  <div x-show="showSuccess" class="newsletter-signup__success">
    <p><strong>Thanks for signing up!</strong></p>
  </div>

  <div x-show="showForm">
    {% form 'customer', class: 'newsletter-signup__form' %}
      <input type="hidden" name="contact[tags]" value="newsletter">
      <input type="hidden" name="return_to" value="{{ request.path }}">

      <div class="newsletter-signup__row">
        <label class="visually-hidden" for="newsletter-signup-email">Email</label>
        <input
          type="email"
          name="contact[email]"
          id="newsletter-signup-email"
          class="newsletter-signup__input"
          placeholder="Enter email address"
          required
        >
        <button type="submit" class="newsletter-signup__submit-icon" aria-label="Submit">
          {% render 'icon-arrow-submit' %}
        </button>
      </div>

      <div class="newsletter-signup__row">
        <label class="newsletter-signup__checkbox-label">
          <input type="checkbox" class="newsletter-signup__checkbox" required>
          <span>I agree to receive email marketing. You can unsubscribe at any time.</span>
        </label>
      </div>
    {% endform %}
  </div>

  <script>
    // Wait for the DOM to be fully loaded
    document.addEventListener('DOMContentLoaded', function () {
      // Find our newsletter form
      const newsletterForm = document.querySelector('.newsletter-signup__form');

      if (newsletterForm) {
        // Create a hidden iframe for form submission
        const iframe = document.createElement('iframe');
        iframe.name = 'newsletter-submit-frame';
        iframe.style.display = 'none';
        document.body.appendChild(iframe);

        // Set up the form to submit to the iframe
        newsletterForm.target = 'newsletter-submit-frame';

        // Add a submit event to show success message after submission
        newsletterForm.addEventListener('submit', function (e) {
          // Let the form submit normally to the iframe
          // Get Alpine component
          const component = Alpine.closestComponent(newsletterForm);

          // After a short delay, show success message and hide form
          setTimeout(function () {
            component.showForm = false;
            component.showSuccess = true;
          }, 1000);
        });
      }
    });
  </script>
</div>
