<style>
  .newsletter-signup {
    padding: var(--space-m) var(--space-l);
    border-top: 1px solid var(--neutral-200);
  }

  .newsletter-signup__heading {
    margin: 0 0 var(--space-xs);
    font-size: 18px;
  }

  .newsletter-signup__text {
    margin-bottom: var(--space-s);
    font-size: 14px;
  }

  .newsletter-signup__form {
    width: 100%;
  }

  .newsletter-signup__row {
    margin-bottom: var(--space-xs);
    position: relative;
  }

  .newsletter-signup__input {
    width: 100%;
    padding: 10px;
    padding-right: 40px; /* Space for the icon */
    border: 1px solid var(--neutral-300);
  }

  .newsletter-signup__submit-icon {
    position: absolute;
    right: 15px;
    top: 50%;
    transform: translateY(-50%);
    cursor: pointer;
    background: none;
    border: none;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .newsletter-signup__checkbox-label {
    display: flex;
    align-items: flex-start;
    font-size: 12px;
    gap: var(--space-xs);
  }

  .newsletter-signup__checkbox {
    margin: 3px 0 0 0;
  }

  .newsletter-signup__success {
    padding: var(--space-s);
    background-color: var(--neutral-100);
    border-left: 3px solid var(--black);
    margin-bottom: var(--space-s);
  }
</style>

<div
  class="newsletter-signup"
  x-data="
    {
      status: 'idle',
      email: '',
      error: '',
      submitForm() {
        this.status = 'loading';

        // Get hCaptcha response if present
        const hcaptchaResponse = document.querySelector('[name=h-captcha-response]')?.value;

        // Create FormData from the form
        const formData = new FormData(this.$refs.form);

        // Create a hidden iframe for submission
        const iframe = document.createElement('iframe');
        iframe.name = 'newsletter-submit-frame';
        iframe.style.display = 'none';
        document.body.appendChild(iframe);

        // Set up the iframe load handler
        iframe.onload = () => {
          // First load is just the iframe creation, ignore it
          if (!this.$refs.form.hasAttribute('data-submitted')) {
            return;
          }

          // Check if submission was successful - look for success message in the iframe content
          try {
            const iframeContent = iframe.contentDocument || iframe.contentWindow.document;
            const successMessage = iframeContent.querySelector('.shopify-section .form-status-list .form-status-list__item--success');

            if (successMessage) {
              // Success - form was submitted
              this.status = 'success';
              this.email = '';
            } else {
              // No success message found - likely an error
              this.status = 'error';
              this.error = 'There was a problem submitting your form. Please try again.';
            }
          } catch (e) {
            // Cross-origin issues reading iframe or other error
            this.status = 'error';
            this.error = 'There was a problem submitting your form. Please try again.';
            console.error('Error:', e);
          }

          // Clean up
          setTimeout(() => {
            document.body.removeChild(iframe);
          }, 100);
        };

        // Set the form target to the iframe and submit
        this.$refs.form.setAttribute('data-submitted', 'true');
        this.$refs.form.target = 'newsletter-submit-frame';
        this.$refs.form.submit();
      }
    }
  "
  x-cloak
>
  <h3 class="newsletter-signup__heading">Newsletter</h3>

  <div class="newsletter-signup__text">
    <p>Sign up to receive updates, access to exclusive deals, and more.</p>
  </div>

  <!-- Success message (shown when status is 'success') -->
  <div
    x-show="status === 'success'"
    x-transition:enter="transition ease-out duration-300"
    x-transition:enter-start="opacity-0 transform scale-95"
    x-transition:enter-end="opacity-100 transform scale-100"
    class="newsletter-signup__success"
  >
    <p><strong>Thanks for signing up!</strong></p>
  </div>

  <!-- Error message -->
  <div
    x-show="status === 'error'"
    x-transition
    class="newsletter-signup__error"
    style="padding: var(--space-s); background-color: #FFF0F0; border-left: 3px solid #FF0000; margin-bottom: var(--space-s);"
  >
    <p><strong>Error:</strong> <span x-text="error"></span></p>
  </div>

  <!-- Form (hidden when status is 'success') -->
  <form
    x-show="status !== 'success'"
    x-ref="form"
    method="post"
    action="/contact#contact_form"
    id="contact_form"
    accept-charset="UTF-8"
    class="newsletter-signup__form"
    data-cptcha="true"
    @submit="submitForm"
  >
    <input type="hidden" name="form_type" value="customer">
    <input type="hidden" name="utf8" value="âœ“">
    <input type="hidden" name="contact[tags]" value="newsletter">

    <div class="newsletter-signup__row">
      <label class="visually-hidden" for="newsletter-signup-email">Email</label>
      <input
        type="email"
        name="contact[email]"
        id="newsletter-signup-email"
        class="newsletter-signup__input"
        placeholder="Enter email address"
        required
        x-model="email"
        :disabled="status === 'loading'"
      >

      <button
        type="submit"
        class="newsletter-signup__submit-icon"
        aria-label="Submit"
        :disabled="status === 'loading'"
      >
        <!-- Loading spinner (shown when status is 'loading') -->
        <svg
          x-show="status === 'loading'"
          class="animate-spin h-4 w-4"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
        >
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>

        <!-- Regular arrow icon (shown when status is not 'loading') -->
        <svg
          x-show="status !== 'loading'"
          width="12"
          height="10"
          viewBox="0 0 12 10"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path d="M6.6 1L10.6 5M10.6 5L6.6 9M10.6 5L1 5" stroke="#A0A0A0" stroke-width="0.75" stroke-linecap="square"></path>
        </svg>
      </button>
    </div>

    <div class="newsletter-signup__row">
      <label class="newsletter-signup__checkbox-label">
        <input type="checkbox" class="newsletter-signup__checkbox" required :disabled="status === 'loading'">
        <span>I agree to receive email marketing. You can unsubscribe at any time.</span>
      </label>
    </div>

    <div class="h-captcha" data-sitekey="f06e6c50-85a8-45c8-87d0-21a2b65856fe" data-size="invisible"></div>
  </form>
</div>

