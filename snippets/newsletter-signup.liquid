<style>
  [x-cloak] {
    display: none !important;
  }

  .newsletter-signup__error {
    color: #721c24;
  }

  .animate-spin {
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }
</style>
