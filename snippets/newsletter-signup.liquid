<style>
  .newsletter-signup {
    padding: var(--space-m) var(--space-l);
    border-top: 1px solid var(--neutral-200);
  }

  .newsletter-signup__heading {
    margin: 0 0 var(--space-xs);
    font-size: 18px;
  }

  .newsletter-signup__text {
    margin-bottom: var(--space-s);
    font-size: 14px;
  }

  .newsletter-signup__form {
    width: 100%;
  }

  .newsletter-signup__row {
    margin-bottom: var(--space-xs);
    position: relative;
  }

  .newsletter-signup__input {
    width: 100%;
    padding: 10px;
    padding-right: 40px;
    border: 1px solid var(--neutral-300);
  }

  .newsletter-signup__submit-icon {
    position: absolute;
    right: 15px;
    top: 50%;
    transform: translateY(-50%);
    cursor: pointer;
    background: none;
    border: none;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .newsletter-signup__checkbox-label {
    display: flex;
    align-items: flex-start;
    font-size: 12px;
    gap: var(--space-xs);
  }

  .newsletter-signup__checkbox {
    margin: 3px 0 0 0;
  }

  .newsletter-signup__success {
    padding: var(--space-s);
    background-color: var(--neutral-100);
    border-left: 3px solid var(--black);
    margin-bottom: var(--space-s);
  }

  .newsletter-signup__error {
    padding: var(--space-s);
    background-color: var(--neutral-100);
    border-left: 3px solid #e74c3c;
    margin-bottom: var(--space-s);
  }
</style>

<div
  class="newsletter-signup"
  x-data="
    {
      submitted: false,
      error: false,
      errorMessage: '',
      submitForm(event) {
        event.preventDefault();

        const form = event.target;
        const formData = new FormData(form);

        fetch('{{ routes.account_url }}', {
          method: 'POST',
          body: formData,
          headers: {
            'Accept': 'application/json'
          }
        })
        .then(response => {
          if (!response.ok) {
            throw new Error('Network response was not ok');
          }
          return response.json();
        })
        .then(data => {
          if (data.status && data.status !== 'success') {
            this.error = true;
            this.errorMessage = data.errors ? Object.values(data.errors).flat()[0] : 'Submission error, please try again.';
          } else {
            this.submitted = true;
            this.error = false;
            form.reset();
          }
        })
        .catch(error => {
          this.error = true;
          this.errorMessage = 'Submission error, please try again.';
          console.error('Error:', error);
        });
      }
    }
  "
>
  <h3 class="newsletter-signup__heading">Newsletter</h3>

  <div class="newsletter-signup__text">
    <p>Sign up to receive updates, access to exclusive deals, and more.</p>
  </div>

  <div x-show="error" class="newsletter-signup__error">
    <p x-text="errorMessage"></p>
  </div>

  <div x-show="submitted" class="newsletter-signup__success">
    <p><strong>Thanks for signing up!</strong></p>
  </div>

  <form
    x-show="!submitted"
    class="newsletter-signup__form"
    action="{{ routes.account_url }}"
    method="post"
    accept-charset="UTF-8"
    @submit.prevent="submitForm"
  >
    <input type="hidden" name="form_type" value="customer">
    <input type="hidden" name="utf8" value="âœ“">
    <input type="hidden" name="contact[tags]" value="newsletter">

    <div class="newsletter-signup__row">
      <label class="visually-hidden" for="newsletter-signup-email">Email</label>
      <input
        type="email"
        name="contact[email]"
        id="newsletter-signup-email"
        class="newsletter-signup__input"
        placeholder="Enter email address"
        required
      >
      <button type="submit" class="newsletter-signup__submit-icon" aria-label="Submit">
        {% render 'icon-arrow-submit' %}
      </button>
    </div>

    <div class="newsletter-signup__row">
      <label class="newsletter-signup__checkbox-label">
        <input type="checkbox" class="newsletter-signup__checkbox" required>
        <span>I agree to receive email marketing. You can unsubscribe at any time.</span>
      </label>
    </div>
  </form>
</div>
